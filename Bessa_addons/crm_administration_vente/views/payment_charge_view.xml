<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_payment_charge_form" model="ir.ui.view">
            <field name="name">account.payment.charge.form</field>
            <field name="model">account.payment</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_bank_id']" position="after">
                    <!--                    <field name="type"/>-->
                    <field name="type_paiement"  widget="badge"
                           decoration-success="type_paiement == 'month'" decoration-warning="type_paiement == 'year'"/>
                    <field name="duree" attrs="{'invisible' : [('type', 'in', ('versement','transfert'))]}"/>
                    <field name="company_id" invisible="1"/>
                    <field name="type" invisible="1"/>
                    <field name="year_ids" widget="many2many_tags" options="{'color_field': 'color'}"
                           attrs="{'readonly': [('state', '=', 'valid')],'invisible' : [('type', 'in', ('versement','transfert'))],'required': [('type', '=', 'charge')]}" />
                    <field name="month_ids" widget="many2many_tags" options="{'color_field': 'color'}"
                           attrs="{'readonly': [('state', '=', 'valid')],'invisible' : [('type', 'in', ('versement','transfert')),('type_paiement','!=','month')],'required': [('type', '=', 'charge'),('type_paiement','=','month')]}" />
                </xpath>

                <xpath expr="//field[@name='ref']" position="attributes">
                    <attribute name="string">Motif de paiement</attribute>
                </xpath>

                <xpath expr="//field[@name='ref']" position="after">
                    <!--                    <field name="project_id_charge" attrs="{'invisible' : [('partner_type', '=', 'supplier')]}"/>-->
                    <field name="charge_id" attrs="{'invisible' : [('type', 'in', ('versement','transfert'))]}"/>
                    <field name="num_dossier_charge" attrs="{'invisible' : [('type', 'in', ('versement','transfert'))]}"/>
                    <field name="order_id_charge" attrs="{'invisible' : [('type', 'in', ('versement','transfert'))]}"/>
                    <field name="project_id_charge" attrs="{'invisible' : [('type', 'in', ('versement','transfert'))]}"/>
                    <field name="product_name" attrs="{'invisible' : [('type', 'in', ('versement','transfert'))]}"/>
                    <field name="remise" widget="Radio" attrs="{'invisible' : [('type', 'in', ('versement','transfert'))]}"/>
                </xpath>
            </field>
        </record>

        <record id="view_payment_tree_mode_charge" model="ir.ui.view">
            <field name="name">account.payment.charge.tree</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='dl_date']" position="before">
                    <field name="charge_ok" invisible="1"/>
                    <field name="num_dossier_charge" groups="base.group_system,crm_administration_vente.group_crm_admin_vente_user ,crm_administration_vente.group_crm_admin_vente_manager"/>
                    <field name="order_id_charge" groups="base.group_system, crm_administration_vente.group_crm_admin_vente_user ,crm_administration_vente.group_crm_admin_vente_manager"/>
                    <field name="year_ids" widget="many2many_tags" options="{'color_field': 'color'}"
                           attrs="{'readonly': [('state', '=', 'valid')]}" groups="base.group_system, crm_administration_vente.group_crm_admin_vente_user ,crm_administration_vente.group_crm_admin_vente_manager" />
                    <field name="num_charge" groups="base.group_system, crm_administration_vente.group_crm_admin_vente_user ,crm_administration_vente.group_crm_admin_vente_manager"/>
                    <field name="project_id_charge" groups="base.group_system,crm_administration_vente.group_crm_admin_vente_user ,crm_administration_vente.group_crm_admin_vente_manager"/>
                </xpath>


            </field>
        </record>
        <record id="view_payment_charge_search" model="ir.ui.view">
            <field name="name">payment.charge.search</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_search"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <group col="10" colspan="4">
                        <field name="name"/>
                        <field name="charge_id"/>
                    </group>
                    <separator/>
                    <filter name="charge" string="Charge" domain="[('type', '=', 'charge')]"/>
                    <filter name="charge" string="Charge" domain="[('type', '=', 'charge')]"/>
                    <filter name="tag" string="Tag" domain="[('type', '=', 'charge')]"/>
                    <separator/>
                    <filter name="type" string="Type de Document" domain="[]" context="{'group_by':'type'}"/>
                </xpath>
            </field>
        </record>


        <record id="action_account_payments_charge" model="ir.actions.act_window">
            <field name="name">Payments Charge/ Tag</field>
            <field name="res_model">account.payment</field>
            <field name="view_mode">tree,kanban,form,graph</field>
            <field name="search_view_id" ref="view_payment_charge_search"/>
            <field name="domain">[('type','in',('charge','tag'))]</field>
            <field name="context">{
                'default_payment_type': 'inbound',
                'default_partner_type': 'customer',
                'search_default_inbound_filter': 1,
                'default_move_journal_types': ('bank', 'cash'),
                'hide_fields':1}
            </field>
            <field name="view_id" ref="view_payment_tree_mode_charge"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Register a payment
                </p>
                <p>
                    Payments are used to register liquidity movements. You can process those payments by your own means
                    or by using installed facilities.
                </p>
            </field>
        </record>

    </data>
</openerp>
