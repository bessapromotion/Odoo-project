<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_autorisation_travaux_filter">
            <field name="name">autorisation.travaux.filter</field>
            <field name="model">autorisation.travaux</field>
            <field name="arch" type="xml">
                <search string="Autorisation des travaux">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="project_id"/>
                    <field name="charge_recouv_id"/>
                    <field name="commercial_id"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <group expand="0" string="Grouper par...">
                        <filter name="project_id" string="Projet" domain="[]" context="{'group_by':'project_id'}"/>
                        <filter name="commercial_id" string="Commercial" domain="[]"
                                context="{'group_by':'commercial_id'}"/>
                        <filter name="charge_recouv_id" string="Chargé de Recouvrement" domain="[]"
                                context="{'group_by':'charge_recouv_id'}"/>
                        <filter name="company" string="Société" domain="[]" context="{'group_by':'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="view_autorisation_travaux_form" model="ir.ui.view">
            <field name="name">autorisation.travaux.form</field>
            <field name="model">autorisation.travaux</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_validate" string="Valider la demande" class="oe_highlight" states="draft"
                                type="object"
                                confirm="Voulez-vous Valider la demande d&#39;autorisation des travaux dossier ?"
                                groups="gestion_profil.group_adv,gestion_profil.group_res_adv,base.group_system"/>
                        <button name="action_cancel" string="Annuler le document" states="draft" type="object"
                                groups="base.group_system"/>
                        <field name="state" nolabel="1" widget="statusbar" statusbar_visible="draft,valid,cancel"/>
                        <button name="action_print" string="Imprimer l&#39;autorisation des travaux "
                                type="object"
                                states="valid" class="oe_highlight"
                                groups="gestion_profil.group_adv,gestion_profil.group_res_adv,base.group_system"/>
                    </header>
                    <sheet>
                        <field name="photo" widget='image' class="oe_avatar"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <group>

                                <field name="company_id" invisible="1"/>
                                <field name="reservation_id" attrs="{'readonly': [('state', '=', 'valid')]}"/>
                                <field name="order_id" readonly="1"/>
                                <field name="num_dossier" readonly="1"/>
                                <field name="project_id" readonly="1"/>
                                <field name="partner_id" groups="base.group_user" />
                                <field name="acquereur_id" groups="base.group_user"/>

                            </group>
                            <group>
                                <field name="date" string="Date"/>
                                <field name="phone"/>
                                <field name="mobile"/>
                                <field name="type_bien"/>
                                <field name="partner_id"/>
                                <field name="commercial_id" string="Commercial"/>
                                <field name="charge_recouv_id" string="Chargé Recouvrement"/>
                                <!--                                <field name="currency_id"/>-->
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="product"/>
                            </group>
                            <group>
                                <field name="avis" attrs="{'readonly': [('state', '=', 'valid')]}"/>
                                <field name="reserves"
                                       attrs="{'invisible': [('avis', '!=', 'reserve')],'readonly': [('state', '=', 'valid')]}"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Détail Travaux">
                                <group>
                                    <field name="detail_travaux" attrs="{'readonly': [('state', '=', 'valid')]}"/>
                                    <field name="delai" attrs="{'readonly': [('state', '=', 'valid')]}"/>
                                </group>
                            </page>
                            <page string="Les propriétaires de l'appartement">
                                 <field name="partner_ids" >
                                    <tree>
                                        <field name="product_id" invisible="1"/>
                                        <field name="name"/>
                                        <field name="type"/>
                                        <field name="origin"/>
                                        <field name="etat"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="autorisation_travaux_tree_view" model="ir.ui.view">
            <field name="name">autorisation.travaux.tree</field>
            <field name="model">autorisation.travaux</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="type_bien"/>
                    <field name="order_id" string="Bon de commande"/>
                    <field name="partner_id" groups="base.group_user" string="Client"/>
                    <field name="date" string="Date"/>
                    <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                    <field name="commercial_id" string="Commercial"/>
                    <field name="charge_recouv_id" string="Charge recouvrement"/>
                    <field name="state" widget="badge" decoration-info="state == 'draft'"
                           decoration-success="state == 'valid'" decoration-danger="state == 'cancel'"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_autorisation_travaux_tree_view">
            <field name="name">Autorisation des travaux</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">autorisation.travaux</field>
            <field name="view_mode">tree,form,pivot</field>
            <field name="view_id" ref="autorisation_travaux_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Cliquez ici pour créer une nouvelle demande d'autorisation des travaux .
                </p>
                <p>

                </p>
                <p>

                </p>
            </field>
        </record>

        <record id="action_autorisation_travaux_tree_view1" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="autorisation_travaux_tree_view"/>
            <field name="act_window_id" ref="action_autorisation_travaux_tree_view"/>
        </record>

        <record id="action_autorisation_travaux_tree_view2" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_autorisation_travaux_form"/>
            <field name="act_window_id" ref="action_autorisation_travaux_tree_view"/>
        </record>


    </data>
</openerp>