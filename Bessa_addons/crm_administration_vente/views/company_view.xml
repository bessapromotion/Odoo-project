<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_hr_company_form" model="ir.ui.view">
        <field name="name">res.hr.company.form</field>
        <field name="model">res.company</field>
        <field name="priority">20</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//notebook" position="inside">
                    <page name="configuration_ADV" string="Configuration ADV">
                        <group>
                            <group string="Autorisation de revente">
                                <field name="maitre"/>
                                <field name="adresse_maitre"/>
                            </group>
                        </group>
                    </page>

                </xpath>

            </data>
        </field>
    </record>

</odoo>
