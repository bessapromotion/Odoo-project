<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Article Form -->
        <record model="ir.ui.view" id="year_form_view">
            <field name="name">charge.year.form</field>
            <field name="model">charge.year</field>
            <field name="arch" type="xml">
                <form string="year">
                    <sheet>

                        <group>

                            <field name="name"/>
                            <field name="color" widget="color_picker"/>

                        </group>
                        <notebook>
                            <page string="Ordres de paiement " name="orders_lines">
                                <tree string="Ordres de paiement Lines">
                                    <field name="order_ids"/>
                                </tree>


                            </page>
                            <page string="Paiement" name="paiements_lines">
                                <tree string="Paiments Lines">
                                    <field name="paiement_ids"/>
                                </tree>

                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Article Tree -->
        <record model="ir.ui.view" id="year_tree_view">
            <field name="name">charge.year.tree</field>
            <field name="model">charge.year</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="color" widget="color_picker"/>
                    <field name="order_ids" optional="hide"/>
                    <field name="paiement_ids" optional="hide"/>

                </tree>
            </field>
        </record>

        <!-- Article Filter -->
        <record id="year_filter" model="ir.ui.view">
            <field name="name">charge.year.filter</field>
            <field name="model">charge.year</field>
            <field name="arch" type="xml">
                <search string="Article">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <!-- Article Tree View Action -->
        <record model="ir.actions.act_window" id="action_year_tree_view">
            <field name="name">Années de charges</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">charge.year</field>
            <field name="search_view_id" ref="year_filter"/>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="year_tree_view"/>
            <!--            <field name="context">{"search_default_en_cours":1}</field>-->
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer un nouvel an.
                </p>
                <p>

                </p>
                <p>

                </p>
            </field>
        </record>


    </data>
</openerp>
