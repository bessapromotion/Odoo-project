<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="ordre_paiement_charge_tree_view">
            <field name="name">ordre.paiement.tree</field>
            <field name="model">ordre.paiement.charge</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree create="false" string="Ordres de paiement" decoration-success="state == 'done'"
                      decoration-info="state == 'open'" decoration-muted="state == 'cancel'">
                    <field name="name"/>
                    <field name="charge_id"/>
                    <field name="date"/>
                    <field name="partner_id"/>
                    <field name="project_id"/>
                    <field name="commercial_id"/>
                    <field name="amount" sum="total"/>
                    <field name="mode_paiement_id"/>
                    <field name="objet"/>
                    <field name="state"/>
                    <field name="year_ids" widget="many2many_tags"
                           attrs="{'readonly': [('state', '=', 'valid')]}"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="ordre_paiement_charge_form_view">
            <field name="name">Ordre de paiement Charge</field>
            <field name="model">ordre.paiement.charge</field>
            <field name="arch" type="xml">
                <form string="Ordre de paiement des charges">
                    <header>
                        <button string="Enregistrer le paiement" name="action_print_recu_paiement" type="object"
                                class="oe_highlight" states="open"
                                groups="gestion_profil.group_caissier,base.group_system"/>/>
                        # group rajout�e par OMARI 28/04/2022
                        <!--                        <button name="action_cancel" string="Annuler l'ordre" states="open" type="object"/>-->
                        <field name="state" nolabel="1" widget="statusbar" statusbar_visible="open,done"/>
                    </header>
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <group>
                                <field name="charge_id"/>
                                <field name="partner_id"/>
                                <field name="partner_reference"/>
                                <field name="project_id"/>
                                <field name="commercial_id"/>
                                <field name="type_doc"/>
                                <field name="company_id" invisible="1"/>
                                <field name="remise" widget="Radio"/>
                            </group>
                            <group>
                                <field name="mode_paiement_id" options="{'no_create': True, 'no_open': True}"/>
                                <field name="doc_payment_id"
                                       attrs="{'invisible':[('mode_paiement_id','not in', (1,3))]}"/>
                                <field name="cheque_ordonateur"
                                       attrs="{'invisible':[('mode_paiement_id','not in', (1,3))]}"/>
                                <field name="cheque_domiciliation"
                                       attrs="{'invisible':[('mode_paiement_id','not in', (1,3))]}"/>
                                <field name="cheque_date" attrs="{'invisible':[('mode_paiement_id','not in', (1,3))]}"/>
                                <field name="cheque_objet"
                                       attrs="{'invisible':[('mode_paiement_id','not in', (1,3))]}"/>
                                <field name="cheque_type" attrs="{'invisible':[('mode_paiement_id','not in', (1,3))]}"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="objet"/>
                                <field name="amount"/>
                                <field name="amount_lettre" invisible="1"/>

                            </group>
                            <group>

                                <field name="type_paiement"	/>
                                <field name="duree" options='{"type": "number", "step": 1}'/>
                                <field name="year_ids" widget="many2many_tags" options="{'color_field': 'color'}"
                                       attrs="{'readonly': [('state', '=', 'valid')]}"/>
                                <field name="month_ids" widget="many2many_tags" options="{'color_field': 'color'}"
                                       attrs="{'readonly': [('state', '=', 'valid')],'invisible': [('type_paiement', '!=', 'month')]}"/>
                            </group>


                        </group>

                        <notebook>
                            <page string="Observation">
                                <field name="observation"/>
                            </page>
                        </notebook>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_ordre_paiement_charge_filter" model="ir.ui.view">
            <field name="name">ordre.paiement.search.view</field>
            <field name="model">ordre.paiement.charge</field>
            <field name="arch" type="xml">
                <search string="ordre de paiement Search">
                    <!-- permet une recherche "directe" -->
                    <group col="10" colspan="4">
                        <field name="name"/>
                        <field name="charge_id"/>
                        <field name="partner_id"
                               filter_domain="['|', '|',  ('partner_id.name', 'ilike', self), ('partner_id.code_client', 'ilike', self), ('partner_id.num_pi', 'ilike', self)]"/>
                        <field name="project_id"/>
                        <field name="observation"/>
                        <field name="type_doc"/>
                        <separator/>
                        <filter name="open" string="En instance de paiement" domain="[('state', '=', 'open')]"/>
                        <filter name="paid" string="Payés" domain="[('state', '=', 'done')]"/>
                        <filter name="cancel" string="Annulés" domain="[('state', '=', 'cancel')]"/>
                        <filter name="charge" string="Charges" domain="[('type_doc', '=', 'charge')]"/>
                        <filter name="tag" string="Tags" domain="[('type_doc', '=', 'tag')]"/>

                        <filter name="late" string="En retard"
                                domain="['&amp;', ('date', '&lt;', time.strftime('%%Y-%%m-%%d')), ('state', '=', 'open')]"/>
                        <separator/>

                    </group>
                    <!-- Permet le regroupement -->
                    <separator/>
                    <group expand="0" string="Grouper par">
                        <filter string="Commercial" name="commercial_id" context="{'group_by':'commercial_id'}"/>
                        <filter string="Projet" name="project_id" context="{'group_by':'project_id'}"/>
                        <filter string="Type document" name="type_doc" context="{'group_by':'type_doc'}"/>
                    </group>
                    <separator/>
                    <!-- permet un filtrage -->
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_ordre_paiement_tree_view_all">
            <field name="name">Ordre de paiement des charges</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ordre.paiement.charge</field>
            <!--        <field name="view_type">form</field>-->
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="ordre_paiement_charge_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Cliquez ici pour créer un nouvel ordre de paiement des charges /Tags.
                </p>
                <p>

                </p>
                <p>

                </p>
            </field>
        </record>


        <record model="ir.actions.act_window" id="action_ordre_paiement_charge_tree_view_open">
            <field name="name">Ordres en instances de paiements</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ordre.paiement.charge</field>
            <!--        <field name="view_type">form</field>-->
            <field name="view_mode">tree,form</field>
            <field eval="False" name="view_id"/>
            <field name="search_view_id" ref="view_ordre_paiement_charge_filter"/>
            <field name="domain">[('state', '=', 'open')]</field>
            <!--        <field name="context">{'default_type_id': 1, 'default_state':'draft'}</field>-->
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Aucun ordre de paiement a traiter.
                </p>
                <p>

                </p>
                <p>

                </p>
            </field>
        </record>

        <record id="action_ordre_paiement_charge_payment_tree_view1" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="ordre_paiement_charge_tree_view"/>
            <field name="act_window_id" ref="action_ordre_paiement_tree_view_all"/>
        </record>

        <record id="action_ordre_paiement_charge_payment_tree_view2" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="ordre_paiement_charge_form_view"/>
            <field name="act_window_id" ref="action_ordre_paiement_tree_view_all"/>
        </record>

        <record id="action_ordre_paiement_charge_payment_tree_view_open" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="ordre_paiement_charge_tree_view"/>
            <field name="act_window_id" ref="action_ordre_paiement_charge_tree_view_open"/>
        </record>

    </data>
</openerp>
