<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="print_ordre_paiement_wizard_form_view">
            <field name="name">print.ordre.paiement.charge.form</field>
            <field name="model">print.ordre.paiement.wizard.charge</field>
            <field name="arch" type="xml">
                <form string="Imprimer ordre de paiement">
                    <field name="state" invisible="1"/>
                    <group states="1">
                        <group>
                            <field name="charge_id"/>
                            <field name="date"/>
                            <field name="partner_id"/>
                        </group>
                        <group>

                            <field name="partner_reference"/>
                            <field name="project_id"/>
                            <field name="product"/>
                            <field name="remise" widget="Radio"/>
                            <!--                            <field name="commercial_id"/>-->
                        </group>
                        <group>
                            <field name="objet"/>
                            <field name="amount"/>
                            <field name="amount_lettre" invisible="1"/>
                            <field name="observation"/>
                            <field name="type_paiement"/>
                            <field name="duree" options='{"type": "number", "step": 1}'/>
                            <field name="year_ids" widget="many2many_tags" options="{'color_field': 'color'}"
                                   attrs="{'readonly': [('state', '=', 'valid')]}"
                                   invisible="context.get('charge_ok')"/>
                            <field name="month_ids" widget="many2many_tags" options="{'color_field': 'color'}"
                                   attrs="{'readonly': [('state', '=', 'valid')],'invisible': [('type_paiement', '=', 'year')]}"
                                   invisible="context.get('charge_ok')"/>

                        </group>
                        <group>
                            <field name="mode_paiement_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="cheque_num" attrs="{'invisible':[('mode_paiement_id','not in', (1,3,4))]}"/>
                            <field name="cheque_ordonateur"
                                   attrs="{'invisible':[('mode_paiement_id','not in', (1,3,4))]}"/>
                            <field name="cheque_domiciliation"
                                   attrs="{'invisible':[('mode_paiement_id','not in', (1,3,4))]}"/>
                            <!-- Field Date -->
                            <field name="cheque_date" string="Date Chèque"
                                   attrs="{'invisible':[('mode_paiement_id','not in', (1))]}"/>
                            <field name="cheque_date" string="Date Virement"
                                   attrs="{'invisible':[('mode_paiement_id','not in', (3))]}"/>
                            <field name="cheque_date" string="Date Versement"
                                   attrs="{'invisible':[('mode_paiement_id','not in', (4))]}"/>

                            <field name="cheque_objet" attrs="{'invisible':[('mode_paiement_id','not in', (1))]}"/>
                            <field name="cheque_type" attrs="{'invisible':[('mode_paiement_id','not in', (1))]}"/>
                        </group>
                    </group>
                    <group states="2">
                        <div class="row">
                            <div class="text-success col-lg-8">
                                Opération effectuée avec succés, veuillez consulter l'ordre de paiement créé dans le
                                menu [Suivi de dossier -> Paiements -> Ordres de paiement]
                            </div>
                        </div>
                    </group>

                    <footer states="1">
                        <button name="action_print" type="object" string="Imprimer" class="oe_highlight"/>
                        ou
                        <button special="cancel" string="Annuler"/>
                    </footer>
                    <footer states="2">
                        <button special="cancel" string="Fermer"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</openerp>
