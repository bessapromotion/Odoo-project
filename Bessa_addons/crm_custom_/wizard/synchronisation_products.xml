<odoo>
    <data>
        <record id="view_synchronisation_products_form" model="ir.ui.view">
            <field name="name">synchronisation.products.form</field>
            <field name="model">synchronisation.products.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Synchronisation avec BuyBessa">
                    <group>
                        <group>
                            <field name="project_id"/>
                        </group>
                    </group>
                    <footer>
                        <button class="oe_highlight" string="Synchroniser" name="send_all_products_per_project"
                                type="object"/>
                        <button class="oe_highlight" string="create synthese" name="create_records"
                                type="object"/>
                        <!--<button class="oe_highlight" string="Synchroniser nouveau" name="synchroniser_projet"
                                type="object"/> -->

                        <button class="oe_link" string="Annuler" special="cancel"/>
                    </footer>

                </form>
            </field>
        </record>

        <record id="synchronisation_products_action" model="ir.actions.act_window">
            <field name="name">Synchronisation avec BuyBessa</field>
            <field name="res_model">synchronisation.products.wizard</field>
            <field name="view_id" ref="view_synchronisation_products_form"/>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


    </data>


</odoo>