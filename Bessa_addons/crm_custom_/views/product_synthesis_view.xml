        <record id="product_synthesis_tree_view" model="ir.ui.view">
            <field name="name">product.synthesis.tree</field>
            <field name="model">product.synthesis</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree default_order='project_id'>
                    <field name="project_id" />
                    <field name="type_bien" />
                    <field name="format_id" />
                    <field name="nombre" />
                    <field name="sup_min"/>
                    <field name="sup_max"/>
                    <field name="prix_m2_min"/>
                    <field name="prix_m2_max"/>
                    <field name="prix_vente_min"/>
                    <field name="prix_vente_max"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_product_synthesis_tree_view">
            <field name="name">Synthése des produits</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.synthesis</field>
            <field name="view_mode">tree,form,pivot,kanban</field>
            <field name="view_id" ref="product_synthesis_tree_view"/>
