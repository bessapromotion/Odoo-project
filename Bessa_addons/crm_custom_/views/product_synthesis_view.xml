        <record model="ir.ui.view" id="view_product_synthesis_filter">
            <field name="name">product.synthesis.filter</field>
            <field name="model">product.synthesis</field>
            <field name="arch" type="xml">
                <search string="synthése du produit">
                    <field name="project_id"/>
                    <field name="format_id"/>
                     <!--<field name="type"/> -->
                    <group expand="0" string="Grouper par...">
                        <filter name="project_id" string="Projet" domain="[]" context="{'group_by':'project_id'}"/>
                        <filter name="format_id" string="Typologie" domain="[]"
                                context="{'group_by':'format_id'}"/>
                    </group>
                </search>
            </field>
        </record>
