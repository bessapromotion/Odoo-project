<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_category_product" model="ir.module.category">
        <field name="name">Product</field>
        <field name="sequence">200</field>
    </record>
    <record id="group_product_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_product"/>
    </record>
    <record id="group_product_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_product"/>
        <field name="implied_ids" eval="[(4, ref('crm_product.group_product_user')), (3, ref('base.group_user'))]"/>
    </record>
</odoo>
