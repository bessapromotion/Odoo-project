<odoo>
    <data>
        <record id="view_calcul_remise_pourcentage_form" model="ir.ui.view">
            <field name="name">calcul.remise.pourcentage.wizard.form</field>
            <field name="model">calcul.remise.pourcentage.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Application d'une remise">
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="project_id"/>
                            <field name="order_id"/>
                            <field name="mode_achat"/>
                        </group>
                        <group>
                            <field name="superficie"/>
                            <field name="prix_m2_actuel"/>
                            <field name="prix_vente_actuel"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="type"/>
                            <field name="nouveau_prix_m2" attrs="{'readonly': [('type','!=','1')]}"/>
                            <field name="nouveau_prix_vente" attrs="{'readonly': [('type','!=','2')]}"/>
                            <field name="amount" attrs="{'invisible': [('type','!=','3')],'readonly': [('type','!=','3')]}"/>
                        </group>
                        <group>
                            <field name="discount"/>
                        </group>
                    </group>
                    <footer>
                        <button class="oe_highlight" string="Apliquer" name="action_appliquer"
                                type="object"/>

                        <button class="oe_link" string="Annuler" special="cancel"/>
                    </footer>

                </form>
            </field>
        </record>

        <record id="calcul_remise_pourcentage_action" model="ir.actions.act_window">
            <field name="name">Calcul de la remise</field>
            <field name="res_model">calcul.remise.pourcentage.wizard</field>
            <field name="view_id" ref="view_calcul_remise_pourcentage_form"/>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


    </data>


</odoo>