<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!--        Reservation - Button-->
        <record model="ir.ui.view" id="hide_button_crm_reservation_form_view">
            <field name="model">crm.reservation</field>
            <field name="inherit_id" ref="crm_operation.crm_reservation_form_view_2"/>
            <field name="arch" type="xml">
                <!--        Reservation - detail remise-->
                <xpath expr="//group" position="after">
                    <group name="detail_discount" string="DÃ©tail Remise" attrs="{'invisible': [ ('discount_state', '=', False)]}"  >
                        <field name="discount_state"  widget="Radio"/>
                        <field name="type" attrs="{'invisible': [ ('discount_state', '=', False)]}" />
                         <field name="new_price_m2" attrs="{'invisible': [ ('discount_state', '=', False)]}"  />
                    </group>
                </xpath>
                <!--        Reservation - Button-->

                <xpath expr="//button[@name='action_validate']" position="attributes">
                    <attribute name="groups">gestion_profil.group_res_commercial,base.group_system,base.user_admin
                    </attribute>
                </xpath>
                <xpath expr="//button[@name='action_cancel']" position="attributes">
                    <attribute name="groups">gestion_profil.group_res_commercial,base.group_system,base.user_admin
                    </attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>