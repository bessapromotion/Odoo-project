<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="action_partner_visite_button" model="ir.actions.act_window">
            <field name="name">Visites Commerciales</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.visite</field>
            <field name="context">{'search_default_name': [active_id], 'default_name': active_id}</field>
            <!--<field name="domain"></field>-->
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="crm_visite.view_crm_visite_filter"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Cliquez pour cr√©er une visite.
                </p>
                <p>
                </p>
            </field>
        </record>

        <record id="view_partner_visite_form" model="ir.ui.view">
            <field name="name">res.partner.visite.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button
                            class="oe_stat_button"
                            type="action"
                            name="%(action_partner_visite_button)d"
                            attrs="{'invisible':[('nbr_visites','=', 0)]}"
                            context="{'default_name': active_id}"
                            icon="fa-tags">
                        <field string="Visite(s) Commerciale(s)" name="nbr_visites" widget="statinfo"/>
                    </button>
                </div>
            </field>
        </record>

    </data>
</openerp>
