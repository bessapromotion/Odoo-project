<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    <!-- visite -->
    <record model="ir.ui.view" id="crm_basculement_tree_view2">
        <field name="name">crm.basculement.tree2</field>
        <field name="model">crm.basculement</field>
        <field name="inherit_id" ref="crm_basculement.crm_basculement_tree_view"/>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='a_product_id']" position="replace">
                    <field name="a_product_id" string='Ancienne Affectation'/>
            </xpath>
            <xpath expr="//field[@name='a_product_id']" position="after">
                    <field name="a_project_id" /> 
                    <field name="b_product_id" string='Nouvelle  Affectation'/>
                    <field name="b_project_id" />                 
            </xpath>

        </field>
    </record>

    <record model="ir.ui.view" id="crm_basculement_form_view2">
        <field name="name">Basculement2</field>
        <field name="model">crm.basculement</field>
        <field name="inherit_id" ref="crm_basculement.crm_basculement_form_view"/>
        <field name="arch" type="xml">
                <xpath expr="//field[@name='order_id']" position="after">
                    <field name="num_dossier"/>
                </xpath>
        </field>
    </record>

    

    </data>
</openerp>
