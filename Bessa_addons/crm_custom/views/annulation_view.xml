<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="crm_desistement_tree_view_type_annulation">
            <field name="name">crm.desistement.tree.type.annulation</field>
            <field name="model">crm.desistement</field>
            <field name="inherit_id" ref="crm_remboursement.crm_desistement_tree_view"/>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type_annulation']" position="replace">
                       <field name="type_annulation" decoration-info="type_annulation == 'desistement'" decoration-danger="type_annulation == 'annulation'" decoration-success="type_annulation == 'changement'" widget="badge"/>
                </xpath>
            </field>
        </record>


    </data>
</openerp>
