<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

         <record id="action_product_partner_button" model="ir.actions.act_window">
            <field name="name">Propriétaires de l'appartement</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.partner</field>
            <field name="context">{'search_default_product_id': [active_id], 'default_product_id': active_id}</field>
            <!--<field name="domain"></field>-->
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_product_partner_filter"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Cliquez pour créer un nouveau propriétaire de l'appartement.
                </p>
                <p>
                </p>
            </field>
        </record>

        <record id="crm_product_template_3_search_view" model="ir.ui.view">
            <field name="name">crm.product.template.3.search.view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="crm_product.crm_product_template_2_search_view"/>
            <field name="arch" type="xml">
                <filter name="filter_livre" position="after">
                    <filter string="Désistement" name="filter_desistement" domain="[('etat', '=','Désistement')]"/>
                </filter>
                <filter name="bloc" position="after">
                    <filter string="Prix_m&#178;" name="prix_m2" context="{'group_by':'prix_m2'}"/>
                    <filter string="Prix_global" name="price_2" context="{'group_by':'price_2'}"/>
                </filter>
            </field>
        </record>

        <record id="view_crm_product_template_form_2" model="ir.ui.view">
            <field name="name">crm.product.template.form.inherit.2</field>
            <field name="model">product.template</field>
            <field name="priority">2</field>
            <field name="inherit_id" ref="crm_product.view_crm_product_template_form"/>
            <field name="arch" type="xml">
                <data>
                    <!--<xpath expr="//notebook" position="inside"><page string="Liste des propriétaires ">
                        <field name="partner_ids" widget="section_and_note_one2many">
                            <tree default_order='create_date'>
                                <field name="product_id" invisible="1"/>
                                <field name="name"/>
                                <field name="type"/>
                                <field name="origin"/>
                                <field name="etat"/>
                            </tree>
                        </field>
                    </page>

                    </xpath> -->
                    <div name="button_box" position="inside">
                        <button
                            class="oe_stat_button"
                            type="action"
                            name="%(action_product_partner_button)d"
                            attrs="{'invisible':[('nbr_partners','=', 0)]}"
                            context="{'default_name': active_id}"
                            icon="fa-users">
                        <field string="Propriétaires Appartements" name="nbr_partners" widget="statinfo"/>
                      </button>
                </div>
                    <xpath expr="//field[@name='surf_utile_com']" position="after">
                        <field name="app_id"/>
                    </xpath>

                    <xpath expr="//group[@name='group2']" position="replace">
                        <group name="group2">
                            <field name="manager"
                                   attrs="{'invisible': [('etat', 'not in', ('Bloqué P','Bloqué C','Bloqué T'))]}"/>
                            <field name="reservataire"
                                   attrs="{'invisible': [('etat', 'not in', ('Bloqué P','Bloqué C','Bloqué T'))]}"/>
                        </group>
                    </xpath>
                </data>
            </field>
        </record>
        <record id="view_crm_product_template_tree_2" model="ir.ui.view">
            <field name="name">product.template.tree.2</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='name']" position="after">
                        <field name="superficie"/>
                        <field name="prix_m2"/>
                    </xpath>
                </data>
            </field>
        </record>


    </data>
</openerp>
