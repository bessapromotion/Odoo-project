<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="report_cahier_charge">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <style>
                        * { font-family:Arial;}

                        .report-header-table { font-size: 14px; }
                        .report-header-table tr,
                        .report-header-table td { border: 1px solid #999999; }
                        .report-header-table td { width: 50%; text-align: center; }

                        .report-title { font-size: 2rem; text-align: center; }

                        .contract-article {margin-bottom: 0;page-break-inside: avoid; }
                        .contract-article_title { text-transform: uppercase; }
                        .contract-article_content > p { margin-bottom: 0; }


                    </style>

                    <div>
                        <div class="report-title">
                            <strong>
                                <u>CAHIER DES CHARGES</u>
                            </strong>
                        </div>
                        <br/>
                        <br/>
                        <br/>
                        <!-- Articles -->
                        <div>
                            <t t-foreach="o.article_ids" t-as="a">
                                <t t-if="a">
                                    <div class="contract-article">
                                        <u>
                                            <strong>
                                                <span t-field="a.name"/>
                                            </strong>
                                        </u>
                                        <div class="contract-article_content">
                                            <t t-raw="a.set_values()"/>
                                        </div>
                                    </div>
                                    <br/>
                                </t>
                            </t>
                        </div>


                        <!-- Signature -->
                        <div>
                            <br/>
                            <br/>
                            <div style="padding-top: 2px; width:100%;text-align:center">
                                <div style="float: left;width:50%;">
                                    <strong>
                                        <u>Le promoteur</u>
                                    </strong>

                                </div>
                                <div style="float: right;width:50%;padding-right:40px">
                                    <strong>
                                        <u>
                                            <div style="">L&#39;Acqu&#233;rreur</div>
                                        </u>
                                    </strong>
                                    <div style="">(Lu et Approuv&#233;)</div>
                                    <div style="margin-top:0px;">Le :
                                        <span t-field="o.date"/>
                                    </div>
                                </div>

                            </div>


                        </div>

                    </div>

                </t>
            </t>
        </t>
    </template>

</odoo>
