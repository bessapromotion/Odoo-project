<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_decision_affectation_filter">
            <field name="name">decision.affectation.filter</field>
            <field name="model">decision.affectation</field>
            <field name="arch" type="xml">
                <search string="Décicion d'affectation">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="project_id"/>
                    <field name="charge_recouv_id"/>
                    <field name="mode_achat"/>
                    <field name="commercial_id"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <group expand="0" string="Grouper par...">
                        <filter name="project_id" string="Projet" domain="[]" context="{'group_by':'project_id'}"/>
                        <filter name="commercial_id" string="Commercial" domain="[]"
                                context="{'group_by':'commercial_id'}"/>
                        <filter name="charge_recouv_id" string="Chargé de Recouvrement" domain="[]"
                                context="{'group_by':'charge_recouv_id'}"/>
                        <filter name="company" string="Société" domain="[]" context="{'group_by':'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="view_decision_affectation_form" model="ir.ui.view">
            <field name="name">decision.affectation.form</field>
            <field name="model">decision.affectation</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_validate" string="Valider le dossier" class="oe_highlight" states="draft"
                                type="object"
                                confirm="Voulez-vous Valider la d&#233;cision d'affectation ?"
                                groups="gestion_profil.group_adv,gestion_profil.group_res_adv,base.group_system"/>
                        <button name="add_partner_id" string="Ajouter le réservataire" class="oe_highlight" states="draft"
                                type="object"
                                groups="gestion_profil.group_adv,gestion_profil.group_res_adv,base.group_system"/>
                        <button name="action_cancel" string="Annuler le document" states="draft" type="object"
                                groups="base.group_system"/>
                        <field name="state" nolabel="1" widget="statusbar" statusbar_visible="draft,valid,cancel"/>
                        <button name="action_print" string="Imprimer la d&#233;cision d&#39;affectation" type="object"
                                states="valid" class="oe_highlight"
                                groups="gestion_profil.group_adv,gestion_profil.group_res_adv,base.group_system"/>
                    </header>
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <group>

                                <field name="company_id" invisible="1"/>
                                <field name="reservation_id" attrs="{'readonly': [('state', '=', 'valid')]}"/>
                                <field name="order_id" readonly="1"/>
                                <field name="mode_achat" readonly="1"/>
                                <field name="num_dossier" readonly="1"/>
                                <field name="project_id" readonly="1"/>
                                <field name="partner_id" groups="base.group_user" string="Client"/>
                                <field name="signataire" />
                                <field name="new_partner_id" attrs="{'invisible': [('signataire', '=', False)]}"/>
                            </group>
                            <group>
                                <field name="date" string="Date"/>
                                <field name="type_bien"/>
                                <field name="partner_reservation_id"/>
                                <field name="commercial_id" string="Commercial"/>
                                <field name="charge_recouv_id" string="Chargé Recouvrement"/>
                                <field name="currency_id"/>
                                <field name="company_id"/>
                            </group>
                        </group>
                        <group>
                            <field name="product"/>
                            <field name="amount_untaxed" string="Montant HT"/>
                            <field name="amount_tva" string="Montant TVA"/>
                            <field name="amount_ttc" string="Montant TTC"/>

                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="decision_affectation_tree_view" model="ir.ui.view">
            <field name="name">decision.affectation.tree</field>
            <field name="model">decision.affectation</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="type_bien"/>
                    <field name="order_id" string="Bon de commande"/>
                    <field name="mode_achat" />
                    <field name="partner_id" groups="base.group_user" string="Client"/>
                    <field name="date" string="Date"/>
                    <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                    <field name="commercial_id" string="Commercial"/>
                    <field name="charge_recouv_id" string="Charge recouvrement"/>
                    <field name="state" widget="badge" decoration-info="state == 'draft'"
                           decoration-success="state == 'valid'" decoration-danger="state == 'cancel'" />
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_decision_affectation_tree_view">
            <field name="name">Décision d'affectation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">decision.affectation</field>
            <field name="view_mode">tree,form,pivot,kanban</field>
            <field name="view_id" ref="decision_affectation_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Cliquez ici pour créer une nouvelle décision d'affectation de client.
                </p>
                <p>

                </p>
                <p>

                </p>
            </field>
        </record>


    </data>
</openerp>