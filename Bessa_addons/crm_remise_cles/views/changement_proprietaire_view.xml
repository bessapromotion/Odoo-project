<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_changement_proprietaire_filter">
            <field name="name">changement.proprietaire.filter</field>
            <field name="model">changement.proprietaire</field>
            <field name="arch" type="xml">
                <search string="changement_proprietaire">
                    <field name="name"/>
                    <field name="old_partner_id"/>
                    <field name="partner_id"/>
                    <field name="new_partner_id"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <group expand="0" string="Grouper par...">
                        <filter name="project_id" string="Projet" domain="[]" context="{'group_by':'project_id'}"/>
                        <filter name="old_partner_id" string="Ancien proprietaire" domain="[]"
                                context="{'group_by':'old_partner_id'}"/>
                        <filter name="new_partner_id" string="Nouveau proprietaire" domain="[]"
                                context="{'group_by':'new_partner_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="view_changement_proprietaire_form" model="ir.ui.view">
            <field name="name">changement.proprietaire.form</field>
            <field name="model">changement.proprietaire</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_validate" string="Valider le dossier" class="oe_highlight" states="draft"
                                type="object"
                                confirm="Voulez-vous Valider le dossier de Remise des propri&#232;s ?"
                                groups="gestion_profil.group_adv,gestion_profil.group_res_adv,base.group_system"/>
                        <button name="action_cancel" string="Annuler le document" states="draft" type="object"
                                groups="base.group_system"/>
                        <field name="state" nolabel="1" widget="statusbar" statusbar_visible="draft,valid"/>
                    </header>
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <group>

                                <field name="company_id" invisible="1"/>
                                <field name="reservation_id" attrs="{'readonly': [('state', '=', 'valid')]}"/>
                                <field name="project_id" readonly="1"/>
                                <field name="old_partner_id"/>
                                <field name="partner_id"/>
                                <field name="new_partner_id"  attrs="{'readonly': [('state', '=', 'valid')]}"/>
                            </group>
                            <group>
                                <field name="date" string="Date"  attrs="{'readonly': [('state', '=', 'valid')]}"/>
                                <field name="currency_id"  attrs="{'readonly': [('state', '=', 'valid')]}"/>
                            </group>
                        </group>
                        <group>
                            <field name="product"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="changement_proprietaire_tree_view" model="ir.ui.view">
            <field name="name">changement.proprietaire.tree</field>
            <field name="model">changement.proprietaire</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="order_id" string="Bon de commande"/>
                    <field name="old_partner_id"/>
                    <field name="partner_id"/>
                    <field name="new_partner_id"/>
                    <field name="date" string="Date"/>
                    <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_changement_proprietaire_tree_view">
            <field name="name">Changement de proprietaire</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">changement.proprietaire</field>
            <field name="view_mode">tree,form,pivot</field>
            <field name="view_id" ref="changement_proprietaire_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Cliquez ici pour cr√©er un nouveau dossier de changement de proprietaire.
                </p>
                <p>

                </p>
                <p>

                </p>
            </field>
        </record>


    </data>
</openerp>