<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="order_view_tree_3" model="ir.ui.view">
            <field name="name">sale.order.tree.3</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="after">
                    <field name="changement_proprietaire_id" optional="hide"/>
                </xpath>

            </field>
        </record>

        <record id="order_view_form_3" model="ir.ui.view">
            <field name="name">sale.order.form.3</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="changement_proprietaire" invisible="1"/>
                    <field name="changement_proprietaire_id"
                           attrs="{'invisible':[('changement_proprietaire','=', False)]}"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
