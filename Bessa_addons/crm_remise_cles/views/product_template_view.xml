<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_partners_form_view" model="ir.ui.view">
        <field name="name">product.partners.form.view</field>
        <field name="model">product.template</field>
        <field name="priority">20</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//notebook" position="inside">
                    <page string="Liste des propriÃ©taires ">
                        <field name="partner_ids" widget="section_and_note_one2many">
                            <tree default_order='create_date'>
                                <field name="product_id" invisible="1"/>
                                <field name="name"/>
                                <!--<field name="type"/> -->
                                <field name="origin"/>
                                <field name="etat"/>
                            </tree>
                        </field>
                    </page>

                </xpath>

            </data>
        </field>
    </record>

</odoo>
