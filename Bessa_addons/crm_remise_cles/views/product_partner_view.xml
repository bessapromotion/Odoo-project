<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_product_partner_filter">
            <field name="name">product.partner.filter</field>
            <field name="model">product.partner</field>
            <field name="arch" type="xml">
                <search string="Propriétaires du bien">
                    <field name="name"/>
                    <field name="product_id"/>
                    <field name="type"/>
                    <group expand="0" string="Grouper par...">
                        <filter name="product_id" string="Bien" domain="[]" context="{'group_by':'product_id'}"/>
                        <filter name="name" string="Client" domain="[]"
                                context="{'group_by':'name'}"/>
                        <filter name="type" string="Type" domain="[]"
                                context="{'group_by':'type'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="view_product_partner_form" model="ir.ui.view">
            <field name="name">product.partner.form</field>
            <field name="model">product.partner</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>

                        <group>
                            <field name="name"/>
                            <field name="product_id"/>
                            <field name="type"/>

                        </group>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="product_partner_tree_view" model="ir.ui.view">
            <field name="name">product.partner.tree</field>
            <field name="model">product.partner</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="product_id" invisible="1"/>
                    <field name="name"/>
                    <field name="type"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_product_partner_tree_view">
            <field name="name">Propriétaires du bien</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.partner</field>
            <field name="view_mode">tree,form,pivot,kanban</field>
            <field name="view_id" ref="product_partner_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Cliquez ici pour créer un nouveau proprietaire.
                </p>

            </field>
        </record>


    </data>
</openerp>