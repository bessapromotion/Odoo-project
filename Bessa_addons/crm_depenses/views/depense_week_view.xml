<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_week_form" model="ir.ui.view">
        <field name="name">depense.week.form</field>
        <field name="model">depense.week</field>
        <field name="arch" type="xml">
            <form string="Semaine">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_week_tree" model="ir.ui.view">
        <field name="name">depense.week.tree</field>
        <field name="model">depense.week</field>
        <field name="arch" type="xml">
            <tree string="Semaine" create="1" delete="1" editable="top">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_depense_week" model="ir.actions.act_window">
        <field name="name">Semaine</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">depense.week</field>
        <field name="view_mode">tree,form</field>
    </record>


</odoo>
