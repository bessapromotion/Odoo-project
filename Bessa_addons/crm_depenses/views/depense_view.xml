<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="crm_depense_pivot_view">
            <field name="name">crm.depense.pivot</field>
            <field name="model">crm.depense</field>
            <field name="arch" type="xml">
                <pivot string="Journal Recettes Dépenses" sample="1">
                    <field name="date" type="row"/>
                    <field name="name" type="row"/>
                    <field name="mt_debit" type="measure"/>
                    <field name="mt_credit" type="measure"/>
                    <field name="mt_balance" type="measure"/>
                    <field name="mt_cumulated_balance" type="measure"/>
                </pivot>
            </field>
        </record>


        <record model="ir.ui.view" id="crm_depense_search_view">
            <field name="name">crm.depense.filter</field>
            <field name="model">crm.depense</field>
            <field name="arch" type="xml">
                <search string="Recettes / Dépenses">
                    <field name="name"/>
                    <field name="benificiaire"/>
                    <field name="type_id"/>
                    <field name="project_id"/>
                    <field name="nature_id"/>
                    <field name="debit_ok"/>
                    <field name="credit_ok"/>
                    <filter name="debit" string="Recette" domain="[('debit_ok', '=', True)]"/>
                    <filter name="credit" string="Dépense" domain="[('credit_ok', '=', True)]"/>
                    <filter name="mouvement" string="Mouvement de caisse" domain="[('nature_id', '=', 26)]"/>
		    <filter name="charge" string='Charges copropriétés' domain="[('nature_id', '=', 27)]"/>
                    <filter name="tag" string='Tags' domain="[('nature_id', '=', 28)]"/>
                    <filter name="versement" string='Versements Client' domain="[('nature_id', '=', 1)]"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <filter name="today" string="Ajourd'hui" domain="[('date', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00')),('date', '&lt;=',datetime.datetime.now().strftime('%Y-%m-%d 23:23:59'))]"/>
                    <group expand="0" string="Grouper par...">
                        <filter name="type_id" string="Type" domain="[]" context="{'group_by':'type_id'}"/>
                        <filter name="project_id" string="Projet" domain="[]" context="{'group_by':'project_id'}"/>
                        <filter name="nature_id" string="Nature" domain="[]" context="{'group_by':'nature_id'}"/>
                        <filter name="benificiaire" string="Bénificiaire" domain="[]" context="{'group_by':'benificiaire'}"/>
                        <filter name="state" string="Etat" domain="[]"
                                context="{'group_by':'state'}"/>
                        <filter name="company" string="Société" domain="[]" context="{'group_by':'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record model="ir.ui.view" id="crm_depense_form_view">
            <field name="name">crm.depense.form</field>
            <field name="model">crm.depense</field>
            <field name="arch" type="xml">
                <form string="Journal des recettes et dépenses" duplicate="false">
                    <header>
                        <button name="action_validate" string="Valider la demande" class="oe_highlight"
                                type="object" states="draft"/>

                        <button name="print_fiche_depense" string="Imprimer la fiche de dépense" class="oe_highlight"
                                type="object" attrs="{'invisible': ['|', ('nature_id', 'in',  (26,27,28,41,12)), ('state', '!=', 'valid')]}" />
                        <button name="print_fiche_mouvement" string="Imprimer la fiche de mouvement" class="oe_highlight"
                                type="object" attrs="{'invisible': ['|', ('nature_id', '!=', 26), ('state', '!=', 'valid')]}" />
                        <button name="print_recu_paiement" string="Imprimer le recu de paiement" class="oe_highlight"
                                type="object" attrs="{'invisible': ['|', ('nature_id', 'not in', (27,28,12,41)), ('state', '!=', 'valid')]}" />
                        <button name="action_cancel" string="Annuler la fiche" type="object"
                                groups="base.group_system,gestion_profil.group_comptable_stock"/>
                        <field name="state" nolabel="1" widget="statusbar"
                               statusbar_visible="draft,open,valid,done,cancel"/>

                    </header>
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <group>
                                <field name="date" attrs="{'readonly':[('state','!=', 'draft')]}"/>
                                 <field name="type_id" attrs="{'readonly':[('state','!=', 'draft')]}" options='{"no_open": True, "no_create": True}'/>
                                <field name="project_id" attrs="{'readonly':[('state','!=', 'draft')]}" options='{"no_open": True, "no_create": True}' domain="[('type_id', '=', type_id)]"/>
                                <field name="libelle" attrs="{'readonly':[('state','!=', 'draft')]}"/>
                                <field name="nature_id" attrs="{'readonly':[('state','!=', 'draft')]}" options="{'no_open': True}"/>
                                <field name="type_ben_id"  attrs="{'readonly':[('state','!=', 'draft')]}" options="{'color_field': 'color','no_open': True}" />
                                <field name="employee_id" attrs="{'readonly':[('state','!=', 'draft')],'invisible':[('type_ben_id','!=', 1)]}" options='{"no_open": True, "no_create": True}'/>
                                <field name="partner_id" attrs="{'readonly':[('state','!=', 'draft')],'invisible':[('type_ben_id','=', 1)]}" options='{"no_open": True, "no_create": True}'/>
                                <field name="mode_achat" attrs="{'invisible':[('type_ben_id','!=', 3)]}"/>
                                <field name="company_id" attrs="{'readonly':[('state','!=', 'draft')]}" options="{'no_open': True}"/>
                                <field name="department_id" attrs="{'readonly':[('type_ben_id','=', 1)],'invisible':[('type_ben_id','!=', 1)]}" force_save="1" options='{"no_open": True, "no_create": True}'/>
                                <field name="bloc" attrs="{'readonly':[('state','!=', 'draft')],'invisible':[('nature_id','not in', (27,28))],'required':[('nature_id','in', (27,28))]}"   />
                                <field name="periode" attrs="{'readonly':[('state','!=', 'draft')],'invisible':[('nature_id','not in', (27,28))],'required':[('nature_id','in', (27,28))]}" />
				<field name="origin_fonds" attrs="{'readonly':[('state','!=', 'draft')],'invisible':[('nature_id','!=', 26)]}"   />
                                <field name="destination_fonds" attrs="{'readonly':[('state','!=', 'draft')],'invisible':[('nature_id','!=', 26)]}"  />
                            </group>
                            <group>
                                <field name="month" force_save="1"/>
                                <field name="week" force_save="1"/>
                                <field name="credit_ok" attrs="{'readonly':[('state','!=', 'draft')]}"/>
                                <field name="mt_credit" attrs="{'readonly': ['|', ('state','!=', 'draft'), ('debit_ok','=',True)]}"/>
                                <field name="debit_ok" attrs="{'readonly':[('state','!=', 'draft')]}"/>
                                <field name="mt_debit" attrs="{'readonly': ['|', ('state','!=', 'draft'), ('credit_ok','=',True)]}"/>                                <field name="mt_balance"  force_save="1"/>
                                <field name="mt_cumulated_balance" force_save="1" />
                                <field name="tresorerie"
                                       attrs="{'readonly':[('state','!=', 'draft')]}"/>
                                <field name="compte_id"
                                       attrs="{'readonly':[('state','!=', 'draft')]}" domain="[('type', '=', tresorerie),('company_id', '=',company_id)]"/>
                            </group>
                        </group>
                                 <group>
                                     <field name="benificiaire" attrs="{'readonly':[('state','!=', 'draft')]}"/>
                                     <field name="tags_ids" widget="many2many_tags" options="{'color_field': 'color'}" force_save="1"/>
                                     <field name="origin" attrs="{'readonly':[('state','!=', 'draft')]}"/>
                                 </group>
                        <notebook>
                            <page string="Observation">
                                <group>
                                        <field name="observation" attrs="{'readonly':[('state','!=', 'draft')]}"/>
                                    </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="crm_depense_tree_view" model="ir.ui.view">
            <field name="name">crm.depense.tree</field>
            <field name="model">crm.depense</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree default_order='create_date' >
                    <field name="create_date" optional="hide"/>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="origin" />
                    <field name="mode_achat" />
                    <field name="month" force_save="1"/>
                    <field name="week" force_save="1"/>
                    <field name="type_id"/>
                    <field name="project_id"/>
                    <field name="nature_id" widget="badge" decoration-info="nature_id == 27" decoration-danger="nature_id == 28"
                           decoration-success="nature_id == 1" decoration-warning="nature_id == 26" />
                    <field name="libelle"/>
                    <field name="type_ben_id" />
                    <field name="benificiaire"/>
                    <field name="tags_ids"  widget="many2many_tags"  options="{'color_field': 'color'}"/>
                    <field name="mt_debit" sum="Total Débit"/>
                    <field name="mt_credit" sum="Total Crédit"/>
                    <field name="mt_balance" sum="Total Balance"/>
                    <field name="mt_cumulated_balance" />
                    <field name="tresorerie"/>
                    <field name="compte_id"/>
                    <field name="state" widget="badge" decoration-info="state == 'draft'"
                           decoration-success="state == 'valid'" decoration-warning="state == 'cancel'"/>
                    <field name="company_id" />
                    <field name="department_id" force_save="1" />

                </tree>
            </field>
        </record>


        <record model="ir.actions.act_window" id="action_journal_recette_depenses">
            <field name="name">Journal</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.depense</field>
            <field name="context">{'search_default_today': 1, 'pivot_measures': ['__count'],}</field>
            <!--        <field name="view_type">form</field>-->
            <field name="view_mode">tree,form,pivot</field>
            <field name="view_id" ref="crm_depense_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Cliquez ici pour créer une nouvelle fiche de dépenses.
                </p>
                <p>

                </p>
                <p>

                </p>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_journal_recette">
            <field name="name">Journal de recette</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.depense</field>
            <field name="domain">[('debit_ok','=',True)]</field>
            <field name="context">{'search_default_today': 1,'search_default_debit': 1,'default_debit_ok':True}</field>
            <!--        <field name="view_type">form</field>-->
            <field name="view_mode">tree,form,pivot</field>
            <field name="view_id" ref="crm_depense_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Cliquez ici pour créer une nouvelle fiche de dépenses.
                </p>
                <p>

                </p>
                <p>

                </p>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_journal_depense">
            <field name="name">Journal de dépense</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.depense</field>
            <field name="domain">[('credit_ok','=',True)]</field>
            <field name="context">{'search_default_today': 1,'search_default_credit': 1, 'default_credit_ok':True}</field>
            <!--        <field name="view_type">form</field>-->
            <field name="view_mode">tree,form,pivot</field>
            <field name="view_id" ref="crm_depense_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Cliquez ici pour créer une nouvelle fiche de dépenses.
                </p>
                <p>

                </p>
                <p>

                </p>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_journal_mouvement">
            <field name="name">Mouvements de caisse</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.depense</field>
            <field name="domain">[('nature_id.id','=',26)]</field>
            <field name="context">{'search_default_today': 1,'search_default_mouvement':1,'default_nature_id':26,'default_type_id':2}</field>
            <!--        <field name="view_type">form</field>-->
            <field name="view_mode">tree,form,pivot</field>
            <field name="view_id" ref="crm_depense_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Cliquez ici pour créer un nouveau mouvement de caisse.
                </p>
                <p>

                </p>
                <p>

                </p>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_journal_versement_client">
            <field name="name">Versments Client</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.depense</field>
            <field name="domain">[('nature_id.id','=',1)]</field>
            <field name="context">{'search_default_today': 1,'search_default_versement':1,'default_nature_id':1}</field>
            <!--        <field name="view_type">form</field>-->
            <field name="view_mode">tree,form,pivot</field>
            <field name="view_id" ref="crm_depense_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Cliquez ici pour créer un nouveau mouvement de caisse.
                </p>
                <p>

                </p>
                <p>

                </p>
            </field>
        </record>
    </data>
</openerp>
