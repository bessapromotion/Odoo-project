<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_project_form" model="ir.ui.view">
        <field name="name">depense.project.form</field>
        <field name="model">depense.project</field>
        <field name="arch" type="xml">
            <form string="Projet">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="type_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_project_tree" model="ir.ui.view">
        <field name="name">depense.project.tree</field>
        <field name="model">depense.project</field>
        <field name="arch" type="xml">
            <tree string="Projet" create="1" delete="1" >
                <field name="name"/>
                <field name="type_id"/>
            </tree>
        </field>
    </record>

    <record id="action_depense_project" model="ir.actions.act_window">
        <field name="name">Projet</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">depense.project</field>
        <field name="view_mode">tree,form</field>
    </record>


</odoo>
