<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_nature_form" model="ir.ui.view">
        <field name="name">depense.nature.form</field>
        <field name="model">depense.nature</field>
        <field name="arch" type="xml">
            <form string="Nature">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_nature_tree" model="ir.ui.view">
        <field name="name">depense.nature.tree</field>
        <field name="model">depense.nature</field>
        <field name="arch" type="xml">
            <tree string="Nature" create="1" delete="1" editable="top">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_depense_nature" model="ir.actions.act_window">
        <field name="name">Nature</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">depense.nature</field>
        <field name="view_mode">tree,form</field>
    </record>


</odoo>
