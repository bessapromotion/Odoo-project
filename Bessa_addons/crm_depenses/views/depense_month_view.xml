<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_month_form" model="ir.ui.view">
        <field name="name">depense.month.form</field>
        <field name="model">depense.month</field>
        <field name="arch" type="xml">
            <form string="MOIS">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_month_tree" model="ir.ui.view">
        <field name="name">depense.month.tree</field>
        <field name="model">depense.month</field>
        <field name="arch" type="xml">
            <tree string="mois" create="1" delete="1" editable="top">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_depense_mois" model="ir.actions.act_window">
        <field name="name">Mois</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">depense.month</field>
        <field name="view_mode">tree,form</field>
    </record>


</odoo>
