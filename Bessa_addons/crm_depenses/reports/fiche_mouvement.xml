<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="fiche_mouvement">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.internal_layout">
                    <div class="page">
                        <p class="text-left" style="">
                            Réf :
                            <span t-field="o.name"/>
                        </p>
                        <p style="margin-top : -40px;" align="right">
                            Alger le :
                            <span t-field="o.date"/>
                        </p>
                        <h2 class="text-center">
                            <strong>
                                FICHE DE MOUVEMENT
                            </strong>
                        </h2>
                        <table style="margin-top:50px;">
                            <tr>
                                <td class="text-left" style="vertical-align:top;padding-left:10px;">
                                    <strong>DATE</strong>
                                </td>
                                <td class="text-left" style="vertical-align:top;padding-left:10px;">
                                    :
                                </td>
                                <td class="text-left" style="vertical-align:top;padding-left:10px;">
                                    <strong>
                                        <span t-esc="o.date"/>
                                    </strong>
                                    <br/>
                                    <br/>
                                </td>
                            </tr>
                            <t t-if="o.credit_ok == True ">
                                <tr>
                                    <td class="text-left" style="vertical-align:top;padding-left:10px;">
                                        <strong>Type</strong>
                                    </td>
                                    <td class="text-left" style="vertical-align:top;padding-left:10px;">
                                        :
                                    </td>
                                    <td class="text-left" style="vertical-align:top;padding-left:10px;">
                                        <strong>
                                            <span t-esc="o.tags_ids[0].name"/>
                                        </strong>
                                        <br/>
                                        <br/>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-left" style="vertical-align:top;padding-left:10px;">
                                        <strong>MONTANT EN CHIFFRES</strong>
                                    </td>
                                    <td class="text-left" style="vertical-align:top;padding-left:10px;">
                                        :
                                    </td>
                                    <td class="text-left" style="vertical-align:top;padding-left:10px;">
                                        <strong>
                                            <span t-esc="o.mt_credit"/>
                                        </strong>
                                        <br/>
                                        <br/>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-left" style="vertical-align:top;padding-left:10px;">
                                        <strong>MONTANT EN LETTRES</strong>
                                    </td>
                                    <td class="text-left" style="vertical-align:top;padding-left:10px;">
                                        :
                                    </td>
                                    <td class="text-left" style="vertical-align:top;padding-left:10px;">
                                        <strong>
                                            <span t-esc="o.mt_credit_lettre"/>
                                        </strong>
                                        <br/>
                                        <br/>
                                    </td>
                                </tr>
                            </t>
                            <t t-else="">
                                <tr>
                                    <td class="text-left" style="vertical-align:top;padding-left:10px;">
                                        <strong>Type</strong>
                                    </td>
                                    <td class="text-left" style="vertical-align:top;padding-left:10px;">
                                        :
                                    </td>
                                    <td class="text-left" style="vertical-align:top;padding-left:10px;">
                                        <strong>
                                            <span t-esc="o.tags_ids[0].name"/>
                                        </strong>
                                        <br/>
                                        <br/>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-left" style="vertical-align:top;padding-left:10px;">
                                        <strong>MONTANT EN CHIFFRES</strong>
                                    </td>
                                    <td class="text-left" style="vertical-align:top;padding-left:10px;">
                                        :
                                    </td>
                                    <td class="text-left" style="vertical-align:top;padding-left:10px;">
                                        <strong>
                                            <span t-esc="o.mt_debit"/>
                                        </strong>
                                        <br/>
                                        <br/>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-left" style="vertical-align:top;padding-left:10px;">
                                        <strong>MONTANT EN LETTRES</strong>
                                    </td>
                                    <td class="text-left" style="vertical-align:top;padding-left:10px;">
                                        :
                                    </td>
                                    <td class="text-left" style="vertical-align:top;padding-left:10px;">
                                        <strong>
                                            <span t-esc="o.mt_debit_lettre"/>
                                        </strong>
                                        <br/>
                                        <br/>
                                    </td>
                                </tr>
                            </t>

                            <tr>
                                <td class="text-left" style="vertical-align:top;padding-left:10px;">
                                    <strong>ORIGINES DES FONDS</strong>
                                </td>
                                <td class="text-left" style="vertical-align:top;padding-left:10px;">
                                    :
                                </td>
                                <td class="text-left" style="vertical-align:top;padding-left:10px;">
                                    <strong>
                                        <span t-esc="o.origin_fonds"/>                                  
                                    </strong>
                                    <br/>
                                    <br/>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-left" style="vertical-align:top;padding-left:10px;">
                                    <strong>DESTINATION DES FONDS</strong>
                                </td>
                                <td class="text-left" style="vertical-align:top;padding-left:10px;">
                                    :
                                </td>
                                <td class="text-left" style="vertical-align:top;padding-left:10px;">
                                    <strong>
                                        <span t-esc="o.destination_fonds"/>
                                    </strong>
                                    <br/>
                                    <br/>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-left" style="vertical-align:top;padding-left:10px;">
                                    <strong>INTITULE DU MOUVEMENT</strong>
                                </td>
                                <td class="text-left" style="vertical-align:top;padding-left:10px;">
                                    :
                                </td>
                                <td class="text-left" style="vertical-align:top;padding-left:10px;">
                                    <strong>
                                        <span t-esc="o.nature_id.name"/>
                                    </strong>
                                    <br/>
                                    <br/>
                                </td>
                            </tr>

                            <tr>
                                <td class="text-left" style="vertical-align:top;padding-left:10px;">
                                    <strong> Document d'origine </strong>
                                </td>
                                <td class="text-left" style="vertical-align:top;padding-left:10px;">
                                    :
                                </td>
                                <td class="text-left" style="vertical-align:top;padding-left:10px;">
                                    <strong>
                                        <span t-esc="o.origin"/>
                                    </strong>
                                    <br/>
                                    <br/>
                                </td>
                            </tr>


                        </table>

                        <!-- Signature -->
                        <div>
                            <br/>
                            <br/>
                            <div style="padding-top: 10px; width:100%;">
                                <div style="float: left;width:50%;;text-align:center">
                                    <div style="">
                                        Signature du bénificiaire
                                    </div>

                                </div>
                                <div style="float: right;width:50%;text-align:center">
                                    <div style="">Signature du caissier</div>
                                </div>

                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
