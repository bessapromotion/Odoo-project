<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="purchase_order_line_form2">
        <field name="name">purchase_discount.order.line.form2</field>
        <field name="model">purchase.order.line</field>
        <field name="inherit_id" ref="purchase.purchase_order_line_form2"/>
        <field name="arch" type="xml">
            <field name="price_unit" position="after">
                <field name="discount"/>
                <field name="discount_amount"/>
                <field name="sub_total_amount_initial"/>
            </field>
            <!--            <field name="price_subtotal" position="before">-->
            <!--                -->
            <!--            </field>-->
        </field>
    </record>
    <record model="ir.ui.view" id="purchase_order_line_tree">
        <field name="name">purchase_discount.order.line.tree</field>
        <field name="model">purchase.order.line</field>
        <field name="inherit_id" ref="purchase.purchase_order_line_tree"/>
        <field name="arch" type="xml">
            <field name="price_unit" position="after">
                <field name="discount_amount"/>


            </field>
        </field>
    </record>
    <record model="ir.ui.view" id="purchase_order_form">
        <field name="name">purchase_discount.purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath
                    expr="//field[@name='order_line']/tree/field[@name='price_unit']"
                    position="after"
            >
                <field
                        name="sub_total_amount_initial"
                        attrs="{'readonly': [('qty_invoiced', '!=', 0)],'invisible': [('discount', '=', 0)]}"
                />
                <field
                        name="discount"
                        attrs="{'readonly': [('qty_invoiced', '!=', 0)]}"
                />
                <field
                        name="discount_amount"
                        attrs="{'readonly': [('qty_invoiced', '!=', 0)],'invisible': [('discount_amount','=', 0)]}"
                />

            </xpath>
            <xpath
                    expr="//field[@name='order_line']/form//field[@name='price_unit']"
                    position="after"
            >
                <field
                        name="discount"
                        attrs="{'readonly': [('qty_invoiced', '!=', 0)]}"
                />
            </xpath>
            <xpath expr="//field[@name='tax_totals_json']" position="before">
                <field name="total_amount_initial" widget='monetary' options="{'currency_field': 'currency_id'}"
                       attrs="{'invisible': [('total_discount_amount', '=', 0)]}"/>
                <field name="total_discount_amount" widget='monetary' options="{'currency_field': 'currency_id'}"
                       attrs="{'invisible': [('total_discount_amount', '=', 0)]}"/>
            </xpath>


        </field>
    </record>

    <record model="ir.ui.view" id="purchase_order_discount_amount_tree">
        <field name="name">purchase order view tree discount amount</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_total']" position="before">
                <field name="total_amount_initial" string="Total avant Remise" widget="monetary" optional="show"
                       decoration-bf="1"/>
                <field name="total_discount_amount" widget="monetary" optional="show" decoration-bf="1"/>
            </xpath>
        </field>
    </record>
</odoo>
