<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_pv_caisse">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
              <t t-call="web.internal_layout">
                <style>
                </style>
                <t class="page">
                    <div>
                        <p style="text-align:right;">
                            <strong>DATE</strong>
                            <span t-esc="o.date_today"  style="font-size:16px;" t-options='{"widget":"date","format": "dd-MM-yyyy"}'/>
                        </p>
                    </div>
                    <div class="oe_structure"/>
                    <center>
                        <b>S
                            <h3>ARR&#202;T&#201; DE CAISSE</h3>

                            <p style="text-align:right;margin-right:50px">
                                <strong>D&#233;compte du</strong>
                                <span t-esc="o.date_today" style="font-size:16px;"
                                      t-options='{"widget":"date","format": "dd-MM-yyyy"}'/>
                            </p>


                        </b>
                    </center>
                    <table class="table table-sm" style="margin-top:10px;float: right;">
                        <thead>
                            <tr>
                                <th style="border:1px solid black;text-align:center;">Billet et pi&#232;ces</th>
                                <th style="border:1px solid black;text-align:center;">Nombre</th>
                                <th style="border:1px solid black;text-align:center;">Montant</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.bill_ids" t-as="billet">
                                <td style="border:1px solid black;text-align:center;">
                                    <span t-esc="billet.bill_id.name"/>
                                </td>
                                <td style="border:1px solid black;text-align:center;">
                                    <span t-esc="billet.nombre"/>
                                </td>
                                <td style="border:1px solid black;text-align:center;">
                                    <span t-esc="billet.montant"  t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}" />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <table class="table table-condensed">
                            <tr class="border-black o_total">

                                <td style="text-align:center;border:1px solid black;width:59%;">
                                            TOTAL (1)
                                </td>

                                <td style="text-align:center;border:1px solid black;width:41%;">
                                            <span t-esc="o.mt_total_physique" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                </td>
                            </tr>

                    </table>
                    <div style="font-size:18px;">
                        <div>
                            <b>
                                <strong>
                                    <u>Comptage arr&#234;t&#233; &#224; la somme de:</u>
                                </strong>
                            </b>
                            <span t-esc="o.mt_total_physique"  t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>



                        </div>
                        <div>
                            <b>
                                <strong>
                                    <u>En lettre:</u>
                                </strong>
                            </b>
                            <span t-esc="o.mt_total_physique_lettre" />
                        </div>
                        <div>
                          <p style="font-size:16px">
                            <b>
                                <u> DETAIL</u>
                            </b>
                          </p>
                       </div>
                    </div>
                    <table class="table table-condensed" style="float: left;">
                        <tr class="width:50%;-black o_total">
                            <td style="border:1px solid black;text-align:center;" class="text-center">
                                <strong>Solde De La journ&#233;e Odoo (2)</strong>
                            </td>
                            <td style="width:50%;border:1px solid black;text-align:center;" class="text-center">
                                <span t-esc="o.solde_today"  t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                <!--                                          t-options="{&quot;widget&quot;: &quot;monetary&quot;}"/>-->
                            </td>
                        </tr>
                        <tr>
                            <td style="width:50%;border:1px solid black;text-align:center;" class="text-center">
                                <strong>ECART (1) - (2)</strong>
                            </td>
                            <td style="width:50%;border:1px solid black;text-align:center;" class="text-center">
                                <span t-esc="o.ecart"   t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                <!--                                          t-options="{&quot;widget&quot;: &quot;monetary&quot;}"/>-->
                            </td>
                        </tr>
                    </table>
                    <table class="table table-condensed" style="border:1px solid;margin-top:5px;">
                        <tr>
                            <td class="text-center"
                                style="width:50%;border:1px solid black;vertical-align:middle;padding-left:10px;">
                                <strong>
                                    <u>VISA du caissier</u>
                                </strong>
                            </td>

                            <td class="text-center"
                                style="width:50%;border:1px solid black;vertical-align:middle;padding-left:10px;">
                                <strong>
                                    <u>VISA du contr&#244;leur</u>
                                </strong>

                            </td>

                        </tr>
                        <tr>
                            <td class="text-left" style="width:50%;border:1px solid black;">
                                
                                <p>NOM:</p>
				<br/>
                                <p>Date :</p>
				<br/>
                                <p>Visa:</p>
                            <br/>
                            </td>
                            <td class="text-left" style="width:50%;border:1px solid black;">
                               
                                <p>NOM:</p>
				<br/>
                                <p>Date :</p>
				<br/>
                                <p>Visa:</p>
                            <br/>

                            </td>
                        </tr>

                    </table>

                </t>
              </t>
            </t>

        </t>
    </template>
</odoo>
