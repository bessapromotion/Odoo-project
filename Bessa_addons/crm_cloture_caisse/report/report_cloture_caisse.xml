<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="report_cloture_caisse">
        <t t-call="web.html_container">
            <t t-call="web.layout">
                <div class="page">
                    <div class="text-center">
                        <h2 style="text-align:center;">Rapport détaillé de la caisse de la journée de
                            <span t-esc="form_data['date_today']" t-options='{"widget":"date","format": "dd-MM-yyyy"}'/>
                        </h2>
                    </div>


                    <table class="table table-condensed" style="margin-top:50px;">
                        <thead>
                            <tr>
                                <th style="border: 1px solid black;padding:2px;border-radius: 10px">
                                    <strong>N&#186; de dossier</strong>
                                </th>
                                <th style="border: 1px solid black;padding:2px;border-radius: 10px">
                                    <strong>Client</strong>
                                </th>
                                <th style="border: 1px solid black;padding:2px;border-radius: 10px">
                                    <strong>Projet</strong>
                                </th>
                                <th style="border: 1px solid black;padding:2px;border-radius: 10px">
                                    <strong>Commercial</strong>
                                </th>
                                <th style="border: 1px solid black;padding:2px;border-radius: 10px">
                                    <strong>Mode de paiement</strong>
                                </th>
                                <th style="border: 1px solid black;padding:2px;border-radius: 10px">
                                    <strong>Montant</strong>
                                </th>
                                <th style="border: 1px solid black;padding:2px;border-radius: 10px">
                                    <strong>Motif de paiement</strong>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="payments" t-as="o">
                                <tr>
                                    <td style="border: 1px solid black;padding:2px">
                                        <span t-esc=" o['num_dossier']"/>
                                    </td>
                                    <td style="border: 1px solid black;padding:2px">
                                        <span t-esc=" o['client']"/>
                                    </td>

                                    <td style="border: 1px solid black;padding:2px">
                                        <span t-esc=" o['projet']"/>
                                    </td>

                                    <td style="border: 1px solid black;padding:2px">
                                        <span t-esc=" o['commercial']"/>
                                    </td>
                                    <td style="border: 1px solid black;padding:2px">
                                        <span t-esc=" o['mode_paiement']"/>
                                    </td>
                                    <td style="border: 1px solid black;padding:2px">
                                        <span t-esc=" o['Montant']"/>
                                    </td>
                                    <td style="border: 1px solid black;padding:2px">
                                        <span t-esc=" o['Motif_paiement']"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>

                    </table>
                </div>
            </t>
        </t>

    </template>

</odoo>