<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_pv_coffre">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.internal_layout">
                    <style>
                    </style>
                    <t class="page">
                        <div>
                            <p style="text-align:right;">
                                <strong>DATE</strong>
                                <span t-esc="o.date_today" style="font-size:16px;"
                                      t-options='{"widget":"date","format": "dd-MM-yyyy"}'/>
                            </p>
                        </div>
                        <div class="oe_structure"/>
                        <center>
                            <b>
                                <h3>ARR&#202;T&#201; DE COFFRE</h3>

                                <p style="text-align:right;margin-right:50px">
                                    <strong>D&#233;compte du</strong>
                                    <span t-esc="o.date_yesterday" style="font-size:16px;"
                                          t-options='{"widget":"date","format": "dd-MM-yyyy"}'/>
                                </p>
                            </b>
                        </center>

                        <t t-if="o.bill_ids_coffre">
                            <table class="table table-sm" style="margin-top:30px;float: right;">
                                <thead>
                                    <tr>
                                        <th style="border:1px solid black;text-align:center;">Billet et pi&#232;ces</th>
                                        <th style="border:1px solid black;text-align:center;">Nombre</th>
                                        <th style="border:1px solid black;text-align:center;">Montant</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="o.bill_ids_coffre" t-as="billet">
                                        <td style="border:1px solid black;text-align:center;">
                                            <span t-esc="billet.bill_id.name"/>
                                        </td>
                                        <td style="border:1px solid black;text-align:center;">
                                            <span t-esc="billet.nombre"/>
                                        </td>
                                        <td style="border:1px solid black;text-align:center;">
                                            <span t-esc="billet.montant"  t-options="{'widget': 'monetary', 'display_currency': o.currency_id}" />
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <table class="table table-condensed">
                            <tr class="border-black o_total">

                                <td style="text-align:center;border:1px solid black;width:57%;">
                                            TOTAL (1)
                                </td>

                                <td style="text-align:center;border:1px solid black;width:43%;">
                                            <span t-esc="o.mt_coffre_physique" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                </td>
                            </tr>

                           </table>

                        </t>
                        <p style="margin-top:10px;">
                            <b>
                                <u> DETAIL</u>
                            </b>
                        </p>
                        <table class="table table-condensed" style="margin-top:5px;float: left;">
                            <tr class="border-black o_total">
                                <t t-if="versement == True">
                                    <td style="border:1px solid black;">
                                        <strong>Montant Vers&#233;:</strong>
                                    </td>
                                    <td class="text-center" style="border:1px solid black;">
                                        <span t-field="o.mt_versement" t-options="{'widget': 'monetary'}"/>
                                    </td>
                                </t>
                                <td class="text-center" style="border:1px solid black;">
                                    <strong>TOTAL COFFRE:</strong>
                                </td>
                                <td class="text-center" style="border:1px solid black;">

                                    <span t-field="o.mt_coffre" t-options="{'widget': 'monetary'}"/>


                                    <!--                                    <span t-field="o.currency"/>-->
                                    <!--                                          t-options="{&quot;widget&quot;: &quot;monetary&quot;}"/>-->
                                </td>
                            </tr>
                            <tr>
                                <td class="text-center" style="width:50%;border:1px solid black;">
                                    <strong>DIF :</strong>
                                </td>
                                <td class="text-center" style="width:50%;border:1px solid black;">
                                    <span t-field="o.ecart" />
                                </td>
                            </tr>
                        </table>

                        <table class="table table-condensed" style="border:1px solid;margin-top:80px;">
                            <tr>
                                <td class="text-center"
                                    style="width:50%;border:1px solid black;vertical-align:middle;padding-left:10px;">
                                    <strong>
                                        <u>VISA du caissier</u>
                                    </strong>
                                </td>

                                <td class="text-center"
                                    style="width:50%;border:1px solid black;vertical-align:middle;padding-left:10px;">
                                    <strong>
                                        <u>VISA du contr&#244;leur</u>
                                    </strong>

                                </td>

                            </tr>
                            <tr>
                                <td class="text-left" style="width:50%;border:1px solid black;">
                                    <p>NOM:</p>

                                    <p>Date :</p>

                                    <p>Visa:</p>
                                    <br/>
                                </td>
                                <td class="text-left" style="width:50%;border:1px solid black;">
                                    <p>NOM:</p>

                                    <p>Date :</p>

                                    <p>Visa:</p>

                                    <br/>
                                </td>
                            </tr>

                        </table>

                    </t>
                </t>
            </t>
        </t>
    </template>
</odoo>
