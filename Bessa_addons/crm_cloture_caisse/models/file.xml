<?xml version="1.0"?>
<t t-name="crm_operation_custom.report_pv_caisse">
    <t t-call="web.html_container">
        <t t-call="web.external_layout">
            <style>
            </style>
            <t class="page">
                <div>
                    <p style="text-align:right;">
                        <strong>DATE</strong>
                        <span t-esc="form_data['date_today']"
                              t-options="{&quot;widget&quot;:&quot;date&quot;,&quot;format&quot;: &quot;dd-MM-yyyy&quot;}"/>
                    </p>
                </div>
                <div class="oe_structure"/>
                <center>
                    <b>
                        <h3>ARRET DE CAISSE RECETTES</h3>

                        <p style="text-align:right;margin-right:50px">
                            <strong>Décompte du</strong>
                            <span t-esc="form_data['date_today']" style="font-size:18px;"
                                  t-options="{&quot;widget&quot;:&quot;date&quot;,&quot;format&quot;: &quot;dd-MM-yyyy&quot;}"/>
                        </p>


                    </b>
                </center>
                <table class="table table-condensed" style="margin-top:50px;float: right;">
                    <thead>
                        <tr>
                            <th>Billet et pieces</th>
                            <th>Nombre</th>
                            <th>Montant</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="billets" t-as="billet">
                            <td>
                                <span t-esc="billet['bill']"/>
                            </td>
                            <td>
                                <span t-esc="billet['nombre']"/>
                            </td>
                            <td>
                                <span t-esc="billet['montant']"/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                TOTAL
                            </td>
                            <td>
                                <span t-esc="form_data['nombre_total_physique']"/>
                            </td>
                            <td>
                                <span t-esc="form_data['mt_total_physique']"/>
                            </td>
                        </tr>
                    </tbody>
                </table>

                <div class="col-xs-4 pull-left">
                    <div>
                        <b>
                            <strong>Caisse arrêtée à la somme de:</strong>
                        </b>
                        <span t-esc="form_data['mt_total_physique']"/>
                        <span t-esc="form_data['currency_id']"/>
                    </div>
                    <div>
                        <b>
                            <strong>En lettre:</strong>
                        </b>
                        <span t-esc="form_data['mt_total_physique_lettre']"/>
                    </div>
                </div>
                <table>
                    <tr>
                        <td>
                            <strong>RECETTE DU JOUR</strong>
                        </td>
                        <td class="text-center">
                            <span t-esc="form_data['mt_total_physique']"/>
                            <!--                                          t-options="{&quot;widget&quot;: &quot;monetary&quot;}"/>-->
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>ECART</strong>
                        </td>
                        <td class="text-center">
                            <span t-esc="form_data['ecart']"/>
                            <!--                                          t-options="{&quot;widget&quot;: &quot;monetary&quot;}"/>-->
                        </td>
                    </tr>
                </table>
                <table class="table table-condensed" style="border:1px solid;position:absolute;top:500px;">
                    <tr>
                        <td class="text-center"
                            style="width:50%;border:1px solid black;vertical-align:middle;padding-left:10px;">
                            <strong>
                                <u>VISA du caissier</u>
                            </strong>
                        </td>

                        <td class="text-center"
                            style="width:50%;border:1px solid black;vertical-align:middle;padding-left:10px;">
                            <strong>
                                <u>VISA du controleur</u>
                            </strong>

                        </td>

                    </tr>
                    <tr>
                        <td class="text-center" style="width:50%;border:1px solid black;">
                            <p>NOM:</p>
                            <br/>
                            <p>Date :</p>
                            <br/>
                            <p>Visa:</p>
                            <br/>
                            <br/>
                            <br/>
                        </td>
                        <td class="text-center" style="width:50%;border:1px solid black;">
                            <p>NOM:</p>
                            <br/>
                            <p>Date :</p>
                            <br/>
                            <p>Visa:</p>
                            <br/>
                            <br/>
                            <br/>
                        </td>
                    </tr>

                </table>

            </t>
        </t>
    </t>
</t>
