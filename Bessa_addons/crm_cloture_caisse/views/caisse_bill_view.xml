<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_caisse_bill_form" model="ir.ui.view">
        <field name="name">caisse.bill.form</field>
        <field name="model">caisse.bill</field>
        <field name="arch" type="xml">
            <form string="Bills">
                <sheet>
                    <group>
                        <field name="bill_id"/>
                        <field name="nombre"/>
                        <field name="montant" force_save="1"/>
                        <field name="caisse_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_caisse_bill_tree" model="ir.ui.view">
        <field name="name">caisse.bill.tree</field>
        <field name="model">caisse.bill</field>
        <field name="arch" type="xml">
            <tree string="Bills" create="1" delete="1">
                <field name="bill_id"/>
                <field name="nombre"/>
                <field name="montant" force_save="1"/>
                <field name="caisse_id"/>
            </tree>
        </field>
    </record>

    <record id="action_caisse_bill" model="ir.actions.act_window">
        <field name="name">Pi√®ces/Billets des caisses</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">caisse.bill</field>
        <field name="view_mode">tree,form</field>
    </record>


    <!--    groups="group_pos_manager"-->
</odoo>
