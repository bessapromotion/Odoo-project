<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_bill_form" model="ir.ui.view">
        <field name="name">bill.form</field>
        <field name="model">bill</field>
        <field name="arch" type="xml">
            <form string="Bills">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="value"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_bill_tree" model="ir.ui.view">
        <field name="name">bill.tree</field>
        <field name="model">bill</field>
        <field name="arch" type="xml">
            <tree string="Bills" create="1" delete="1">
                <field name="name"/>
                <field name="value"/>
            </tree>
        </field>
    </record>

    <record id="action_bill" model="ir.actions.act_window">
        <field name="name">Pi√®ces/Billets</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">bill</field>
        <field name="view_mode">tree,form</field>
    </record>


    <!--    groups="group_pos_manager"-->
</odoo>
