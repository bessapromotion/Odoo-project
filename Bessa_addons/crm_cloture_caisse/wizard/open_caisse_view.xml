<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_payment_caisse" model="ir.ui.view">
            <field name="name">open.caisse.wizard.form</field>
            <field name="model">open.caisse.wizard</field>
            <field name="arch" type="xml">
                <form string="Ouverture de caisse">
                    <header>
                        <field name="state" nolabel="1" widget="statusbar"
                               statusbar_visible="draft,open,valid,done,cancel"
                             />

                    </header>
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                       <group>
                        <group>
                            <field name="date_today" attrs="{'readonly': [ ('caisse_id', '!=', False)]}"/>
                        </group>
                        <group>
                            <field name="company_id" attrs="{'readonly': [ ('caisse_id', '!=', False)]}"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="mt_coffre_cloture"/>
                            <field name="versement" />
                            <field name="mt_versement" attrs="{'invisible': [ ('versement', '=', False)]}"/>

                        </group>
                        <group>
                            <field name="mt_coffre" attrs="{'readonly': [ ('caisse_id', '!=', False)]}"/>
                            <field name="ecart"/>
                        </group>
                    </group>
                    <group>
                        <field name="observation" attrs="{'readonly': [ ('caisse_id', '!=', False)]}" />
                    </group>
                    <notebook>
                        <page string="Pieces/Billets">
                            <field name="bill_ids_coffre" attrs="{'readonly': [ ('state', '=', 'done')]}" nolabel="1" widget="section_and_note_one2many">
                                <tree editable="bottom" create="1">
                                    <field name="bill_id"/>
                                    <field name="nombre"/>
                                    <field name="montant" force_save="1"/>
                                    <field name="state" readonly="1"/>
                                </tree>
                            </field>
                            <group name="note_group" col="6" class="mt-2 mt-md-0">
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                    <field name="mt_coffre_physique" colspan="2"/>
                                    <field name="caisse_id" invisible="1"/>

                                </group>
                                <div class="oe_clear"/>
                            </group>

                        </page>
                    </notebook>
                    </sheet>
                     <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                     </div>
                    <footer>
                        <button class="oe_highlight" string="Ouvrir la caisse" name="action_open" type="object"
                          attrs="{'invisible': [ ('caisse_id', '!=', False)]}"/>

                         <button class="oe_link" string="Annuler" special="cancel" attrs="{'invisible': [ ('caisse_id', '!=', False)]}"/>
                    </footer>

                </form>


            </field>
        </record>
        <record model="ir.ui.view" id="view_open_caisse_filter">
            <field name="name">open.caisse.wizard.filter</field>
            <field name="model">open.caisse.wizard</field>
            <field name="arch" type="xml">
                <search string="Ouverture de caisse">
                    <field name="name"/>
                    <field name="caisse_id"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <group expand="0" string="Grouper par...">
                        <filter name="groupby_caisse_id" string="Caisse" domain="[]" context="{'group_by':'caisse_id'}"/>
                        <filter name="company" string="Société" domain="[]" context="{'group_by':'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="payment_caisse_action" model="ir.actions.act_window">
            <field name="name">Ouverture de caisse</field>
            <field name="res_model">open.caisse.wizard</field>
            <field name="view_id" ref="view_payment_caisse"/>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


    </data>


</odoo>