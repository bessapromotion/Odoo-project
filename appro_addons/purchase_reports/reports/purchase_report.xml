        <xpath expr="//h2[3]" position="replace">
            <p align="right">Alger le :
                <span t-esc="o.date_order" t-options='{"widget": "date"}'/>
            </p>
        </xpath>
        <xpath expr="//div[1]/div[2]" position="replace">
            <div>
                <div style="padding-top:20px;float:right;">
                    <p/>
                    <strong t-field="o.partner_id"/>
                    <br/>
                    <t t-if="o.partner_id.street or o.partner_id.street2">
                        <span t-field="o.partner_id.street"/>
                        <span t-field="o.partner_id.street2"/>
                    </t>
                    <br/>
                    <t t-if="o.partner_id.city or o.partner_id.state_id">
                        <span t-field="o.partner_id.city"/>
                        <span t-field="o.partner_id.state_id"/>
                    </t>
                    <br/>
                    <t t-if="o.partner_id.phone or o.partner_id.fax">
                        <strong>Tel :</strong>
                        <span t-field="o.partner_id.phone"/>,
                        <strong>Fax :</strong>
                        <span t-field="o.partner_id.fax"/>
                    </t>
                    <t t-else="">
                        <strong>Tel :</strong>........................,
                        <strong>Fax :</strong>
                        <span t-field="o.partner_id.fax"/>
                    </t>

                    <br/>
                    <t t-if="o.partner_id.email">
                        <strong>E-mail :</strong>
                        <span t-field="o.partner_id.email"/>
                    </t>
                    <br/>
                    <t t-if="o.partner_id.nif">
                        <strong>IF :</strong>
                        <span t-field="o.partner_id.nif"/>
                        <strong>AI :</strong>
                        <span t-field="o.partner_id.ai"/>
                        <br/>
                        <strong>RC :</strong>
                        <span t-field="o.partner_id.rc"/>
                    </t>
                    <t t-else="">
                        <strong>IF :</strong>.....................,
                        <strong>AI :</strong>
                        <span t-field="o.partner_id.ai"/>
                        <br/>
                        <strong>RC :</strong>
                        <span t-field="o.partner_id.rc"/>
                    </t>
                </div>

            </div>
            <t t-if="o.mode_paiement_id">
                <p>Compte Bancaire :
                    <span t-field="o.journal_id"/>
                </p>
            </t>
            <t t-if="o.mode_paiement_id">
                <p>RIB :
                    <span t-field="o.rib"/>
                </p>
            </t>
            <t t-if="o.create_uid">
                <p>Créer par :
                    <span t-field="o.create_uid.name"/>
                </p>
            </t>
            <t t-if="o.partner_id.property_supplier_payment_term_id">
                <p>Mode de paiement :
                    <span t-field="o.partner_id.property_supplier_payment_term_id"/>
                </p>
            </t>
            <t t-if="o.project_id">
                <p>Projet :
                    <span t-field="o.project_id"/>
                </p>
            </t>

        </xpath>
        <xpath expr="//table[@class='table table-sm o_main_table']" position="replace">

            <table class="table table-sm o_main_table" style="font-size:100%;">
                <thead>
                    <tr>
                        <th class="text-center">
                            <strong>N°</strong>
                        </th>
                        <th>
                            <strong>Désignation</strong>
                        </th>
                        <th>
                        </th>
                        <th class="text-right">
                            <strong>Qté.</strong>
                        </th>
                        <th class="text-right">
                            <strong>UDM</strong>
                        </th>
                        <th class="text-right">
                            <strong>Prix U.</strong>
                        </th>
                        <th class="text-right">
                            <strong>Montant</strong>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="o.order_line" t-as="line">
                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                            <t t-if="not line.display_type">
                                <td class="text-center">
                                    <span t-esc="line_index + 1"/>
                                </td>
                                <td>
                                    <span t-field="line.product_id.name"/>
                                </td>
                                <td>
                                    <t t-foreach="line.product_id.product_variant_ids" t-as="v">
                                        <span t-field="v.name"/>
                                    </t>

                                </td>
                                <td class="text-right">
                                    <span t-field="line.product_qty"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.product_uom"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.price_unit"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.price_subtotal"
                                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </t>
                            <t t-if="line.display_type == 'line_section'">
                                <td colspan="99" id="section">
                                    <span t-field="line.name"/>
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            <t t-if="line.display_type == 'line_note'">
                                <td colspan="99" id="note">
                                    <span t-field="line.name"/>
                                </td>
                            </t>
                        </tr>
                    </tr>
                </tbody>
            </table>
        </xpath>

        <xpath expr="//div[@id='total']" position="replace">
            <div id="total" class="row justify-content-end" style="font-size:70%;">
                <div class="col-4">
                    <table class="table table-sm">
                        <tr class="border-black">
                            <td>
                                <strong>Total HT</strong>
                            </td>
                            <td class="text-right">
                                <span t-field="o.amount_untaxed"
                                      t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                        <tr>
                            <t t-if="o.taxe">
                                <td>Total TVA (<span t-field="o.taxe"/>)
                                </td>
                            </t>
                            <td class="text-right">
                                <span t-field="o.amount_tax"
                                      t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                        <tr class="border-black o_total">
                            <td>
                                <strong>Total TTC</strong>
                            </td>
                            <td class="text-right">
                                <span t-field="o.amount_total"
                                      t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="col-8">
                <br/>
                <br/>
                <p>Arrêté le présent bon de commande à la somme de :
                    <strong t-field="o.montant_lettre"/>
                </p>
            </div>
            <t t-if="o.note">
                <div style="display: inline-block;width: 500px;height: 100px;padding: 5px;border: 1px solid black;">
                    <p>
                        <b>
                            <u>
                                <span t-field="o.note"/>
                            </u>
                        </b>
                    </p>
                </div>
            </t>
        </xpath>
    </template>
</odoo>