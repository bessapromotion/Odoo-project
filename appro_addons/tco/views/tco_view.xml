<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_dl_purchase_requisition_form" model="ir.ui.view">
            <field name="name">dl.purchase.requisition.form.inherit</field>
            <field name="model">purchase.requisition</field>
            <field name="priority">2</field>
            <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form"/>
            <field name="arch" type="xml">
                <data>
                    <button name="action_done" position="before">
                        <button name="action_generate_tco" string="Générer le TCO" attrs="{'invisible':['|',('order_count', '&lt;', 2),('state', 'not in', ('open',))]}" class="oe_highlight" type="object" groups="purchase.group_purchase_manager,purchase.group_purchase_user"/>
                        <button name="print_tco" string="Imprimer le TCO" attrs="{'invisible':['|',('order_count', '&lt;', 2),('state', 'not in', ('open',))]}" class="oe_highlight" type="object" groups="purchase.group_purchase_manager"/>
                    </button>
                    <xpath expr="//notebook/page[1]" position="after">
                        <page string="TCO" attrs="{'invisible':['|',('order_count', '&lt;', 2),('state', 'not in', ('open','done'))]}">
                            <field name="tco_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="product_id"/>
                                    <field name="qty_1"/>
                                    <field name="pu_1"/>
                                    <field name="amount_1" sum="amount_ht"/>
                                    <field name="sep_1"/>
<!--                                    <field name="order_2"/>-->
                                    <field name="qty_2"/>
                                    <field name="pu_2"/>
                                    <field name="amount_2" sum="amount_ht"/>
                                    <field name="sep_2"/>
<!--                                    <field name="order_3"/>-->
                                    <field name="qty_3"/>
                                    <field name="pu_3"/>
                                    <field name="amount_3" sum="amount_ht"/>
                                </tree>
                                <form>
                                    <group>
                                        <group>
                                            <field name="product_id"/>
                                        </group>
                                        <group>
                                        </group>
                                        <group string="Fournisseur 1">
<!--                                            <field name=""/>-->
                                            <field name="qty_1" string="Quantité"/>
                                            <field name="pu_1" string="Prix unitaire"/>
                                            <field name="amount_1" string="Montant HT"/>
                                        </group>
                                        <group string="Fournisseur 2">
                                            <field name="qty_2" string="Quantité"/>
                                            <field name="pu_2" string="Prix unitaire"/>
                                            <field name="amount_2" string="Montant HT"/>
                                        </group>
                                        <group string="Fournisseur 3">
                                            <field name="qty_3" string="Quantité"/>
                                            <field name="pu_3" string="Prix unitaire"/>
                                            <field name="amount_3" string="Montant HT"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                            <separator string="Totaux"/><separator/>
                            <field name="orders_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="partner_id"/>
                                    <field name="amount_untaxed"/>
                                    <field name="amount_tax"/>
                                    <field name="amount_total"/>
                                    <field name="state" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Commission" attrs="{'invisible':['|',('order_count', '&lt;', 2),('state', 'not in', ('open','done'))]}">
                            <group>
                                <group>
                                    <field name="commission_date"/>
                                </group>
                            </group>
                            <field name="commission_ids">
                                <tree editable="Bottom">
                                    <field name="name"/>
                                    <field name="job_id"/>
                                </tree>
                            </field>
                            <separator string="Décision de la commission"/><separator/>
                            <field name="commission_decision"/>
                        </page>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>
