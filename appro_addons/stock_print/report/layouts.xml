<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>


    <template id="layouts_report_extend" inherit_id="report.external_layout_header">
        <xpath expr="//div[@class='col-xs-3']" position="replace">

              <div class="col-xs-3">
                <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height:85px;"/>
              </div>

        </xpath>

         <xpath expr="//div[@class='row zero_min_height']" position="replace">

         </xpath>

        <xpath expr="//div[@name='company_address']" position="replace">

        </xpath>

    </template>
    <template id="layouts_report_extend2" inherit_id="report.external_layout_footer">
         <xpath expr="//div[@class='footer']" position="replace">

             <div class="col-xs-3">
                <table style="background-color:#F0F0F0; width:100%; font-size:11px">
                 <tbody>
                     <tr>


                         <td style="text-align:right">
                             <strong>Page : </strong>
                             <span class="page"/> / <span class="topage"/>
                         </td>
                     </tr>
                 </tbody>
             </table>
              </div>
        </xpath>

    </template>

</data>
</odoo>