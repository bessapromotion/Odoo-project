<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="demande_achat.report_demande_achat">
    <t t-call="web.external_layout">
    <t>
    <t t-call="web.html_container">
    <t t-foreach="docs" t-as="o">
        <div class="page">
            <div>
                <table style="width:100%">
                    <!--<tr>-->
                        <!--<td class="text-center">-->
                            <!--&lt;!&ndash;<img src='/demande_achat/static/src/img/entete.png' style="width:100%"/>&ndash;&gt;-->
                        <!--</td>-->
                    <!--</tr>-->
                    <tr>
                        <td style="font-size: 14px;">
                            <h4 style="margin-left: 20px;">Structure : <span t-field="o.department_id"/></h4>
                            <br/><br/><br/>
                        </td>
                    </tr>
                    <tr>
                        <td class="text-center" style="width:100%">
                            <h2 style="text-align:center;"><strong>Demande d'Achat</strong></h2>
                            <h2 style="text-align:center;"><strong>N°</strong><span t-field="o.name"/></h2>
                            <br/><br/><br/>
                        </td>
                    </tr>
                </table>
            </div>
            <table style="font-size: 18px;border: 1px solid black;width:100%">
                <tr>
                    <td class="text-center" style="border: 1px solid black;padding:5px;width:10%;"><strong>#</strong></td>
                    <td class="text-center" style="border: 1px solid black;padding:5px;width:40%;"><strong>Désignation de l'article</strong></td>
                    <td class="text-center" style="border: 1px solid black;padding:5px;width:10%;"><strong>Quantité</strong></td>
                    <td class="text-center" style="border: 1px solid black;padding:5px;width:10%;"><strong>Unité de mesure</strong></td>
                    <td class="text-center" style="border: 1px solid black;padding:5px;width:30%;"><strong>Observation</strong></td>
                </tr>
                <t t-foreach="o.line_ids" t-as="m">
                      <tr  style="border: 1px solid black;"  t-if=" len(o.line_ids)-1 >= m_index">
                          <td class="text-center" style="vertical-align:middle;border: 1px solid black;padding:3px "><span t-esc='m_index + 1'/></td>
                          <td class="text-left"   style="vertical-align:middle;border: 1px solid black;padding:3px "><span t-field="m.description"/></td>
                          <td class="text-center" style="vertical-align:middle;border: 1px solid black;padding:3px "><span t-field="m.qty"/></td>
                          <td class="text-center" style="vertical-align:middle;border: 1px solid black;padding:3px ">Unité</td>
                          <td class="text-center" style="vertical-align:middle;border: 1px solid black;padding:3px "></td>
                      </tr>
                        <t  t-if=" m_index ==  len(o.line_ids)-1 and 12 >=  m_index"  >
                        <t t-foreach="range(len(o.line_ids), 12)" t-as="i">
                          <tr  style="border: 1px solid black;">
                            <td style="border-left: 1px solid black;border-right: 1px solid black;padding:3px;color:#FFFFFF">vide </td>
                            <td style="border-left: 1px solid black;border-right: 1px solid black;padding:3px;color:#FFFFFF">vide </td>
                            <td style="border-left: 1px solid black;border-right: 1px solid black;padding:3px;color:#FFFFFF">vide </td>
                            <td style="border-left: 1px solid black;border-right: 1px solid black;padding:3px;color:#FFFFFF">vide </td>
                            <td style="border-left: 1px solid black;border-right: 1px solid black;padding:3px;color:#FFFFFF">vide </td>
                    </tr>
                        </t>
                        </t>
                     </t>
            </table>
            <div>
                <br/><br/><br/>
                <p style="font-size: 18px;margin-left: 20px;">Alger, le <span t-field="o.ddate"/></p>
                <br/><br/><br/>
                <p class="text-center" style="font-size: 18px;margin-left: 300px;">Signature</p>
            </div>
        </div>
    </t>
    </t>
    </t>
    </t>
</template>
</odoo>
