<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchaseorder_document" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//div[@id='total']" position="before">
            <t t-if="o.timbre">
                <div id="timbre" class="row justify-content-end">
                    <div class="col-4">
                        <table class="table table-sm">
                            <tr>
                                <td>Timbre</td>
                                <td class="text-right">
                                    <span t-field="o.timbre"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </t>
        </xpath>
        <xpath expr="//div[@id='total']" position="after">
            <t t-if="o.timbre">
                <div id="timbre" class="row justify-content-end">
                    <div class="col-4">
                        <table class="table table-sm">
                            <tr>
                                <td>Total avec Timbre</td>
                                <td class="text-right">
                                    <strong t-field="o.amount_timbre"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </t>
        </xpath>
    </template>
</odoo>
