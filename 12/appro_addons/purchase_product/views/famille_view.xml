<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    <record model="ir.actions.act_window" id="action_product_famille_button_kanban_view">
        <field name="name">Produits</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_famille_id': [active_id], 'default_famille_id': active_id}</field>
        <field name="domain">[('famille_id', '=', active_id)]</field>
        <field name="view_id" ref="product.product_template_kanban_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouveau produit.
            </p>
            <p>

            </p>
        </field>
    </record>

    <record id="product_famille_tree_view" model="ir.ui.view">
        <field name="name">product.famille.tree</field>
        <field name="model">product.famille</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name"/>
                <field name="product_count"/>
            </tree>
        </field>
    </record>

    <record id="product_famille_form_view" model="ir.ui.view">
        <field name="name">product.famille.form</field>
        <field name="model">product.famille</field>
        <field name="arch" type="xml">
            <form string="Famille">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="action" name="%(action_product_famille_button_kanban_view)d" class="oe_stat_button" icon="fa-tags">
                            <field name="product_count" widget="statinfo" string="Produits"/>
                        </button>
                    </div>
                    <h1>
                        <field name="name" class="oe_inline"/>
                    </h1>
                    <group>
                        <group>
                            <field name="code"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Sous famille">
                            <field name="sous_famille_ids" readonly="1">
                                <tree>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="product_count"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_product_famille">
        <field name="name">Familles</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.famille</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="product_famille_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer une nouvelle famille.
                </p><p>

                </p><p>

                </p>
            </field>
    </record>

    <menuitem
            name="Familles"
            id="menu_product_famille"
            action="action_product_famille"
            parent="stock.menu_product_in_config_stock"
            sequence="98"
    />



    <record model="ir.actions.act_window" id="action_product_sousfamille_button_kanban_view">
        <field name="name">Produits</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'search_default_sousfamille_id': [active_id], 'default_sousfamille_id': active_id}</field>
        <field name="domain">[('sousfamille_id', '=', active_id)]</field>
        <field name="view_id" ref="product.product_template_kanban_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouveau produit.
            </p>
            <p>

            </p>
        </field>
    </record>

    <record id="product_famille_sous_famille_tree_view" model="ir.ui.view">
        <field name="name">product.sousfamille.tree</field>
        <field name="model">product.sousfamille</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name"/>
                <field name="sequence"/>
                <field name="type"/>
                <field name="famille_id"/>
                <field name="product_count"/>

            </tree>
        </field>
    </record>

    <record id="product_famille_sous_famille_form_view" model="ir.ui.view">
        <field name="name">product.sousfamille.form</field>
        <field name="model">product.sousfamille</field>
        <field name="arch" type="xml">
        <form string="Sous Famille">
            <sheet>
                <div class="oe_button_box" name="button_box">
                    <button type="action" name="%(action_product_sousfamille_button_kanban_view)d" class="oe_stat_button" icon="fa-tags">
                        <field name="product_count" widget="statinfo" string="Produits"/>
                    </button>
                </div>

                <h1>
                    <field name="name"/>
                </h1>
                <group>
                    <group>
                        <field name="code"/>
                        <field name="famille_id"/>
                    </group>
                    <group>
                        <field name="sequence"/>
                        <field name="type"/>
                    </group>
                </group>
            </sheet>
        </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_product_famille_sous_famille">
        <field name="name">Sous Familles</field>
        <field name="res_model">product.sousfamille</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="product_famille_sous_famille_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Cliquez ici pour créer une nouvelle sous famille.
                </p><p>

                </p><p>

                </p>
            </field>
    </record>

    <menuitem
            name="Sous Familles"
            id="menu_product_sous_famille"
            action="action_product_famille_sous_famille"
            parent="stock.menu_product_in_config_stock"
            sequence="99"
    />

    </data>
</openerp>
