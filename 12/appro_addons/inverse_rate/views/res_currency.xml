<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_res_currency_form2_inherited" model="ir.ui.view">
            <field name="name">res.currency.form.view.inherited</field>
            <field name="model">res.currency</field>
            <field name="inherit_id" ref="base.view_currency_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='rate']" position="after">
                    <field name="related_taux_change" />
                </xpath>
            </field>
        </record>
        <record id="view_res_currency_tree2_inherited" model="ir.ui.view">
            <field name="name">res.currency.tree.view.inherited</field>
            <field name="model">res.currency</field>
            <field name="inherit_id" ref="base.view_currency_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='rate']" position="before">
                    <field name="related_taux_change" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>