<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="stock_print.stock_print_report2">
        <!--<t t-call="report.external_layout">-->
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="o">
               <div class="page">
                    <!--<div >-->
                     <!--<img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height:85px; "/>-->
                   <!--</div>-->
                   <div class="text-center"
                        style="vertical-align:middle;font-family:DecoType Naskh Special;font-size:24px;letter-spacing:0.01em;"><strong>Etat des stocks</strong>
                   </div>


                   <table style="margin-top:20px;width:900px; border-collapse:separate;border-spacing:5px;">
                         <tr>
                             <td class="text-center"
                               style=" vertical-align:middle;
                                        font-family:DecoType Naskh Special; font-size:17px;border-radius:25px;"><strong>Créé le </strong></td>
                             <td class="text-center"
                               style=" vertical-align:middle;
                                        font-family:DecoType Naskh Special; font-size:17px;border-radius:25px;"><strong>Par </strong></td>

                       </tr>
                       <tr>
                           <td class="text-center"
                               style="color:#5e5b63; vertical-align:middle;background-color:#EEEEEE;
                                        font-family:DecoType Naskh Special; font-size:17px;border-radius:25px;"><strong><span t-field="o.date"/></strong></td>
                           <td class="text-center"
                               style="color:#5e5b63; vertical-align:middle;background-color:#EEEEEE;
                                        font-family:DecoType Naskh Special; font-size:17px;border-radius:25px;"><strong><span t-field="o.user_id"/></strong></td>

                       </tr>
                   </table>

                   <table class="table table-condensed table-bordered">
                       <tr  style="font-style:normal;font-weight: normal;vertical-align:middle;height:15px;">
                           <td class="text-center" style=" vertical-align:middle; font-family:DecoType Naskh Special; font-size:12px"><strong>#</strong></td>
                           <td class="text-center" style=" vertical-align:middle; font-family:DecoType Naskh Special; font-size:12px"><strong>Artcile</strong></td>
                           <td class="text-center" style=" vertical-align:middle; font-family:DecoType Naskh Special; font-size:12px"><strong>Catégorie</strong></td>
                           <td class="text-center" style=" vertical-align:middle; font-family:DecoType Naskh Special; font-size:12px"><strong>Quantité</strong></td>
                           <td class="text-center" style="vertical-align:middle; font-family:DecoType Naskh Special; font-size:12px"><strong>U</strong></td>
                           <td class="text-center" style="vertical-align:middle; font-family:DecoType Naskh Special; font-size:12px"><strong>Valeur</strong></td>
                           <td class="text-center" style="vertical-align:middle; font-family:DecoType Naskh Special; font-size:12px"><strong>Note</strong></td>
                       </tr>
                       <tr t-foreach="o.line_ids" t-as="move">
                           <td class="text-left"
                                    style="vertical-align:middle; padding-left:10px; font-family:DecoType Naskh Special; font-size:12px"><strong><span t-field="move.name"/></strong>
                           </td>
                           <td class="text-left"
                                    style="vertical-align:middle; padding-left:10px; font-family:DecoType Naskh Special; font-size:12px"><strong><span t-field="move.product_id"/></strong>
                           </td>
                           <td class="text-left"
                                    style="vertical-align:middle; padding-left:10px; font-family:DecoType Naskh Special; font-size:12px"><strong><span t-field="move.categ_id"/></strong>
                           </td>
                           <td class="text-right"
                                    style="vertical-align:middle; padding-right:10px; font-family:DecoType Naskh Special; font-size:12px"><strong><span t-field="move.qty"/></strong>
                           </td>
                           <td class="text-left"
                                    style="vertical-align:middle; padding-left:10px; font-family:DecoType Naskh Special; font-size:12px"><strong><span t-field="move.unite_id"/></strong>
                           </td>
                           <td class="text-right"
                                    style="vertical-align:middle; padding-right:10px; font-family:DecoType Naskh Special; font-size:12px"><strong><span t-field="move.price"/></strong>
                           </td>
                           <td class="text-left"
                                    style="vertical-align:middle; padding-left:10px; font-family:DecoType Naskh Special; font-size:12px"><strong><span t-field="move.note"/></strong>
                           </td>

                       </tr>

                   </table>
                   <!--<div class="text-right" style="vertical-align:middle; padding-right:60px; font-family:DecoType Naskh Special; font-size:20px">-->
                        <!--TOTAL   <strong><span t-field="o.total"/></strong>-->
                   <!--</div>-->

               </div>
            </t>
        </t>
        <!--</t>-->
    </template>
</odoo>
