<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

         <record id="view_ra_stock_print_tree" model="ir.ui.view">
            <field name="name">ra.stock.print.tree</field>
            <field name="model">ra.stock.print</field>
            <field name="arch" type="xml">
                <tree string="Etat des stocks">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="user_id"/>
                    <field name="state"/>
                </tree>
            </field>
         </record>

          <record id="view_ra_stock_print_form" model="ir.ui.view">
            <field name="name">ra.stock.print.form</field>
            <field name="model">ra.stock.print</field>
            <field name="arch" type="xml">
                <form string="Etat des stocks">
                    <header>
                        <button name="action_generate_stock" states="draft" string="Génerer l'état des stocks" type="object" class="oe_highlight"/>
                        <button name="action_export_excel" states="done" string="Exporter vers Excel" type="object" class="oe_highlight"/>
                        <button name="action_validate" states="draft" string="Valider" type="object" class="oe_highlight"/>
                        <button name="action_draft" states="done" string="Retourner a l'etat brouillon" type="object" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                    </header>
                 <sheet>
                     <group col="4">
                           <field name="name"/>
                           <field name="date"/>
                           <field name="user_id"/>

                     </group>
                     <notebook>
                         <page string="Produits">
                            <group>
                                <field name="line_ids" nolabel="1">
                                    <tree editable="Top">
                                        <field name="name"/>
                                        <field name="product_id"/>
                                        <field name="categ_id"/>
                                        <field name="qty"/>
                                        <field name="unite_id"/>
                                        <field name="price"/>
                                        <field name="in_date"/>
                                        <field name="location_id"/>
                                        <field name="note"/>
                                     </tree>
                                </field>
                                <!--<group class="oe_subtotal_footer oe_right">-->
                                    <!--<div class="oe_subtotal_footer_separator oe_inline">-->
                                        <!--<label for="total"/>-->
                                    <!--</div>-->
                                    <!--<field name="total" nolabel="1" class="oe_subtotal_footer_separator" />-->
                                <!--</group>-->
                            </group>
                         </page>
                         <page string="Parametres">
                             <group>
                                 <group>
                                     <field name="location_type"/>
                                     <field name="category_ids" widget="many2many_tags"  options="{'color_field': 'color'}"/>
                                 </group>
                                 <group>
                                     <!--<field name="qty_dispo"/>-->
                                 </group>
                             </group>
                         </page>
                         <page string="Observations">
                             <field name="observation"/>
                         </page>
                     </notebook>
                 </sheet>
                </form>
            </field>
          </record>

        <record id="view_ra_stock_print_filter" model="ir.ui.view">
            <field name="name">ra.stock.print.search.view</field>
            <field name="model">ra.stock.print</field>
            <field name="arch" type="xml">
                <search string="Etat des stocks">

             <!-- permet une recherche "directe" -->

                     <group col="10" colspan="4">
                        <field name="name"/>
                        <field name="date"/>
                        <field name="user_id"/>
                     </group>

                </search>
            </field>
        </record>

         <record model="ir.actions.act_window" id="act_ra_stock_print_view">
            <field name="name">Etat des stocks</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ra.stock.print</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window.view" id="act_ra_stock_print_view_form">
            <field name="act_window_id" ref="act_ra_stock_print_view"/>
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_ra_stock_print_form"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_ra_stock_print_view_tree">
            <field name="act_window_id" ref="act_ra_stock_print_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_ra_stock_print_tree" />
        </record>

        <menuitem id="menu_etat_stock" name="Etat des stocks"
                  parent="stock.menu_stock_inventory_control" sequence="2" action="act_ra_stock_print_view"
                  groups="stock.group_stock_manager"/>

    </data>
</odoo>
