<?xml version="1.0" encoding="utf-8"?>
<odoo>
		<template id="report_purchaseorder_document" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//tr[@class='border-black o_total']" position="before">
            <t t-if="o.timbre" >
            <tr>
                <td>Timbre</td>
            <td class="text-right">
                <span t-field="o.timbre"/>
            </td>
            </tr>
            </t>
        </xpath>
            <xpath expr="//tr[@class='border-black o_total']" position="after">
            <t t-if="o.timbre" >
            <tr class="border-black o_total">
                <td><strong>Total avec Timbre</strong></td>
            <td class="text-right">
                <strong t-field="o.amount_timbre"/>
            </td>
            </tr>
            </t>
        </xpath>
        </template>
</odoo>
