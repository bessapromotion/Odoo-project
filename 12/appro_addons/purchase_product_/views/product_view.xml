<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_purchase_product1_template_form" model="ir.ui.view">
            <field name="name">purchase.product2.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="priority">2</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='default_code']" position="after">
<!--                        attrs="{'invisible': [('', '', '')]}"-->
                        <button name="action_codifier" string="Générer le code" attrs="{'invisible': ['|', ('default_code', '!=', False), ('purchase_ok', '=', False)]}" type="object" /><separator/>
                        <field name="famille_id" attrs="{'invisible': [('purchase_ok', '=', False)], 'required': [('purchase_ok', '=', True)]}"/>
                        <field name="sousfamille_id" domain="[('famille_id', '=', famille_id)]" attrs="{'invisible': [('purchase_ok', '=', False)], 'required': [('purchase_ok', '=', True)]}"/>
                        <field name="etat_achat" attrs="{'invisible': [('purchase_ok', '=', False)]}"/>
                    </xpath>
                </data>
            </field>
        </record>

        <record id="view_purchase_product2_product_form" model="ir.ui.view">
            <field name="name">purchase.product2.product.form.inherit</field>
            <field name="model">product.product</field>
            <field name="priority">2</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='default_code']" position="after">

                        <field name="famille_id" attrs="{'invisible': [('purchase_ok', '=', False)]}"/>
                        <field name="sousfamille_id" domain="[('famille_id', '=', famille_id)]" attrs="{'invisible': [('purchase_ok', '=', False)]}"/>
                        <field name="etat_achat" attrs="{'invisible': [('purchase_ok', '=', False)]}"/>
                    </xpath>

                </data>
            </field>
        </record>

    </data>
</openerp>
