                        <th class="text-center" style="width:400px;border: 1px solid black;padding:2px"><strong>Montant HT</strong></th>
                    </tr>

                    <t t-foreach="o.order_line"   t-as="l">

                        <tr t-if=" len(o.order_line)-1 > l_index"  >
                            <td class="text-center" style="border-left: 1px solid black;border-right: 1px solid black;padding:5px;"><span t-esc='l_index + 1' /></td>
                            <td class="text-left"   style="border-left: 1px solid black;border-right: 1px solid black;padding:5px;"><span t-field="l.product_id"/></td>
                            <td class="text-center" style="border-left: 1px solid black;border-right: 1px solid black;padding:5px;"><span t-field="l.product_qty"/></td>
                            <td class="text-center" style="border-left: 1px solid black;border-right: 1px solid black;padding:5px;"><span t-field="l.price_unit"/></td>
                            <td class="text-center" style="border-left: 1px solid black;border-right: 1px solid black;padding:5px;"><span t-field="l.price_subtotal"/></td>
                        </tr>

                        <tr t-if=" len(o.order_line)-1 == l_index"  style="height: 95%;overflow-y: scroll;">
                            <td class="text-center" style="border-left: 1px solid black;border-right: 1px solid black;padding:5px;"><span t-esc='l_index + 1' /></td>
                            <td class="text-left"   style="border-left: 1px solid black;border-right: 1px solid black;padding:5px;"><span t-field="l.product_id"/></td>
                            <td class="text-center" style="border-left: 1px solid black;border-right: 1px solid black;padding:5px;"><span t-field="l.product_qty"/></td>
                            <td class="text-center" style="border-left: 1px solid black;border-right: 1px solid black;padding:5px;"><span t-field="l.price_unit"/></td>
                            <td class="text-center" style="border-left: 1px solid black;border-right: 1px solid black;padding:5px;"><span t-field="l.price_subtotal"/></td>
                        </tr>
                    </t>
            </table>

           <div class="row">
                <div class="col-xs-4 pull-right">
                    <table class="table table-condensed">
                        <tr class="border-black">
                            <td><strong>Total HT</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_untaxed"
                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                        <tr>
                            <td>TVA</td>
                            <td class="text-right">
                                <span t-field="o.amount_tax"
                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                        <tr class="border-black">
                            <td><strong>Total TTC</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_total"
                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>


            <br></br>
           <table>
                <tr>
                    <td style="font-size: 14px;width:600px;">
                        <h4 style="text-align:center;">Responsable Moyens Généraux</h4>
                    </td>
                    <td style="font-size: 14px;width:600px;">
                        <h4 style="text-align:center;">Le Directeur</h4>
                    </td>
                </tr>

            </table>


            </div>
        <div class="footer">
            <div class="text-center" >
