<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="demande_achat.report_bon_commande">
    <t t-call="web.external_layout">
    <t>
<!--    <t t-call="web.html_container">-->
    <t t-foreach="docs" t-as="o">

       <div class="page">
           <div>
                <table style="width:100%">
                    <tr>
                        <td class="text-center">
                            <img src='/demande_achat/static/src/img/entete.png' style="width:100%"/>
                        </td>
                    </tr>
                    <tr>
                        <td style="font-size: 14px;">
                            <h4 style="margin-left: 20px;">Direction des Ressources Humaines et des Moyens</h4>
                        </td>
                        <td style="font-size: 14px;text-align:right;">
                            <h4 style="margin-left: 20px;">مديرية الموارد البشرية و الوسائل</h4>
                        </td>
                    </tr>
                    <tr>
                        <td style="font-size: 14px;">
                            <h4 style="margin-left: 20px;">N° <strong><span t-field="o.name"/></strong></h4>
                        </td>
                        <td style="font-size: 14px;text-align:right;">
                            <h4 style="margin-left: 20px;"><strong>Alger, le</strong><span t-field="o.date_order"/></h4>
                        </td>
                    </tr>
                </table>
                <h2 style="text-align:center;"><strong>BON DE COMMANDE</strong></h2>
                <br/><br/><br/>
           </div>

           <table>
                <tr>
                    <td style="font-size: 14px;width:600px;">
                        <h4 style="margin-left: 20px;">RC : <strong><span t-field="o.company_id.company_registry"/></strong></h4>
                    </td>
                    <td style="font-size: 14px;width:600px;">
                        <h4 style="margin-left: 20px;">Fournisseur : <strong><span t-field="o.partner_id"/></strong></h4>
                    </td>
                </tr>
                <tr>
                    <td style="font-size: 14px;width:600px;">
                        <h4 style="margin-left: 20px;">IF : <strong><span t-field="o.company_id.nif"/></strong></h4>
                    </td>
                    <td style="font-size: 14px;width:600px;">
                        <h4 style="margin-left: 20px;">R. Commerce : <strong><span t-field="o.partner_id.rc"/></strong></h4>
                    </td>
                </tr>
               <tr>
                    <td style="font-size: 14px;width:600px;">
                        <h4 style="margin-left: 20px;">AI : <strong><span t-field="o.company_id.ai"/></strong></h4>
                    </td>
                    <td style="font-size: 14px;width:600px;">
                        <h4 style="margin-left: 20px;">I. Fiscal : <strong><span t-field="o.partner_id.nif"/></strong></h4>
                    </td>
                </tr>
            </table>
           <br/><br/>
<!---->
            <table  style="border: 1px solid black;font-size:15px;display: block; height: 500px;overflow-y: scroll;">

                    <tr style="background-color:#DAD3DA">
