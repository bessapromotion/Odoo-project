                        <field name="supplier_user_id" attrs="{'invisible':[('supplier','=',False)]}" options="{'no_create': True}"/>
                	</xpath>
                	<xpath expr="//notebook/page[@name='sales_purchases']//field[@name='property_account_position_id']" position="before">
                        <separator/><separator/>
