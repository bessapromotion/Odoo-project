 <!-- interface Clients -->
		<record id="view_partner_infoplus_form" model="ir.ui.view">
            <field name="name">res.partner.infoplus.form</field>
            <field name="model">res.partner</field>
            <field name="priority">2</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
