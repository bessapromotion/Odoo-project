<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_remboursement_superficie_form" model="ir.ui.view">
            <field name="name">crm.remboursement.superficie.form</field>
            <field name="model">crm.remboursement</field>
            <field name="inherit_id" ref="crm_remboursement.crm_remboursement_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="superficie_id" attrs="{'invisible': [('superficie_id', '=', False)]}"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
