<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


    <record id="action_creer_paiement_wizard" model="ir.actions.act_window">
        <field name="name">Nouveau paiement</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">creer.paiement.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record model="ir.ui.view" id="crm_echeancier_tree_view">
        <field name="name">crm.echeancier.tree</field>
        <field name="model">crm.echeancier</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree toolbar="1" create="false" string="Echeancier" decoration-success="state == 'done'" decoration-info="state == 'draft'" decoration-muted="state == 'cancel'">
                <field name="order_id"/>
                <field name="name"/>
                <field name="label"/>
                <field name="partner_id"/>
                <field name="project_id"/>
                <field name="commercial_id"/>
                <field name="charge_recouv_id"/>
                <field name="date_creation"/>
                <field name="date_prevue"/>
                <field name="date_paiement"/>
                <field name="montant_prevu" sum="prevu"/>
                <field name="montant" sum="mtn"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="crm_echeancier_pivot_view">
        <field name="name">crm.echeancier.pivot</field>
        <field name="model">crm.echeancier</field>
        <field name="type">pivot</field>
        <field name="arch" type="xml">
            <pivot  string="Echeancier">
                <field name="order_id"/>
                <field name="name"/>
                <field name="label"/>
                <field name="partner_id"/>
                <field name="project_id"/>
                <field name="date_creation"/>
                <field name="date_prevue"/>
                <field name="date_paiement"/>
                <field name="montant_prevu" />
                <field name="montant" />
                <field name="state"/>
            </pivot>
        </field>
    </record>

    <record model="ir.ui.view" id="crm_echeancier_graph_view">
            <field name="name">crm.echeancier.graph</field>
            <field name="model">crm.echeancier</field>
            <field name="type">graph</field>
            <field name="arch" type="xml">
                <graph  string="Echeancier">
                    <field name="project_id"/>
                    <field name="commercial_id"/>

                </graph>
            </field>
        </record>

    <record model="ir.ui.view" id="crm_echeancier_form_view">
        <field name="name">Echeancier</field>
        <field name="model">crm.echeancier</field>
        <field name="arch" type="xml">
            <form string="Echeance">
                <header>
                    <button name="action_validate" string="Valider l'echeance" class="oe_highlight" attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('type', '=', 'remboursement')]}" type="object"/>
                    <field name="order_id_state" invisible="1"/>
                    <button name="action_send_to_payment" string="Envoi pour paiement" class="oe_highlight"  attrs="{'invisible': ['|','|', ('order_id_state', 'in', ('cancel')),('state', 'not in', ('open','inprogress')), ('type', '=', 'remboursement')]}" type="object"/>
                    <!--button name="%(act_report_ordre_paiement)d" string="Imprimer l'ordre de paiement" class="oe_highlight" states="inprogress" type="action"/-->
                    <!--button string="Enregistrer un paiement" name="%(action_creer_paiement_wizard)d" type="action" class="oe_highlight" states="inprogress"/-->
                    <button name="action_cancel" string="Annuler l'echeance" attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('type', '=', 'remboursement')]}" type="object"/>
                    <button name="wizard_change_amount" string="Changement montant" attrs="{'invisible': ['|','|', ('order_id_state', 'in', ('cancel')), ('state', '!=', 'open'), ('type', '=', 'remboursement')]}" type="object"/>
                    <!--button name="action_draft" string="Remettre en brouillon" states="open" type="object"/-->

                    <field name="state" nolabel="1" widget="statusbar" statusbar_visible="draft,open,done"/>
                </header>
                <sheet>
                    <h1><field name="name"/></h1>
                    <group>
                        <group>
                            <field name="label"/>
                            <field name="order_id"/>
                            <field name="project_id"/>
                            <field name="type" invisible="1"/>
                                   <!--domain="[('partner_id', '=', partner_id)]"/>-->
                            <field name="partner_id"/>
                            <field name="phone" />
                            <field name="mobile" />

                        </group>
                        <group>
                            <field name="date_creation" />
                            <field name="date_prevue" />
                            <field name="date_paiement" />
                            <field name="commercial_id" />
                            <field name="charge_recouv_id" />
                        </group>
                        <group>
                            <field name="amount_total_signed"/>
<!--                            <field name="residual_signed"/>-->
                        </group>

                        <group>
                            <!--<field name="taux"/>-->
                            <field name="montant_prevu"/>
                            <field name="montant"/>
                            <field name="montant_restant"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Paiements">
                            <field name="payment_ids" readonly="1" attrs="{'invisible': [('type', '=', 'remboursement')]}">
                                <tree>
                                    <field name="name"/>
                                    <field name="payment_date"/>
                                    <field name="communication"/>
                                    <field name="amount" sum="totzl"/>
                                    <field name="mode_paiement_id"/>
                                    <field name="doc_payment_id"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                            <separator string="Veillez consulter les paiements dans le document de remboursement lié a cette échéance" attrs="{'invisible': [('type', '!=', 'remboursement')]}" style="color: #FFA500"/>
                            <separator attrs="{'invisible': [('type', '!=', 'remboursement')]}"/>

                        </page>

                        <page string="Observation">
                            <field name="observation"/>
                        </page>
                    </notebook>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_crm_echeancier_filter" model="ir.ui.view">
            <field name="name">crm.echeancier.search.view</field>
            <field name="model">crm.echeancier</field>
            <field name="arch" type="xml">
                <search string="echeancier Search">
             <!-- permet une recherche "directe" -->
                     <group col="10" colspan="4">
                        <field name="name"/>
                        <field name="order_id"/>
                        <field name="partner_id"  filter_domain="['|', '|',  ('partner_id.name', 'ilike', self), ('partner_id.code_client', 'ilike', self), ('partner_id.num_pi', 'ilike', self)]"/>
                        <field name="project_id"/>
                        <field name="observation" />
                      <separator/>
                        <filter name="draft" string="Brouillon" domain="[('state','=','draft')]"/>
                        <filter name="unpaid" string="Impayée" domain="[('state', '=', 'open')]"/>
                        <filter name="paid" string="Payée" domain="[('state', '=', 'done')]"/>
                        <filter name="inprogress" string="En instance de paiement" domain="[('state', '=', 'inprogress')]"/>
                        <filter name="late" string="En retard" domain="['&amp;', ('date_prevue', '&lt;', time.strftime('%%Y-%%m-%%d')), ('state', '=', 'open')]" />
                    <separator/>

                    </group>
                    <!-- Permet le regroupement -->
                    <separator/>
                    <group expand="0" string="Grouper par" >
                        <filter string="Commercial" name="commercial_id" context="{'group_by':'commercial_id'}" />
                        <filter string="Projet" name="project_id" context="{'group_by':'project_id'}" />
                        <filter string="Date de paiement prevue" name="date_prevue" context="{'group_by':'date_prevue'}" />
                    </group>
                    <separator/>
                     <!-- permet un filtrage -->
                </search>
            </field>
        </record>

    <record model="ir.actions.act_window" id="action_crm_echeancier_tree_view">
        <field name="name">Echeancier</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">crm.echeancier</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,pivot,graph</field>
        <field name="view_id" ref="crm_echeancier_tree_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cliquez ici pour créer une nouvelle echeance.
            </p><p>

            </p><p>

            </p>
         </field>
    </record>

    <record model="ir.actions.act_window" id="action_crm_echeancier_payment_tree_view">
        <field name="name">Echeances a payer</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">crm.echeancier</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field eval="False" name="view_id"/>
        <field name="search_view_id" ref="view_crm_echeancier_filter"/>
        <field name="domain">[('state', '=', 'inprogress')]</field>
<!--        <field name="context">{'default_type_id': 1, 'default_state':'draft'}</field>-->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucune echéance a encaisser.
            </p><p>

            </p><p>

            </p>
         </field>
    </record>

    <record id="action_crm_echeancier_payment_tree_view1" model="ir.actions.act_window.view">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="crm_echeancier_tree_view"/>
        <field name="act_window_id" ref="action_crm_echeancier_payment_tree_view"/>
    </record>

    <record id="action_crm_echeancier_payment_tree_view2" model="ir.actions.act_window.view">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="crm_echeancier_form_view"/>
        <field name="act_window_id" ref="action_crm_echeancier_payment_tree_view"/>
    </record>

    </data>
</openerp>
