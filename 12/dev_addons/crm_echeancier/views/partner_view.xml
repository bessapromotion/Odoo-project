<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="action_partner_echeances_button" model="ir.actions.act_window">
            <field name="name">Echeances</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.echeancier</field>
            <field name="context">{'search_default_partner_id': [active_id], 'default_partner_id': active_id}</field>
            <!--<field name="domain"></field>-->
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_crm_echeancier_filter"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Cliquez pour créer une echeance.
              </p><p>
              </p>
            </field>
        </record>
                <record id="action_partner_produits_button" model="ir.actions.act_window">
            <field name="name">Produits</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template</field>
            <field name="context">{'search_default_client_id': [active_id], 'default_client_id': active_id}</field>
            <!--<field name="domain"></field>-->
            <field name="view_mode">tree,form</field>
            <!--<field name="search_view_id" ref="view_crm_echeancier_filter"/>-->
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Cliquez pour créer un produit.
              </p><p>
              </p>
            </field>
        </record>

        <record id="view_partner_echeancier_form" model="ir.ui.view">
            <field name="name">res.partner.echeancier.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                    <button name="toggle_active" position="before">
                        <button
                                class="oe_stat_button"
                                type="action"
                                name="%(action_partner_produits_button)d"
                                attrs="{'invisible':[('nbr_produit','=', 0)]}"
                                context="{'default_client_id': active_id}"
                                icon="fa-home">
                                <field string="Bien(s)" name="nbr_produit" widget="statinfo" />
                        </button>
                        <button
                                class="oe_stat_button"
                                type="action"
                                name="%(action_partner_echeances_button)d"
                                attrs="{'invisible':[('nbr_echeances','=', 0)]}"
                                context="{'default_partner_id': active_id}"
                                icon="fa-money">
                                <field string="Echeances R." name="nbr_echeances" widget="statinfo" />
                        </button>
                    </button>
            </field>
        </record>


    </data>
</openerp>
