<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_payment_2_form" model="ir.ui.view">
            <field name="name">account.payment.2.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='communication']" position="attributes">
                    <attribute name="string">Motif de paiement</attribute>
                </xpath>
                <xpath expr="//field[@name='communication']" position="after">
                    <field name="project_id" attrs="{'invisible' : [('partner_type', '=', 'supplier')]}"/>
                    <field name="echeance_id" attrs="{'invisible' : [('partner_type', '=', 'supplier')]}"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                   <field name="partner_reference" attrs="{'invisible' : [('partner_type', '=', 'supplier')]}"/>
                </xpath>
                <xpath expr="//field[@name='journal_id']" position="after">
                    <field name="mode_paiement_id" attrs="{'readonly':[('state','not in', ('draft'))]}"/>
                    <field name="paiement_concretisation" attrs="{'invisible' : [('partner_type', '!=', 'customer')]}"/>
                    <separator/>
                    <field name="doc_payment_id" attrs="{'invisible':[('mode_paiement_id','not in', (1,3)) ], 'readonly':[('state','not in', ('draft'))]}"/>
                </xpath>
                <xpath expr="//field[@name='doc_payment_id']" position="after">
                    <field name="date"  attrs="{'invisible':[('mode_paiement_id','not in', (1,3))]}"/>
                    <field name="ordonateur"   attrs="{'invisible':['|', ('mode_paiement_id','not in', (1,3)),('partner_type', '=', 'supplier')]}"/>
                    <field name="domiciliation" attrs="{'invisible':['|', ('mode_paiement_id','not in', (1,3)),('partner_type', '=', 'supplier')]}"/>
                    <field name="cheque_objet" attrs="{'invisible':['|', ('mode_paiement_id','not in', (1,3)),('partner_type', '=', 'supplier')]}"/>
                    <field name="cheque_type"  attrs="{'invisible':['|', ('mode_paiement_id','not in', (1,3)),('partner_type', '=', 'supplier')]}"/>
                    <separator/>
                </xpath>
                <xpath expr="//sheet[1]" position="inside">
                     <notebook>
                        <page string="Observation">
                            <field name="observation"/>
                        </page>
                     </notebook>
                </xpath>
            </field>
        </record>
	<record id="view_payment_2_tree" model="ir.ui.view">
            <field name="name">account.payment.2.tree</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='journal_id']" position="after">
                    <field name="project_id" />
                    <field name="mode_paiement_id" />
                </xpath>
            </field>
        </record>


    </data>
</openerp>
