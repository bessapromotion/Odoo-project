<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    <!-- visite -->
    <record model="ir.ui.view" id="echeancier_modele_tree_view">
        <field name="name">echeancier.modele.tree</field>
        <field name="model">echeancier.modele</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree toolbar="1" string="Modele echeancier" >
                <field name="name"/>

<!--                <field name="state"/>-->
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="echeancier_modele_form_view">
        <field name="name">echeancier.modele.form</field>
        <field name="model">echeancier.modele</field>
        <field name="arch" type="xml">
            <form string="Modele echeancier">
<!--                <header>-->
<!--                    <button name="action_validate" string="Valider l'Annulation" class="oe_highlight" states="draft" type="object"/>-->
<!--                    <button name="action_cancel" string="Annuler le document" states="draft" type="object"/>-->
<!--                    <field name="state" nolabel="1" widget="statusbar" statusbar_visible="draft,valid"/>-->
<!--                </header>-->
                <sheet>
                    <h1><field name="name"/></h1>

                    <notebook>
                        <page string="Echeances">
                            <field name="echeance_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="taux_av"/>
                                    <field name="taux_py" sum="t_py"/>
                                    <field name="nbr_jour"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Description">
                            <field name="description" />
                        </page>
                    </notebook>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_echeancier_modele_tree_view">
        <field name="name">Modele echeancier</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">echeancier.modele</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="echeancier_modele_tree_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cliquez ici pour cr√©er un nouveau modele d'echeancier.
            </p><p>

            </p><p>

            </p>
         </field>
    </record>


    </data>
</openerp>
