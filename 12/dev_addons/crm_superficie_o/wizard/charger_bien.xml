<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="charger_biens_wizard_form_view" model="ir.ui.view">
            <field name="name">crm.superficie.charger.bien.wizard.form</field>
            <field name="model">crm.superficie.charger.bien.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Charger les biens">
<!--                    <field name="state" invisible="1"/>-->
                    <h1>
                        <field name="superficie_id"/>
                    </h1>
                    <group>
                        <group>
                            <field name="project_id" options="{'no_create': True}"/>
                        </group>
                        <group/>
                        <group>
                            <field name="type_bien_ids" widget="many2many_tags" options="{'no_create': True}"/>

                        </group>
                        <group>
                            <field name="etage_ids" widget="many2many_tags" options="{'no_create': True}"/>
<!--                            <field name="bloc"/>-->
                            <field name="bloc_ids" widget="many2many_tags"/>
                            <field name="state" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Biens" states="step2">
                            <field name="bien_ids">
                                <tree create="false">
                                    <field name="name"/>
                                    <field name="num_lot"/>
                                    <field name="type_id"/>
                                    <field name="format_id"/>
                                    <field name="orientation"/>
                                    <field name="order_id" />
                                    <field name="partner_id" />
                                    <field name="num_dossier" />
                                    <field name="superficie"/>
                                    <field name="etat"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <footer>
                         <button class="oe_highlight" string="Rechercher" states="step1" name="action_search" type="object"/>
                         <button class="oe_highlight" string="Appliquer" states="step2" name="action_appliquer" type="object"/>
                         <button string="Faire une autre recherche" states="step2" name="action_autre_recherche" type="object"/>
                         <button class="oe_link" string="Annuler" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
