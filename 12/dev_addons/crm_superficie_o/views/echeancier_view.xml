            <field name="model">crm.echeancier</field>
            <field name="inherit_id" ref="crm_echeancier.crm_echeancier_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_id']" position="after">
                    <field name="superficie_id" attrs="{'invisible': [('superficie_id', '=', False)]}"/>
                    <field name="remboursement_id" attrs="{'invisible': [('remboursement_id', '=', False)]}"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
