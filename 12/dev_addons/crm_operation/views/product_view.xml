<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_crm_product_reservation_template_form" model="ir.ui.view">
            <field name="name">crm.product.reservation.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="priority">2</field>
            <field name="inherit_id" ref="crm_product.view_crm_product_template_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='order_id']" position="after">
                        <field name="reservation_id" />
                    </xpath>
                </data>
            </field>
        </record>

        <record id="view_crm_product_product_form" model="ir.ui.view">
            <field name="name">crm.product.reservation.product.form.inherit</field>
            <field name="model">product.product</field>
            <field name="priority">2</field>
            <field name="inherit_id" ref="crm_product.view_crm_product_product_form"/>
            <field name="arch" type="xml">
                <data>

                    <xpath expr="//field[@name='order_id']" position="after">
                        <field name="reservation_id" />
                    </xpath>
                </data>
            </field>
        </record>

        <record id="view_crm_product_template_tree" model="ir.ui.view">
            <field name="name">crm.product.template.tree.inherit</field>
            <field name="model">product.template</field>
            <field name="priority">2</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <data>
		    <xpath expr="//field[@name='name']" position="after">
                        <field name="type_id" />
                        <field name='etat' />
                        <field name='price_2' />

                    </xpath>

                    <xpath expr="//field[@name='categ_id']" position="after">
                        <field name="write_uid" />
			<field name="write_date" />
                        <field name='create_uid' />
                    </xpath>
                </data>
            </field>
        </record>

    </data>
</openerp>
