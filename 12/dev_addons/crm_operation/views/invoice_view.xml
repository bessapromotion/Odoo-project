     <record id="crm_suivi_facture_tree_view" model="ir.ui.view">
            <field name="name">crm.suivi.facture.tree</field>
            <field name="model">account.invoice</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree create="false" decoration-info="state == 'draft'" decoration-muted="state == 'cancel'" string="Paiements" banner_route="/account/account_invoice_onboarding">
                    <!--<field name="numero" />-->
                    <!--&lt;!&ndash;<field name="declare" />&ndash;&gt;-->
                    <!--<field name="amount_total_signed" string="Montant" sum="Total"/>-->
                    <!--<field name="taux_objectif"  string="Objectif (%)"/>-->
                    <!--<field name="ratio" />-->
                    <!--&lt;!&ndash;<field name="tva_declare" />&ndash;&gt;-->
                    <!--&lt;!&ndash;<field name="notaire" />&ndash;&gt;-->
                    <!--&lt;!&ndash;<field name="total_declare" />&ndash;&gt;-->
                    <!--&lt;!&ndash;<field name="objectif_declare" />&ndash;&gt;-->
                    <!--<field name="period" />-->
                    <!--<field name="charge" />-->
                    <!--<field name="objectif"  sum="Total"/>-->
                    <!--<button name="compute_new_fields" string="Actualiser" type="object" icon="fa-refresh" />-->
                    <field name="project_id"/>
                    <field name="partner_id" groups="base.group_user" string="Client"/>
                    <field name="mode_achat" />
                    <field name="date_invoice" string="Date"/>
                    <field name="number"/>
                    <field name="commercial_partner_id" invisible="1"/>
                    <field name="reference" invisible="1"/>
                    <field name="name" invisible="1"/>
                    <field name="journal_id" invisible="1"/>
                    <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                    <field name="user_id"  string="Commercial"/>
                    <field name="charge_recouv_id"/>
                    <field name="date_due" string="Echeance"/>
                    <field name="origin"/>
                    <field name="amount_untaxed" string="Montant HT" sum="Total"/>
                    <field name="amount_tax"  string="TVA" sum="Total"/>
                    <field name="amount_total_signed" string="Total TTC" sum="Total"/>
                    <field name="total_versement" string="Versement" sum="Amount Ver"/>
                    <field name="residual_signed" string="Montant Du" sum="Amount Due"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="company_currency_id" invisible="1"/>
                    <field name="state"/>
                    <field name="type" invisible="context.get('type',True)"/>
                </tree>
            </field>
        </record>

 <record id="crm_suivi_facture_filter" model="ir.ui.view">
            <field name="name">crm.suivi.facture.select</field>
            <field name="model">account.invoice</field>
            <field name="arch" type="xml">
                <search string="Recherche Paiements">
                    <field name="number" string="Facture" filter_domain="['|','|','|', ('number','ilike',self), ('origin','ilike',self), ('reference', 'ilike', self), ('partner_id', 'child_of', self)]"/>
                    <filter domain="[('user_id','=',uid)]" name="Mes Factures" help="Mes Factures"/>
                    <separator/>
                    <filter name="draft" string="Brouillon" domain="[('state','=','draft')]"/>
                    <filter name="unpaid" string="Impayée" domain="[('state', '=', 'open')]"/>
                    <!--<filter name="in_payment" string="In Payment" domain="[('state', '=', 'in_payment')]"/>-->
                    <filter name="paid" string="Payée" domain="[('state', '=', 'paid')]"/>
                    <filter name="late" string="En retard" domain="['&amp;', ('date_due', '&lt;', time.strftime('%%Y-%%m-%%d')), ('state', '=', 'open')]" help="Overdue invoices, maturity date passed"/>
                    <separator/>

                    <field name="partner_id" operator="child_of" filter_domain="['|', '|',  ('partner_id.name', 'ilike', self), ('partner_id.code_client', 'ilike', self), ('partner_id.num_pi', 'ilike', self)]"/>
                    <field name="user_id" string="Commercial" domain="[('share','=', False)]"/>
                    <field name="date" string="Period"/>

                    <group expand="0" string="Group By">
                        <filter name="group_by_partner_id" string="Client" context="{'group_by':'commercial_partner_id'}"/>
                        <filter string="Commercial" name="salesperson" context="{'group_by':'user_id'}"/>
                        <filter string="Chargé de Recouvrement" name="charge_recouv_id" context="{'group_by':'charge_recouv_id'}"/>
                        <filter name="status" string="Etat" context="{'group_by':'state'}"/>
                        <separator/>
                        <filter string="Date facture" name="invoicedate" context="{'group_by':'date_invoice'}"/>
                        <filter string="Date paiement" name="duedate" context="{'group_by':'date_due'}"/>
                    </group>
               </search>
            </field>
        </record>

    <record id="action_crm_suivi_facture_tree_view" model="ir.actions.act_window">
            <field name="name">Paiements par factures</field>
            <field name="res_model">account.invoice</field>
            <field name="view_type">form</field>

            <field name="view_mode">tree,form,calendar,graph,pivot</field>
            <field eval="False" name="view_id"/>
            <field name="domain">[('type','=','out_invoice')]</field>
            <field name="context">{'type':'out_invoice', 'journal_type': 'sale'}</field>
            <field name="search_view_id" ref="crm_suivi_facture_filter"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Créer une facture client
              </p><p>
                Créer des factures, enregistrer des paiements et garder une trace des discussions avec vos clients.
              </p>
            </field>
    </record>

        <record id="action_crm_suivi_facture_tree_view1" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="crm_suivi_facture_tree_view"/>
            <field name="act_window_id" ref="action_crm_suivi_facture_tree_view"/>
        </record>

        <record id="action_crm_suivi_facture_tree_view2" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account.invoice_form"/>
            <field name="act_window_id" ref="action_crm_suivi_facture_tree_view"/>
        </record>

    </data>
</openerp>
