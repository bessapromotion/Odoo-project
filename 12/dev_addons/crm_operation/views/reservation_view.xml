<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    <record id="annulation_action_new" model="ir.actions.act_window">
        <field name="name">Annulation</field>
        <field name="res_model">crm.annulation</field>
        <field name="view_mode">form,tree</field>
        <field name="domain">[('reservation_id', '=', active_id)]</field>
        <field name="context">{'search_default_reservation_id': active_id, 'default_reservation_id': active_id}</field>
    </record>
    <!-- visite -->
    <record model="ir.ui.view" id="crm_reservation_tree_view">
        <field name="name">crm.reservation.tree</field>
        <field name="model">crm.reservation</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree toolbar="1" create="false" string="Reservation" decoration-info="state == 'draft'" decoration-muted="state == 'cancel'" >
                <field name="name"/>
                <field name="partner_id"/>
                <field name="date"/>
                <field name="date_limite"/>
                <field name="project_id"/>
                <field name="opportunity_id"/>
                <field name="order_id"/>
                <field name="invoice_id"/>
                <!--<field name="product_id"/>-->
                <field name="commercial_id"/>
                <field name="charge_recouv_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="crm_reservation_form_view">
        <field name="name">Reservation</field>
        <field name="model">crm.reservation</field>
        <field name="arch" type="xml">
            <form string="Réservation">
                <header>

                    <button name="action_validate" string="Valider la réservation" class="oe_highlight" states="draft" type="object"
                    confirm="Voulez-vous valider la réservation ?"/>
                    <button name="print_reservation" string="Imprimer" type="object" states="valid" class="oe_highlight"/>
                    <button name="action_cancel" string="Annuler le document" states="draft" type="object"/>

<!--                    <button string="Créer une annulation" name="%(annulation_action_new)d" type="action" states="valid" />-->
                    <field name="state" nolabel="1" widget="statusbar" statusbar_visible="draft,valid"/>
                </header>
                <sheet>
                    <field name="photo" widget='image' class="oe_avatar" />
                    <h1><field name="name"/></h1>

                    <group>
                        <group>
                            <field name="num_dossier"/>
                            <field name="order_id"  options='{"no_create": True}' domain="[('have_reservation', '=', False), ('state', 'not in', ('cancel', 'sent', 'draft')), ('invoice_count', '>', 0)]"/>
                            <field name="invoice_id"  options='{"no_create": True}'/>
                            <field name="partner_id"/>
                            <field name="mode_achat"/>
                            <field name="phone" />
                            <field name="mobile" />
                            <!--<field name="product_id" />-->
                        </group>
                        <group>
                            <field name="date" />
                            <field name="date_limite" />
                            <field name="commercial_id" />
                            <field name="charge_recouv_id" />
                            <field name="basculement_dst_id" attrs="{'readonly': [('basculement_dst_id','=',False)]}"/>
                            <field name="basculement_src_id" attrs="{'readonly': [('basculement_src_id','=',False)]}"/>
                        </group>
                        <group>
                            <field name="project_id"  options='{"no_create": True}'/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Reservations">
                            <field name="product_ids">
                                <tree editable="Top">
                                    <field name="name"/>
                                    <field name="type_id"/>
                                    <field name="bloc"/>
                                    <field name="etage"/>
                                    <field name="format_id"/>
                                    <field name="orientation"/>
                                    <field name="superficie"/>
                                    <field name="prix_m2"/>
                                    <field name="price_2"/>
                                    <field name="note"/>
                                </tree>

                            </field>
                        </page>
                        <page string="Autres informations">
                            <group>
                                <group>
                                    <field name="opportunity_id"  options='{"no_create": True}'/>
                                </group>
                                <group>

                                </group>
                            </group>
                        </page>
                        <page string="Observation">
                            <field name="observation"/>

                        </page>
                    </notebook>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

        <record id="view_crm_reservation_filter" model="ir.ui.view">
            <field name="name">crm.reservation.search.view</field>
            <field name="model">crm.reservation</field>
            <field name="arch" type="xml">
                <search string="reservation Search">
             <!-- permet une recherche "directe" -->
                     <group col="10" colspan="4">
                        <field name="name"/>
                        <field name="num_dossier"/>
                        <field name="partner_id"  filter_domain="['|', '|',  ('partner_id.name', 'ilike', self), ('partner_id.code_client', 'ilike', self), ('partner_id.num_pi', 'ilike', self)]"/>
                        <field name="commercial_id"/>
                        <field name="project_id"/>
                        <field name="order_id"/>
                        <field name="charge_recouv_id"/>
                        <!--<field name="product_id"/>-->
                        <field name="observation" />
                    </group>
                    <!-- Permet le regroupement -->
                    <filter name="draft" string="Nouvelle" domain="[('state', '=', 'draft')]"/>
                    <filter name="valid" string="Validée" domain="[('state', '=', 'valid')]"/>
                    <filter name="bascul" string="Basculée" domain="[('state', '=', 'bascul')]"/>
                    <filter name="cancel" string="Annulée" domain="[('state', '=', 'cancel')]"/>
                    <filter name="late" string="En retard" domain="['&amp;', ('date_limite', '&lt;', time.strftime('%%Y-%%m-%%d')), ('state', '=', 'draft')]" />
                    <separator/>
                    <group expand="0" string="Grouper par" >
                        <filter string="Commercial" name="commercial_id" context="{'group_by':'commercial_id'}" />
                        <filter string="Projet" name="project_id" context="{'group_by':'project_id'}" />
                    </group>
                    <separator/>
                     <!-- permet un filtrage -->
                </search>
            </field>
        </record>
        <record model="ir.ui.view" id="crm_reservation_pivot_view">
             <field name="name">crm.reservation.pivot</field>
             <field name="model">crm.reservation</field>
             <field name="type">pivot</field>
             <field name="arch" type="xml">
                 <pivot display_quantity="true" string="Réservation">
                     <field name="name" />
                     <field name="partner_id" />
                     <field name="date" />
                     <field name="date_limite" />
                     <field name="project_id" type="col"/>
                     <field name="opportunity_id" />
                     <field name="order_id" />
                     <field name="commercial_id" />
                     <field name="charge_recouv_id"/>
                     <field name="state"/>
            </pivot>
        </field>
    </record>
    <record model="ir.ui.view" id="crm_reservation_graph_view">
                 <field name="name">crm.reservation.graph</field>
                 <field name="model">crm.reservation</field>
                 <field name="type">graph</field>
                 <field name="arch" type="xml">
                      <graph string="Réservation par Projet">
                        <field name="project_id"/>
                        <field name="commercial_id" />
                      </graph>
            </field>
    </record>
     <record model="ir.actions.act_window" id="action_crm_reservation_tree_view">
