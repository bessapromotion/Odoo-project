<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<template id="report_annulation">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.external_layout">
                <div class="page">
                    <p  align="left">Réf: <span t-field="o.name"/></p>
                    <p  style="margin-top : -45px;" align="right">Alger le : <span t-field="o.date"/></p>
                    <h2 class="text-center" ><strong>Décision d'<span t-field="o.type_id.name"/></strong></h2>
                    
                    <table class="table table-condensed" style="margin-top:10px;border:1px solid black;">
                        <tr t-foreach="o.product_ids" t-as="l">
                            <tr>
                                <td class="text-center" colspan="4" style="border:1px solid black;vertical-align:middle;padding-center:10px;"><strong>Information de la réservation</strong></td>
                                <!--td class="text-left" style="border:1px solid black;vertical-align:middle;padding-left:10px;"><strong>Réservation</strong></td>
                                <td class="text-left" style="border:1px solid black;vertical-align:middle;padding-left:10px;"><strong>Annulation</strong></td>
                                <td class="text-left" style="border:1px solid black;vertical-align:middle;padding-left:10px;"><strong>Suivi par</strong></td-->
                            </tr>
                            <tr>
                                <tr>
                                    <td>
                                        Client :
                                    </td>
                                    <td>
                                        <strong><span t-esc="o.partner_id.name"/></strong>
                                    </td>
                                    <td>
                                        Bien :
                                    </td>
                                    <td>
                                        <strong><span t-esc="l.type_id.name"/></strong>
                                    </td>                                
                                </tr>
                                <tr>
                                    <td>
                                        Dossier : 
                                    </td>
                                    <td>
                                        <strong><span t-field="o.project_id.code"/>-<span t-field="o.reservation_id.order_id.num_dossier"/></strong>
                                    </td>
                                    <td>
                                        Mode achat : 
                                    </td>
                                    <td>
                                        <span t-if="o.reservation_id.order_id.mode_achat=='1'">Auto financement</span>
                                        <span t-if="o.reservation_id.order_id.mode_achat!='1'">Crédit bancaire</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Date de réservation : 
                                    </td>
                                    <td>
                                        <span t-esc="o.reservation_id.date.strftime('%d/%m/%Y')"/>
                                    </td>
                                    <td>
                                        Date d'annulation :
                                    </td>
                                    <td>
                                        <span t-esc="o.date.strftime('%d/%m/%Y')"/>
                                    </td>                                 
                                </tr>
                            </tr>
                            <tr colspan="2" >
                               
                                <td class="text-center" colspan="4" style="border:1px solid black;vertical-align:middle;padding-center:10px;">
                                    <strong>Détail de la transaction</strong>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <strong>Projet :</strong>
                                </td>
                                <td>
                                    <span t-field="l.project_id.name" />
                                </td>                                
                            
                                <td>
                                    <strong>Bloc :</strong>
                                </td>
                                <td>
                                    <span t-field="l.bloc" />
                                </td>                                
                            </tr>
                            <tr>
                                <td>
                                    <strong>Etage :</strong>
                                </td>
                                <td>
                                    <span t-field="l.etage" />
                                </td>                                
                            
                                <td>
                                    <strong>Orientation :</strong>
                                </td>
                                <td>
                                    <span t-field="l.orientation" />
                                </td>                                
                            </tr>
                            <tr>
                                <td>
                                    <strong>Superficie :</strong>
                                </td>
                                <td>
                                    <span t-field="l.superficie" t-options = '{"widget" : "float", "precision":2}'/> m2
                                </td>                                
                            
                                <td>
                                    <strong>Prix m² :</strong>
                                </td>
                                <td>
                                    <span t-field="l.prix_m2"  t-options = '{"widget" : "float", "precision":2}'/> DZD
                                </td>                                
                            </tr>
                            <tr>
                                <td>
                                    <strong>Total versement :</strong>
                                </td>
                                <td>
                                    <span t-field="o.reservation_id.total_paiement" />
                                </td>
                                <td>
                                    <strong>Total HT :</strong>
                                </td>
                                <td>
                                    <span t-field="l.price_2"  t-options = '{"widget" : "float", "precision":2}'/> DZD
                                </td>                                 
                            </tr>
                            <span t-if="o.reservation_id.order_id.mode_achat!='1'">
                                <tr>
                                    <td>
                                        <strong>Crédit mobilisé</strong>
                                    </td>
                                    <td>
                                        Oui <input type="checkbox"/> / Non <input type="checkbox"/>
                                    </td>
                                    <td>
                                        Montant :
                                    </td>
                                    <td>
                                        Banque :
                                    </td>                                 
                                </tr>
                            </span>
                            <tr>
                                <td>
                                    <strong>1ere Mise en demeure</strong>
                                </td>
                                <td>
                                    Date :
                                </td>
                                <td>
                                    Par Poste <input type="checkbox"/>
                                </td>
                                <td>
                                    Par email <input type="checkbox"/>
                                </td>                                 
                            </tr>
                            <tr>
                                <td>
                                    <strong>2 Mise en demeure</strong>
                                </td>
                                <td>
                                    Date :
                                </td>
                                <td>
                                    Par Poste <input type="checkbox"/>
                                </td>
                                <td>
                                    Par email <input type="checkbox"/>
                                </td>                                 
                            </tr>
                            <tr>
                                <td class="text-center" colspan="4" style="border:1px solid black;vertical-align:middle;padding-center:10px;">
                                    <strong>Motif d'Annulation :</strong>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="4">
                                    <strong t-esc="o.motif"/>
                                </td>
                            </tr>
                            
                        </tr>
                    </table>

                    <table class="table table-condensed" style="border:1px solid;position:absolute;top:800px;">
                       <tr>
                           <td  class="text-center"  style="width:25%;border:1px solid black;vertical-align:middle;padding-left:10px;">
                               <strong><u>VISA Recouvrement</u></strong>
                           </td>

                           <td  class="text-center" style="width:25%;border:1px solid black;vertical-align:middle;padding-left:10px;">
                               <strong><u>VISA Commercial</u></strong>

                           </td>

                           <td class="text-center" style="width:25%;border:1px solid black;vertical-align:middle;padding-left:10px;">
                               <strong><u>VISA DAF</u></strong>
                           </td>

                           <td class="text-center" style="width:25%;border:1px solid black;vertical-align:middle;padding-left:10px;">
                               <strong><u>VISA DGA</u></strong>
                           </td>
                       </tr>
                       <tr>
                           <td  class="text-center"  style="width:25%;border:1px solid black;">
                               <br/><br/><br/><br/><br/>
                           </td>

                           <td  class="text-center" style="width:25%;border:1px solid black;">

                           </td>

                           <td class="text-center" style="width:25%;border:1px solid black;">

                           </td>

                           <td class="text-center" style="width:25%;border:1px solid black;">

                           </td>
                       </tr>
                   </table>
                </div>
            </t>
        </t>
    </t>
</template>

</odoo>