<?xml version="1.0" encoding="utf-8" ?>
<odoo>


    <menuitem name="Rapports" id="menu_rapport" parent="crm_operation.menu_operation" sequence="50"  groups="sales_team.group_sale_salesman"/>

    <!-- -->
    <record id="sale_report_wizard" model="ir.ui.view">
        <field name="name">Rapport des ventes</field>
        <field name="model">sale.salesperson.report</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Ventes par commercial(e)">
                <group>
                    <group>
                        <field name="start_date"/>
                    </group>
                    <group>
                        <field name="end_date"/>
                    </group>
                </group>
                <group>
                    <field name="salesperson_ids" widget="many2many_checkbox"/>
                </group>
                <footer>
                    <button name="print_sale_report_by_salesperson" string="Imprimer" type="object" class="oe_highlight"/>
                    <button string="Annuler" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sale_report_wizard" model="ir.actions.act_window">
        <field name="name">Ventes par commercial(e)s</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.salesperson.report</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sale_report_wizard"/>
        <field name="target">new</field>
    </record>

    <menuitem action="action_sale_report_wizard"
              id="menu_sale_report_wizard"
              parent="menu_rapport"
     groups="sales_team.group_sale_salesman"/>

    <!-- -->
    <record id="sale_report_wizard_project" model="ir.ui.view">
        <field name="name">Rapport des ventes</field>
        <field name="model">sale.project.report</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Ventes par projet">
                <group>
                    <group>
                        <field name="start_date"/>
                    </group>
                    <group>
                        <field name="end_date"/>
                    </group>
                </group>
                <group>
                    <field name="project_ids" widget="many2many_checkbox"/>
                </group>
                <footer>
                    <button name="print_sale_report_by_project" string="Imprimer" type="object" class="oe_highlight"/>
                    <button string="Annuler" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sale_report_wizard_project" model="ir.actions.act_window">
        <field name="name">Ventes par projet</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.project.report</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sale_report_wizard_project"/>
        <field name="target">new</field>
    </record>


    <menuitem action="action_sale_report_wizard_project"
              id="menu_sale_report_wizard_project"
              parent="menu_rapport"
     groups="sales_team.group_sale_salesman"/>

    <!-- -->
    <record id="paiement_rapport_wizard" model="ir.ui.view">
        <field name="name">Paiement par Mode</field>
        <field name="model">paiement.report</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Paimets par mode">
                <group>
                    <group>
                        <field name="start_date"/>
                    </group>
                    <group>
                        <field name="end_date"/>
                    </group>
                </group>
                
                <group>
                    <field name="mode_paiement_ids" widget="many2many_checkbox"/>
                </group>
            
                <footer>
                    <button name="print_paiement_par_mode" string="Imprimer" type="object" class="oe_highlight"/>
                    <button string="Annuler" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_paiement_rapport_wizard" model="ir.actions.act_window">
        <field name="name">Paiements par mode</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">paiement.report</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="paiement_rapport_wizard"/>
        <field name="target">new</field>
    </record>


    <menuitem action="action_paiement_rapport_wizard"
              id="menu_paiement_rapport_wizard"
              parent="menu_rapport"
     groups="sales_team.group_sale_salesman"/>
  <!--  -->
</odoo>
