<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="creer_paiement_out_wizard_form_view" model="ir.ui.view">
            <field name="name">creer.paiement.out.wizard.form</field>
            <field name="model">creer.paiement.out.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Nouveau remboursement">
                    <field name="state" invisible="1"/>
                    <group states="1">
                        <group>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="reste"/>
                            <field name="amount"/>
                            <field name="communication"/>
                        </group>
                        <group>
                            <field name="journal_id"  options='{"no_open": True, "no_create": True}'/>
                            <field name="payment_date"/>
                            <field name="mode_paiement_id"  options='{"no_open": True, "no_create": True}'/>
                            <field name="doc_payment_id" attrs="{'invisible':[('mode_paiement_id','=', 2)]}"/>
                        </group>

                    </group>
                    <group states="2">
                        <div class="row">
                            <div class="text-success col-lg-8">
                                Opération effectuée avec succés, veuillez consulter le paiement créé dans le menu [Suivi de dossier -> Paiements -> Paiements enregistrés]
                            </div>
                        </div>
                    </group>

                    <footer states="1">
                         <button class="oe_highlight" string="Appliquer" name="action_appliquer" type="object"/> or
                         <button class="oe_link" string="Annuler" special="cancel"/>
                    </footer>
                    <footer states="2">
                        <button special="cancel" string="Fermer"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
