<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="change_tax_wizard_form_view" model="ir.ui.view">
            <field name="name">change.tax.wizard.form</field>
            <field name="model">change.tax.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Changement de la tva">
                    <group>
                        <group string="Informations">
                            <field name="name"/>

                            <field name="amount_total"/>
                            <field name="amount_tva"/>

                        </group>
                        <group string="Nouveaux montants">
                            <field name="montant_declare"/>
                            <field name="tva_id" domain="[('type_tax_use','=', 'sale')]"/>
                            <field name="montant_tva"/>

                        </group>
                    </group>

                    <footer>
                         <button class="oe_highlight" string="Appliquer" name="action_appliquer" type="object"/> or
                         <button class="oe_link" string="Annuler" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
