<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!--      suivi dossier /  configuration-->
        <record id="account.menu_finance_configuration" model="ir.ui.menu">
            <field name="groups_id" eval="[
            (3,ref('account.group_account_manager')),
            (4,ref('base.user_admin')),(4,ref('base.group_system')),(4,ref('base.group_erp_manager')),
            (3,ref('account.group_account_user')),]"/>
        </record>
        <!--        account - Button-->
        <record model="ir.ui.view" id="hide_button_account_move_form_view">
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[9]" position="attributes">
                    <attribute name="groups">
                        base.group_erp_manager,base.user_admin
                    </attribute>
                </xpath>
                <xpath expr="//button[10]" position="attributes">
                    <attribute name="groups">
                        base.group_erp_manager,base.user_admin
                    </attribute>
                </xpath>
                <xpath expr="//button[@name='button_cancel']" position="attributes">
                    <attribute name="groups">
                        base.group_erp_manager,base.user_admin
                    </attribute>
                </xpath>
                <xpath expr="//button[3]" position="attributes">
                    <attribute name="groups">
                        base.group_erp_manager,base.user_admin,gestion_profil.group_res_commercial,gestion_profil.group_commercial,gestion_profil.group_res_adv,gestion_profil.group_adv
                    </attribute>
                </xpath>
                <xpath expr="//button[4]" position="attributes">
                    <attribute name="groups">
                        base.group_erp_manager,base.user_admin,gestion_profil.group_res_commercial,gestion_profil.group_commercial,gestion_profil.group_res_adv,gestion_profil.group_adv
                    </attribute>
                </xpath>
                <xpath expr="//button[1]" position="attributes">
                    <attribute name="groups">
                        base.group_erp_manager,base.user_admin,gestion_profil.group_res_commercial,gestion_profil.group_commercial,gestion_profil.group_res_adv,gestion_profil.group_adv
                    </attribute>
                </xpath>
                <xpath expr="//button[2]" position="attributes">
                    <attribute name="groups">
                        base.group_erp_manager,base.user_admin,gestion_profil.group_res_commercial,gestion_profil.group_commercial,gestion_profil.group_res_adv,gestion_profil.group_adv
                    </attribute>
                </xpath>
                <!--                <xpath expr="//button[@name='button_cancel']" position="attributes">-->
                <!--                    <attribute name="groups">base.group_erp_manager,base.user_admin</attribute>-->
                <!--                </xpath>-->
                <xpath expr="//button[@name='action_reverse']" position="attributes">
                    <attribute name="groups">
                        base.group_erp_manager,base.user_admin,gestion_profil.group_res_commercial,gestion_profil.group_commercial,gestion_profil.group_res_adv,gestion_profil.group_adv
                    </attribute>
                </xpath>
                <xpath expr="//button[@name='action_register_payment']" position="attributes">
                    <attribute name="groups">
                        base.group_erp_manager,base.user_admin,gestion_profil.group_res_commercial,gestion_profil.group_commercial,gestion_profil.group_res_adv,gestion_profil.group_adv
                    </attribute>
                </xpath>
                <xpath expr="//button[@name='button_draft']" position="attributes">
                    <attribute name="groups">
                        base.group_erp_manager,base.user_admin,gestion_profil.group_res_commercial,gestion_profil.group_commercial,gestion_profil.group_res_adv,gestion_profil.group_adv
                    </attribute>
                </xpath>
                <xpath expr="//button[@name='preview_invoice']" position="attributes">
                    <attribute name="groups">
                        base.group_erp_manager,base.user_admin,gestion_profil.group_res_commercial,gestion_profil.group_commercial,gestion_profil.group_res_adv,gestion_profil.group_adv
                    </attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>