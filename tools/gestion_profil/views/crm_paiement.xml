<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!--        echeancier-->
        <record id="crm_echeancier.menu_echeancier" model="ir.ui.menu">
            <field name="groups_id" eval="[(3,ref('sales_team.group_sale_salesman')),
            (4,ref('base.user_admin')),(4,ref('base.group_system')),(4,ref('base.group_erp_manager')),
            (3,ref('base.group_user')),
            (4,ref('gestion_profil.group_caissier')),
            (4,ref('gestion_profil.group_commercial')),
            (4,ref('gestion_profil.group_res_commercial')),
            (4,ref('gestion_profil.group_charg_recouvrement')),
            (4,ref('gestion_profil.group_res_recouvrement')),
            (4,ref('gestion_profil.group_adv')),
            (4,ref('gestion_profil.group_res_adv')),
            (4,ref('gestion_profil.group_comptable_stock')),
            (4,ref('gestion_profil.group_res_compta'))]"/>
        </record>
        <!--        ordre paiement-->
        <record id="crm_echeancier.menu_ordre_paiement" model="ir.ui.menu">
            <field name="groups_id" eval="[
            (3,ref('sales_team.group_sale_salesman')),
            (3,ref('base.group_user')),
            (4,ref('base.user_admin')),(4,ref('base.group_system')),(4,ref('base.group_erp_manager')),
            (4,ref('gestion_profil.group_caissier')),
            (4,ref('base.user_admin')),
            (4,ref('gestion_profil.group_commercial')),
            (4,ref('gestion_profil.group_res_commercial')),
            (4,ref('gestion_profil.group_charg_recouvrement')),
            (4,ref('gestion_profil.group_res_recouvrement')),
            (4,ref('gestion_profil.group_adv')),
            (4,ref('gestion_profil.group_res_adv')),
            (4,ref('gestion_profil.group_comptable_stock')),
            (4,ref('gestion_profil.group_res_compta'))
            ]"/>
        </record>
        <!--        caisse-->
        <record id="crm_echeancier.menu_ordre_paiement_caisse" model="ir.ui.menu">
            <field name="groups_id" eval="[(3,ref('sales_team.group_sale_salesman')),
            (4,ref('base.user_admin')),(4,ref('base.group_system')),(4,ref('base.group_erp_manager')),
            (3,ref('base.group_user')),
            (4,ref('gestion_profil.group_adv')),
            (4,ref('gestion_profil.group_res_adv')),
            (4,ref('gestion_profil.group_commercial')),
            (4,ref('gestion_profil.group_res_commercial')),
            (4,ref('gestion_profil.group_charg_recouvrement')),
            (4,ref('gestion_profil.group_res_recouvrement')),
            (4,ref('gestion_profil.group_comptable_stock')),
            (4,ref('gestion_profil.group_res_compta')),
            (4,ref('gestion_profil.group_caissier'))]"/>
        </record>
        <!--        paiement root-->
        <record id="crm_operation.menu_paiement_root" model="ir.ui.menu">
            <field name="groups_id" eval="[(3,ref('sales_team.group_sale_salesman')),
            (4,ref('base.user_admin')),(4,ref('base.group_system')),(4,ref('base.group_erp_manager')),
            (3,ref('base.group_user')),
            (4,ref('gestion_profil.group_commercial')),
            (4,ref('gestion_profil.group_res_commercial')),
            (4,ref('gestion_profil.group_adv')),
            (4,ref('gestion_profil.group_res_adv')),
            (4,ref('gestion_profil.group_charg_recouvrement')),
            (4,ref('gestion_profil.group_res_recouvrement')),
            (4,ref('gestion_profil.group_comptable_stock')),
            (4,ref('gestion_profil.group_res_compta')),
            (4,ref('gestion_profil.group_caissier'))]"/>
        </record>


        <record model="ir.ui.view" id="hide_button_order_paiement_form_view">
            <field name="model">ordre.paiement</field>
            <field name="inherit_id" ref="crm_echeancier.ordre_paiement_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_cancel']" position="attributes">
                    <attribute name="groups">
                        base.group_erp_manager,base.user_admin,gestion_profil.group_caissier,gestion_profil.group_res_recouvrement
                    </attribute>
                </xpath>
                <xpath expr="//button[@name='action_print_recu_paiement']" position="attributes">
                    <attribute name="groups">
                        base.group_erp_manager,base.group_system,base.user_admin,gestion_profil.group_caissier
                    </attribute>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="hide_button_account_payment_form_view">
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='mark_as_sent']" position="attributes">
                    <attribute name="groups">
                        base.group_erp_manager,base.user_admin
                    </attribute>
                </xpath>
                <xpath expr="//button[@name='action_draft']" position="attributes">
                    <attribute name="groups">
                        base.group_erp_manager,base.user_admin
                    </attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>