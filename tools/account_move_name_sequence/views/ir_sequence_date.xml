<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="ir_sequence_date_view" model="ir.ui.view">
        <field name="name">Date sequence</field>
        <field name="model">ir.sequence.date</field>
        <field name="arch" type="xml">
            <form string="Date sequence">
                <group col="4">
                    <field name="date_to"/>
                </group>
                <footer>
                    <button name="action_validate" string="Valider" type="object" default_focus="1" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_ir_sequence_date" model="ir.actions.act_window">
        <field name="name">Date sequence</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ir.sequence.date</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="ir_sequence_date_view"/>
        <field name="target">new</field>
    </record>
    <menuitem id="menu_ir_sequence_date"
              name="Date sequence"
              sequence="10"
              parent="account.menu_finance_configuration"
              action="action_ir_sequence_date"/>
</odoo>