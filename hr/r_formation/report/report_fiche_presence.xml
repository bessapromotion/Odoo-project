<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="report_fiche_presence">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.basic_layout">
                    <style>
                        .page-style{
                        padding-top:10px; padding-bottom:10px; padding-left:10px; padding-right:10px; border: 2px solid
                        #000000; height:1350px; margin-top:10px;
                        }
                        .titre-style{
                        text-align: center; font-size: 24px; font-style: normal; font-variant: normal;
                        padding: 0px;font-weight: bold;
                        }
                        .bold-style{
                        font-size: 22px; font-style: normal; font-variant: normal;
                        padding: 0px;font-weight: bold;
                        }

                        div, p {
                        font-family: Arial;
                        }

                        th, td {
                        border: 1px solid black; text-align: left; padding: 10px; border-radius: 0px; height: 20px;
                        }
                        .transp{
                        border :none;
                        }
                    </style>

                    <div class="page-style">
                        <div class="titre-style" style="margin-top:30px">Fiche de présence</div>

                        <div style="margin-top:30px; font-size:16px;">
                            <strong>Objet :</strong>
                            <span t-field="o.theme_id"/>
                        </div>
                        <div style="font-size:16px;">
                            <strong>Date :
                                <span t-field="o.date_debut"/>
                            </strong>
                        </div>
                        <div style="font-size:16px; padding-bottom:10px;">
                            <strong>Lieu :</strong>
                            <span t-field="o.lieu"/>
                        </div>
                        <div style="font-size:16px; padding-bottom:10px;">
                            <strong>L’animateur :</strong>
                            <span t-field="o.formateur_id.name"/>
                        </div>

                        <table style="margin-top:30px; margin-left:30px; width:95%;">

                            <tr>
                                <th style="text-align:center;">
                                    Nom et Prénom
                                </th>
                                <th style="text-align:center;">
                                    Fonction
                                </th>
                                <th style="text-align:center;">
                                    Émargement
                                </th>
                            </tr>
                            <t t-foreach="o.res_ids" t-as="employe">
                                <tr>
                                    <td>
                                        <span t-field="employe.name"/>
                                    </td>
                                    <td>
                                        <span t-field="employe.job_id.name"/>
                                    </td>
                                    <td></td>
                                </tr>
                            </t>

                        </table>


                    </div>


                </t>
            </t>
        </t>
    </template>

</odoo>
