<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="report_besoin_formation">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.basic_layout">
                    <style>
                        .page-style{
                        padding-top:10px; padding-bottom:10px; padding-left:10px; padding-right:10px; border: 2px solid
                        #000000; height:1350px; margin-top:10px;
                        }
                        .titre-style{
                        text-align: center; font-size: 22x; font-style: normal; font-variant: normal;
                        padding: 0px;
                        }
                        .bold-style{
                        font-size: 22px; font-style: normal; font-variant: normal;
                        padding: 0px;font-weight: bold;
                        }

                        div, p {
                        font-family: Arial;
                        }

                        th, td{
                        border: 1px solid black; text-align: left; padding: 10px; border-radius: 0px; height: 20px;
                        }
                        .transp{
                        border :none;
                        }
                        #carre {
                        height: 20px;
                        width: 20px;
                        border:solid 1px;
                        }

                    </style>

                    <div class="page-style">
                        <!-- BODY -->

                        <br></br>
                        <div class="titre-style" style="margin-top:30px; font-size:30px;">
                            <strong>Direction des ressources humaines</strong>
                        </div>

                        <br></br>
                        <br></br>
                        <br></br>


                        <div style="font-size:20px;padding-bottom:10px;padding-left:50px;">Alger le,
                            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y')"/>
                        </div>
                        <br></br>
                        <div style="font-size:20px;padding-bottom:20px;padding-left:30px;">Nom du demandeur :
                            <span t-field="o.employe_id"/>
                        </div>

                        <div style="font-size:20px;padding-bottom:20px;padding-left:30px;">Direction/structure :
                            <span t-field="o.direction_id"/>
                        </div>
                        <div style="font-size:20px;padding-bottom:20px;padding-left:30px;">Poste :
                            <span t-field="o.department_id"/>
                        </div>
                        <div style="font-size:20px;padding-bottom:20px;padding-left:30px;">Intitulé de la formation :
                            <span t-field="o.besoin_action"/>
                        </div>
                        <div style="font-size:20px;padding-bottom:20px;padding-left:30px;">Motif de la formation :
                            <span t-field="o.motif"/>
                        </div>
                        <div style="font-size:20px;padding-bottom:20px;padding-left:30px;">Type de formation :
                            <span t-field="o.typologie_id"/>
                        </div>
                        <div style="font-size:20px;padding-bottom:20px;padding-left:30px;">Theme de la formation :
                            <span t-field="o.theme_id"/>
                        </div>
                        <div style="font-size:20px;padding-bottom:20px;padding-left:30px;">Catégorie de la formation :
                            <span t-field="o.categorie_id"/>
                        </div>
                        <div style="font-size:20px;padding-bottom:20px;padding-left:30px;">Commentaires :
                            <span t-field="o.commentaire"/>
                        </div>
                        <div style="font-size:20px;padding-bottom:20px;padding-left:30px;">Date de prévisionnelle de la
                            formation :
                            <span t-field="o.date"/>
                        </div>
                        <div style="margin-top:30px; padding-bottom:10px; font-size:16px;">
                            <!--                            <strong>-->
                            <!--                                <u>Les Besoins en formation de la structure :</u>-->
                            <!--                            </strong>-->
                        </div>


                        <br></br>
                        <div style="margin-top:30px; margin-left:600px;text-decoration: underline;">Visa de la direction
                            Générale
                        </div>
                        <div style="margin-top:20px; margin-left:30px;text-decoration: underline;">Décision
                            dérogatoire
                        </div>
                        <table style="margin-top:20px; margin-left:70px;">
                            <tr>
                                <td style="vertical-align: middle;border:0px">
                                    Accordée
                                </td>
                                <td style="border:0px">
                                    <div id="carre"></div>
                                </td>
                            </tr>
                            <tr>
                                <td style="vertical-align: middle;border:0px">
                                    Non accordée
                                </td>
                                <td style="border:0px">
                                    <div id="carre"></div>
                                </td>
                            </tr>
                        </table>

                    </div>

                </t>
            </t>
        </t>
    </template>

</odoo>
