<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!--        evaluation line-->
  		<record model="ir.ui.view" id="formation_evaluation_line_tree_view">
            <field name="name">formation.evaluation.line.tree</field>
            <field name="model">formation.evaluation.line</field>
            <field name="arch" type="xml">
				<tree decoration-info="state == 'draft'" decoration-muted="state == 'cancel'">
                	<field name="name"/>
                    <field name="job_id"/>
                    <field name="eval_id"/>
                    <field name="session_id"/>
                    <field name="state" decoration-success="state == 'done'"
                           decoration-muted="state == 'cancel'"
                           decoration-info="state == 'draft'" widget="badge"/>
                </tree>
            </field>
        </record>

		<record model="ir.ui.view" id="formation_evaluation_line_form_view">
            <field name="name">formation.evaluation.line.form</field>
            <field name="model">formation.evaluation.line</field>
            <field name="arch" type="xml">
				<form string="Evaluation a chaud">
                    <header>
                        <button name="action_affiche" string="Lancer l'évaluation" states="draft" class="oe_highlight" type="object"/>
                        <field name="state"  widget="statusbar" statusbar_visible="draft,done" />
				    </header>
					<sheet>
                        <field name="image" widget='image' class="oe_avatar" />
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Employé  " options='{"no_open": True, "no_create": True}'/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="eval_id" options='{"no_open": True, "no_create": True}'/>
                                <field name="session_id" />
                                <field name="date_debut" />
                                <field name="partner_id" />
                                <field name="formateur_id" />
                            </group>
                            <group>
                                <field name="job_id"/>
                                <field name="department_id"/>
                                <field name="csp_id"/>
                            </group>
                        </group>
                        <notebook states="done">
                            <page string="Questions">
                                <field name="note_ids">
                                    <tree editable="top" create="false" delete="false">
                                        <field name="code"/>
                                        <field name="name"/>
                                        <field name="note" decoration-success="note == 'Très bien'"
                                               decoration-info="note == 'Bien'"
                                               decoration-warning="note == 'Insuffisant'"
                                        />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                    	<field name="message_follower_ids" widget="mail_followers" modifiers="{}"/>
                    	<field name="message_ids" widget="mail_thread" modifiers="{}"/>
                	</div>
                </form>
            </field>
        </record>

        <record id="formation_evaluation_line_filter" model="ir.ui.view">
            <field name="name">formation.evaluation.line.filter</field>
            <field name="model">formation.evaluation.line</field>
            <field name="arch" type="xml">
                <search string="Evaluation a chaud">
                    <field name="name" />
                    <field name="session_id" />
                    <field name="eval_id" />
                </search>
            </field>
        </record>


        <record id="action_evaluation_line_eval_button_view" model="ir.actions.act_window">
            <field name="name">Evaluations a chaud</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">formation.evaluation.line</field>
            <field name="context">{'search_default_eval_id': [active_id], 'default_eval_id': active_id}</field>
            <field name="domain">[('eval_id','=', active_id)]</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="formation_evaluation_line_filter"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                 Créer une nouvelle evaluation a chaud.
              </p><p>
              </p>
            </field>
        </record>

 <!-- detail de l'evaluation -->
  		<record model="ir.ui.view" id="formation_evaluation_tree_view">
            <field name="name">formation.evaluation.tree</field>
            <field name="model">formation.evaluation</field>
            <field name="arch" type="xml">
				<tree decoration-info="state == 'draft'" decoration-muted="state == 'cancel'">
                	<field name="name"/>
                    <field name="date"/>
                    <field name="session_id"/>
                    <field name="date_debut"/>
                    <field name="nbr_eval"/>
                    <field name="state" decoration-success="state == 'done'"
                           decoration-muted="state == 'cancel'"
                           decoration-warning="state == 'inprogress'"
                           decoration-info="state == 'draft'" widget="badge"/>
                </tree>
            </field>
        </record>

		<record model="ir.ui.view" id="formation_evaluation_form_view">
            <field name="name">formation.evaluation.form</field>
            <field name="model">formation.evaluation</field>
            <field name="arch" type="xml">
				<form string="Evaluation a chaud">
                    <header>
                        <button name="action_lancer" string="Lancer l'évaluation" states="draft" class="oe_highlight" type="object"/>
                        <button name="action_update" string="Actualiser l'évaluation" states="inprogress" class="oe_highlight" type="object"/>
                        <button name="action_validate" string="Fermer" states="inprogress" type="object"
                        confirm="Voulez-vous cloturer cette évaluation ?"/>
                        <button name="action_cancel" string="Annuler" states="draft" type="object"
                        confirm="Voulez-vous annuler cette evaluation ?"/>

                        <field name="state"  widget="statusbar" statusbar_visible="draft,inprogress,done" />
				    </header>
					<sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="action" states="inprogress,done" name="%(action_evaluation_line_eval_button_view)d" icon="fa-comments-o">
                                <field string="Evaluations" name="nbr_eval" widget="statinfo" />
                            </button>
                        </div>
                        <h1>
                            <label for="name" string="Evaluation a chaud # "/>
                            <field name="name" class="oe_inline" readonly="1"/>
                        </h1>
                        <group>
                            <group>
                                <field name="session_id" domain="[('state','in', ('planned','done'))]" options='{"no_open": True, "no_create": True}'/>
                                <field name="date_debut"/>
                                <field name="partner_id" />
                                <field name="formateur_id" />
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="user_id"  options='{"no_open": True, "no_create": True}'/>
                            </group>
                        </group>
                        <notebook states="inprogress,done">
                            <page string="Evaluation">
                                <field name="note_ids">
                                    <tree>
                                        <field name="code"/>
                                        <field name="name"/>
                                        <field name="insuffisant" sum="i"/>
                                        <field name="bien" sum="b"/>
                                        <field name="tres_bien" sum="tb"/>
                                    </tree>
                                </field>

                            </page>
                            <page string="Commentaires">
                                <field name="comment"/>
                            </page>
                            <page string="Actions">
                                <field name="action"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                    	<field name="message_follower_ids" widget="mail_followers" modifiers="{}"/>
                    	<field name="message_ids" widget="mail_thread" modifiers="{}"/>
                	</div>
                </form>
            </field>
        </record>

        <record id="formation_evaluation_filter" model="ir.ui.view">
            <field name="name">formation.evaluation.filter</field>
            <field name="model">formation.evaluation</field>
            <field name="arch" type="xml">
                <search string="Evaluation a chaud">
                    <field name="name" />
                    <field name="session_id" />
                    <field name="comment" />
                    <field name="action" />
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_formation_evaluation">
            <field name="name">Evaluation a chaud</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">formation.evaluation</field>
            <field name="search_view_id" ref="formation_evaluation_filter"/>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="formation_evaluation_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer une nouvelle évaluation a chaud.
                </p><p>

                </p><p>

                </p>
            </field>
		</record>

        <record id="action_evaluation_session_button_view" model="ir.actions.act_window">
            <field name="name">Evaluations a chaud</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">formation.evaluation</field>
            <field name="context">{'search_default_session_id': [active_id], 'default_session_id': active_id}</field>
            <field name="domain">[('session_id','=', active_id)]</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="formation_evaluation_filter"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                 Créer une nouvelle evaluation a chaud.
              </p><p>
              </p>
            </field>
        </record>


    </data>
</openerp>
