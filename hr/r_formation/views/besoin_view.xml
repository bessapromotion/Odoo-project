<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- detail du besoin -->
        <record model="ir.ui.view" id="formation_besoin_tree_view">
            <field name="name">formation.besoin.tree</field>
            <field name="model">formation.besoin</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="employe_id"/>
                    <field name="department_id"/>
                    <field name="res_nbr"/>
                    <field name="plan_id"/>
                    <field name="state" widget="badge"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="formation_besoin_form_view">
            <field name="name">formation.besoin.form</field>
            <field name="model">formation.besoin</field>
            <field name="arch" type="xml">
                <form string="Besoin en formation">
                    <header>
                        <button name="confirm_alimenter_plan" string="Confirmer et alimenter le plan" class="oe_highlight"
                                type="object" states="qualifie"/>
                        <button name="action_qualifier" string="Qualifier " class="oe_highlight"
                                type="object" states="draft"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <h1>
                            <label for="name" string="Besoin en formation # "/>
                            <field name="name" class="oe_inline" readonly="1"/>
                        </h1>
                        <group>
                            <group>
                                <field name="employe_id" options='{"no_open": True, "no_create": True}' attrs="{'readonly':[('state', 'in', ('done'))]}"/>
                                <field name="matricule"/>
                                <field name="job_id" readonly="1"/>
                                <field name="department_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="date" attrs="{'readonly':[('state', 'in', ('done'))]}"/>
                                <field name="plan_id" options='{"no_open": True, "no_create": True}' attrs="{'readonly':[('state', 'in', ('done'))]}"/>
                                <field name="user_id" options='{"no_open": True, "no_create": True}' attrs="{'readonly':[('state', 'in', ('done'))]}"/>
                                <field name="res_nbr"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Ressources">
                                <field name="res_ids" attrs="{'readonly':[('state', 'in', ('done'))]}">
                                    <tree editable="Bottom" delete="false">
                                        <field name="name" options='{"no_open": True, "no_create": True}'/>
                                        <field name="job_id"/>
                                        <field name="department_id"/>
                                        <field name="csp_id"/>
                                        <field name="theme_id"/>
                                        <field name="besoin_action"/>
                                        <field name="state" decoration-success="state == 'done'"
                                               decoration-muted="state == 'cancel'"
                                               decoration-info="state == 'draft'" widget="badge"/>
                                        <button name="action_cancel" string="Annuler " class="oe_highlight"
                                                type="object" states="draft"/>
                                        <field name="motif"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Information">
                                <group>
                                    <field name="declencheur"/>
                                </group>
                                <group>
                                    <field name="impact_business"/>
                                </group>
                                <group>
                                    <field name="pre_requis"/>
                                </group>

                            </page>
                            <page string="Objectif">
                                <field name="objectif"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" modifiers="{}"/>
                        <field name="message_ids" widget="mail_thread" modifiers="{}"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="formation_besoin_filter" model="ir.ui.view">
            <field name="name">formation.besoin.filter</field>
            <field name="model">formation.besoin</field>
            <field name="arch" type="xml">
                <search string="Formation">
                    <field name="name"/>
                    <field name="objectif"/>
                    <field name="plan_id"/>
                    <field name="employe_id"/>
                </search>
            </field>
        </record>


        <record model="ir.actions.act_window" id="action_formation_besoin">
            <field name="name">Besoin en Formation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">formation.besoin</field>
            <field name="search_view_id" ref="formation_besoin_filter"/>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="formation_besoin_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer une nouveau besoin en formation.
                </p>
                <p>

                </p>
                <p>

                </p>
            </field>
        </record>

        <record id="action_besoin_button_view" model="ir.actions.act_window">
            <field name="name">Besoin en formation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">formation.besoin</field>
            <field name="context">{'search_default_plan_id': [active_id], 'default_plan_id': active_id}</field>
            <field name="domain">[('plan_id','=', active_id)]</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="formation_besoin_filter"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer un nouveau besoin en formation.
                </p>
                <p>
                </p>
            </field>
        </record>
    </data>
</openerp>
