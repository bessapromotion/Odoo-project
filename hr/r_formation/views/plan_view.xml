<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- plan de formation -->
        <record model="ir.ui.view" id="formation_plan_tree_view">
            <field name="name">formation.plan.tree</field>
            <field name="model">formation.plan</field>
            <field name="arch" type="xml">
                <tree decoration-info="state == 'draft'" decoration-muted="state == 'cancel'">
                    <field name="name"/>
                    <field name="objet"/>
                    <field name="exercice"/>
                    <field name="date"/>
                    <field name="user_id"/>
                    <field name="budget"/>
                    <field name="budget_real"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="state" decoration-success="state == 'done'"
                           decoration-muted="state == 'cancel'"
                           decoration-info="state == 'draft'" widget="badge"/>
                </tree>
            </field>
        </record>

        <record id="formation_plan_filter" model="ir.ui.view">
            <field name="name">formation.plan.filter</field>
            <field name="model">formation.plan</field>
            <field name="arch" type="xml">
                <search string="Plan de formation">
                    <field name="name"/>
                    <field name="objet"/>
                    <field name="objectif"/>

                    <filter name="actif" string="Actif" domain="[('actif','=',True)]"/>
                    <filter name="draft" string="Nouveaux" domain="[('state','=','draft')]"/>
                    <filter name="done" string="Terminés" domain="[('state', '=', 'done')]"/>
                    <filter name="cancel" string="Annulés" domain="[('state', '=', 'cancel')]"/>

                    <!--                    <group expand="0" string="Grouper par...">-->
                    <!--                        <filter name="employee" string="Employé" domain="[]" context="{'group_by':'employe_id'}" help="Employé"/>-->
                    <!--                        <filter string="Motif" name="motif" domain="[]" context="{'group_by':'motif_id'}" help="Motif de mise en demeure"/>-->
                    <!--                    </group>-->
                </search>
            </field>
        </record>


        <record model="ir.ui.view" id="formation_plan_form_view">
            <field name="name">formation.plan.form</field>
            <field name="model">formation.plan</field>
            <field name="arch" type="xml">
                <form string="Plan de formation">
                    <header>
                        <button string="Valider" states="draft" class="oe_highlight" name="action_validate"
                                type="object"
                                confirm="Voulez-vous valider ce plan de formation ?"/>
                        <!--                        <button name="action_print" states="draft" string="Imprimer une fiche expression des besoins vièrge" type="object"/>-->

                        <button string="Annuler" states="draft" name="action_cancel" type="object"
                                confirm="Voulez-vous annuler ce plan de formation ?"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="action" name="%(action_besoin_button_view)d"
                                    icon="fa-comments-o">
                                <field string="Besoins" name="nbr_fiche" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="action" name="%(action_session_button_view)d"
                                    states="done" icon="fa-desktop">
                                <field string="Sessions" name="nbr_session" widget="statinfo"/>
                            </button>
                        </div>

                        <h1>
                            <label for="name" string="Plan de formation # "/>
                            <field name="name" class="oe_inline" readonly="1"/>
                        </h1>

                        <group>
                            <group>
                                <field name="id" invisible="1"/>
                                <field name="objet"/>
                                <field name="date"/>
                                <field name="user_id" options='{"no_open": True, "no_create": True}'/>
                            </group>
                            <group>
                                <field name="actif" widget="boolean_toggle"
                                       attrs="{'invisible': [('state', '=', 'done')]}"/>
                                <field name="exercice"/>
                                <field name="budget"/>
                                <field name="budget_real"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Formations">
                                <field name="line_ids" context="{'default_plan_id': id}">
                                    <tree decoration-info="state == 'draft'" decoration-muted="state == 'cancel'">
                                        <field name="name"/>
                                        <field name="plan_id" invisible="1"/>
                                        <field name="typologie_id"/>
                                        <field name="theme_id"/>
                                        <field name="categorie_id"/>
                                        <field name="duree"/>
                                        <field name="res_nbr"/>
                                        <field name="date_prev"/>
                                        <field name="cout_prev"/>
                                        <field name="cout_real"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="state" decoration-success="state == 'done'"
                                               decoration-muted="state == 'cancel'"
                                               decoration-info="state == 'draft'" widget="badge"/>
                                    </tree>
                                    <form context="{'default_plan_id': id}">
                                        <h1>
                                            <label for="name" string="Formation ## "/>
                                            <field name="name" class="oe_inline" readonly="1"/>
                                        </h1>
                                        <group>
                                            <group>
                                                <!--                                                <field name="plan_id" options='{"no_open": True, "no_create": True}'/>-->
                                                <field name="typologie_id"/>
                                                <field name="theme_id"/>
                                                <field name="categorie_id"/>
                                            </group>
                                            <group>
                                                <field name="duree"/>
                                                <field name="date_prev"/>
                                                <field name="cout_prev"/>
                                                <field name="cout_real"/>
                                                <field name="currency_id" invisible="1"/>
                                            </group>
                                        </group>
                                        <notebook>
                                            <page string="Ressources">
                                                <field name="res_ids">
                                                    <tree editable="Bottom">
                                                        <field name="name"
                                                               options='{"no_open": True, "no_create": True}'/>
                                                        <field name="job_id"/>
                                                        <field name="department_id"/>
                                                        <field name="csp_id"/>
                                                    </tree>
                                                </field>
                                            </page>
                                            <page string='Sessions de formation'>
                                                <field name="session_ids">
                                                    <tree decoration-info="state == 'draft'"
                                                          decoration-muted="state == 'cancel'">
                                                        <field name="name"/>
                                                        <field name="partner_id"/>
                                                        <field name="formateur_id"/>
                                                        <field name="date_debut"/>
                                                        <field name="date_fin"/>
                                                        <field name="date_fin"/>
                                                        <field name="res_nbr"/>
                                                        <field name="cout"/>
                                                        <field name="currency_id" invisible="1"/>
                                                        <field name="state" decoration-success="state == 'done'"
                                                               decoration-muted="state == 'cancel'"
                                                               decoration-warning="state == 'planned'"
                                                               decoration-info="state == 'draft'" widget="badge"/>
                                                    </tree>
                                                </field>
                                            </page>
                                            <page string="Objectif">
                                                <field name="objectif"/>
                                            </page>
                                        </notebook>

                                    </form>
                                </field>
                            </page>
                            <page string="Strategie et objectif global">
                                <field name="objectif"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" modifiers="{}"/>
                        <field name="message_ids" widget="mail_thread" modifiers="{}"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_formation_plan">
            <field name="name">Plans de formation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">formation.plan</field>
            <field name="search_view_id" ref="formation_plan_filter"/>
            <field name="view_mode">tree,form</field>
