        <record model="ir.ui.view" id="formation_plan_line_calendar_view">
            <field name="name">formation.plan.line.tree</field>
            <field name="model">formation.plan.line</field>
            <field name="arch" type="xml">

                <calendar string="Plan" date_start="date_prev" date_stop="date_fin_prev" mode="month"
                          color="duree"
                          form_view_id="%(r_formation.formation_plan_line_form_view)d"
                          hide_time="true"
                          quick_add="0">
                    <field name="name"/>
                    <field name="plan_id"/>
                    <field name="typologie_id"/>
                    <field name="theme_id"/>
                    <field name="categorie_id"/>
                    <field name="duree"/>
