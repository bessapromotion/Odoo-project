        <record id="view_partner_formation_form" model="ir.ui.view">
            <field name="name">res.partner.formation.inherit</field>
            <field name="model">res.partner</field>
            <field name="priority">2</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//page[@name='sales_purchases']" position="after">
                        <page string="Formation">
                            <group>
                                <field name="organisme_formation"/>
                                <field name="formateur"/>

                            </group>
                            <group>
<!--                                <label for="organisme_agree" string="Agrée par l'état"/>-->
                                <field name="organisme_agree" string="Agrée par l'état"/>
                            </group>


                        </page>
                    </xpath>
                </data>
            </field>
        </record>

