<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Modele Form -->
        <record model="ir.ui.view" id="modele_form_view">
            <field name="name">hr.contract.modele</field>
            <field name="model">hr.contract.modele</field>
            <field name="arch" type="xml">
                <form string="Modèle">
                    <sheet>
                        <strong>Nom</strong>
                        <h1>
                            <field name="name" class="oe_inline" placeholder="Nom"/>
                        </h1>
                        <group>
                            <group>
                                <field name="type_id" />
                                <field name="company_id" groups="base.group_multi_company" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Articles">
                                <field name="article_lines">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="code"/>
                                        <field name="article_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Modele Tree -->
        <record model="ir.ui.view" id="modele_tree_view">
            <field name="name">contract.modele.tree</field>
            <field name="model">hr.contract.modele</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="company_id" groups="base.group_multi_company" />
                </tree>
            </field>
        </record>

        <!-- Modele Filter -->
        <record id="modele_filter" model="ir.ui.view">
            <field name="name">contract.modele.filter</field>
            <field name="model">hr.contract.modele</field>
            <field name="arch" type="xml">
                <search string="Modele">
                    <field name="name" />
                </search>
            </field>
        </record>

        <!-- Modele Tree View Action -->
        <record model="ir.actions.act_window" id="action_modele_tree_view">
            <field name="name">Modèles de contrat</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.contract.modele</field>
            <field name="search_view_id" ref="modele_filter"/>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="modele_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer un nouveau modèle de contrat.
                </p><p>

                </p><p>

                </p>
            </field>
        </record>

        <!-- Modlele Menu -->
        <menuitem name="Modèle de contrat" action="action_modele_tree_view" id="menu_modele"
            parent="menu_group_contrat" sequence="90"/>

    </data>
</openerp>
