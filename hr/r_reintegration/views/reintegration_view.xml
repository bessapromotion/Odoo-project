<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- reintegration -->
        <record model="ir.ui.view" id="reintegration_tree_view">
            <field name="name">reintegration.tree</field>
            <field name="model">hr.reintegration</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="employe_id"/>
                    <field name="matricule"/>
                    <field name="job_id"/>
                    <field name="date_reintegration"/>
                    <field name="contract_id"/>
                    <field name="company_id"/>
                    <field name="state"
                           decoration-success="state == 'done'"
                           decoration-muted="state == 'cancel'"
                           decoration-info="state == 'draft'" widget="badge"/>
                </tree>
            </field>
        </record>

        <record id="reintegration_filter" model="ir.ui.view">
            <field name="name">hr.reintegration.filter</field>
            <field name="model">hr.reintegration</field>
            <field name="arch" type="xml">
                <search string="reintegration">
                    <field name="employe_id"/>
                    <field name="name"/>
                    <field name="note"/>
                    <filter name="employe_id"/>
                    <filter name="name"/>
                    <filter name="note"/>
                    <group expand="0" string="Grouper par...">
                        <filter name="employee" string="Employé" domain="[]" context="{'group_by':'employe_id'}"
                                help="Employé"/>
                        <filter string="Société" name="comapny" domain="[]" context="{'group_by':'company_id'}"/>
                    </group>

                </search>
            </field>
        </record>


        <record model="ir.ui.view" id="reintegration_form_view">
            <field name="name">hr.reintegration.form</field>
            <field name="model">hr.reintegration</field>
            <field name="arch" type="xml">
                <form string="Reintegration">
                    <header>
                        <button name="action_validate" string="Valider" states="draft" class="oe_highlight"
                                type="object"/>
                        <button name="action_cancel" string="Annuler" states="draft" type="object"/>
                        <button name="create_contract" string="Créer le contrat de travail" states="done"
                                class="oe_highlight" type="object"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                    </header>
                    <sheet>
                        <h1>
                            <label for="name" string="Réintégration # "/>
                            <field name="name" class="oe_inline"/>
                        </h1>
                        <field name="image" widget='image' class="oe_avatar"/>
                        <div class="oe_title">
                            <label for="employe_id" class="oe_edit_only"/>
                            <h1>
                                <field name="employe_id" placeholder="Employé  "
                                       options='{"no_open": True, "no_create": True}'
                                       domain="[('active', '=', False)]"/>
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="company_id" options='{"no_open": True, "no_create": True}'/>
                                <field name="user_id" options='{"no_open": True, "no_create": True}'/>
                                <field name="date_reintegration"/>
                            </group>
                            <group>
                                <field name="matricule" readonly="1"/>
                                <field name="job_id" options='{"no_open": True, "no_create": True}'/>
                                <field name="contract_id" readonly="1"/>
                                <field name="department_id"/>
                                <field name="contract_type_id"/>
                                <field name="modele_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Notes">
                                <field name="note"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_reintegration_tree_view">
            <field name="name">Réintagration</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.reintegration</field>
            <field name="search_view_id" ref="reintegration_filter"/>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="reintegration_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Enregistrer une nouvelle réintagration.
                </p>
                <p>

                </p>
                <p>

                </p>
            </field>
        </record>

        <!-- Top menu item -->

        <menuitem name="Réintegration" id="menu_reintegration_root" parent="r_frt.menu_frt_root" sequence="70"/>

        <menuitem name="Réintegration" action="action_reintegration_tree_view" id="menu_reintegration"
                  parent="menu_reintegration_root" sequence="99"/>

    </data>
</openerp>
