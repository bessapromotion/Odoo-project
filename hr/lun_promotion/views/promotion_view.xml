<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Sanction -->
        <record model="ir.ui.view" id="promotion_tree_view">
            <field name="name">promotion.tree</field>
            <field name="model">hr.promotion</field>
            <field name="arch" type="xml">
                <tree decoration-info="state == 'draft'" decoration-muted="state == 'cancel'">
                    <field name="name"/>
                    <field name="employe_id"/>
                    <field name="date"/>
                    <field name="date_effet"/>
                    <field name="job_actuel_id"/>
                    <field name="job_id"/>
                    <field name="user_id"/>
                    <field name="company_id"/>
                    <field name="state"
                           decoration-success="state == 'done'"
                           decoration-muted="state == 'cancel'"
                           decoration-warning="state == 'valid'"
                           decoration-info="state == 'draft'" widget="badge"/>
                </tree>
            </field>
        </record>

        <record id="promotion_filter" model="ir.ui.view">
            <field name="name">hr.promotion.filter</field>
            <field name="model">hr.promotion</field>
            <field name="arch" type="xml">
                <search string="Promotion">
                    <!--<field name="name" string="(Employé, Type, ou Motif)"-->
                    <!--filter_domain="['|','|',('employe_id','ilike',self),('type_id','ilike',self),('motif_id','ilike',self)]"/>-->
                    <field name="employe_id"/>
                    <group expand="0" string="Grouper par...">
                        <filter name="old" string="Poste Actuel" domain="[]" context="{'group_by':'job_actuel_id'}"
                                help="Poste actuel"/>
                        <filter name="new" string="Nouveau Poste" domain="[]" context="{'group_by':'job_id'}"
                                help="Nouveau poste"/>
                        <filter name="company" string="Société" domain="[]" context="{'group_by':'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record model="ir.ui.view" id="promotion_form_view">
            <field name="name">hr.promotion.form</field>
            <field name="model">hr.promotion</field>
            <field name="arch" type="xml">
                <form string="Promotion">
                    <header>
                        <button name="action_validate" string="Valider" states="draft" class="oe_highlight"
                                type="object"
                                confirm="Voulez-vous valider ce document ?"/>
                        <button name="action_prise_effet" string="Entrer en application" states="valid"
                                class="oe_highlight" type="object"
                                confirm="Voulez-vous faire rentrer en vigueur cette opération ?"/>
                        <button name="action_cancel" string="Annuler" states="draft,valid" class="oe_highlight"
                                type="object"
                                confirm="Voulez-vous annuler ce document ?"/>
                        <button name="action_print" states="valid,done" string="Imprimer" class="oe_highlight"
                                type="object"/>/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,valid,done"/>
                    </header>
                    <sheet>
                        <field name="image" widget='image' class="oe_avatar"/>
                        <div class="oe_title">
                            <label for="employe_id" class="oe_edit_only"/>
                            <h1>
                                <field name="employe_id" placeholder="Employé  "
                                       options='{"no_open": True, "no_create": True}'/>
                            </h1>
                        </div>

                        <h1>
                            <label for="name" string="Promotion # "
                                   attrs="{'invisible': [('type','!=', 'promotion')]}"/>
                            <label for="name" string="Dégradation # "
                                   attrs="{'invisible': [('type','!=', 'degradation')]}"/>
                            <label for="name" string="Changement poste # "
                                   attrs="{'invisible': [('type','!=', 'changement')]}"/>
                            <field name="name" class="oe_inline" readonly="1"/>
                        </h1>
                        <group>
                            <group>
                                <field name="user_id"/>
                                <field name="company_id"/>
                                <field name="date"/>
                                <field name="type" invisible="1"/>
                            </group>
                            <group>

                            </group>
                            <group string="Situation actuelle">
                                <field name="matricule" readonly="1"/>
                                <field name="job_actuel_id" options='{"no_open": True, "no_create": True}'/>
                            </group>
                            <group string="Nouveau poste">
                                <field name="job_id" options='{"no_open": True, "no_create": True}'/>
                                <field name="date_effet"/>
                            </group>
                            <group string="Contrat">
                                <field name="contract_id"
                                       domain="[('employee_id','=', employe_id), ('state','not in', ('draft','cancel'))]"
                                       options='{"no_open": True, "no_create": True}'/>
                                <field name="date_start"/>
                                <field name="date_end"/>
                            </group>
                        </group>
                        <field name="observation"/>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!--        Promotion-->
        <record model="ir.actions.act_window" id="action_promotion_tree_view">
            <field name="name">Promotions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.promotion</field>
            <field name="search_view_id" ref="promotion_filter"/>
            <field name="view_mode">tree,form</field>
            <field name="view_id" eval="False"/>
            <field name="domain">[('type','=','promotion')]</field>
            <field name="context">{'default_type': 'promotion'}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Cliquez ici pour créer une nouvelle promotion.
                </p>
                <p>

                </p>
                <p>

                </p>
            </field>
        </record>

        <record id="action_promotion_tree_view1" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="promotion_tree_view"/>
            <field name="act_window_id" ref="action_promotion_tree_view"/>
        </record>

        <record id="action_promotion_tree_view2" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="promotion_form_view"/>
            <field name="act_window_id" ref="action_promotion_tree_view"/>
        </record>

        <!--        Degradation -->
        <record model="ir.actions.act_window" id="action_degradation_tree_view">
            <field name="name">Degradations</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.promotion</field>
            <field name="search_view_id" ref="promotion_filter"/>
            <field name="view_mode">tree,form</field>
            <field name="view_id" eval="False"/>
            <field name="domain">[('type','=','degradation')]</field>
            <field name="context">{'default_type': 'degradation'}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Cliquez ici pour créer une nouvelle degradation.
                </p>
                <p>

                </p>
                <p>

                </p>
            </field>
        </record>

        <record id="action_degradation_tree_view1" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="promotion_tree_view"/>
            <field name="act_window_id" ref="action_degradation_tree_view"/>
        </record>

        <record id="action_degradation_tree_view2" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="promotion_form_view"/>
            <field name="act_window_id" ref="action_degradation_tree_view"/>
        </record>

        <!--        changement de poste -->
        <record model="ir.actions.act_window" id="action_changement_poste_tree_view">
            <field name="name">Changements de poste</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.promotion</field>
            <field name="search_view_id" ref="promotion_filter"/>
            <field name="view_mode">tree,form</field>
            <field name="view_id" eval="False"/>
            <field name="domain">[('type','=','changement')]</field>
            <field name="context">{'default_type': 'changement'}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Cliquez ici pour créer une nouveau changement de poste.
                </p>
                <p>

                </p>
                <p>

                </p>
            </field>
        </record>

        <record id="action_changement_poste_tree_view1" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="promotion_tree_view"/>
            <field name="act_window_id" ref="action_changement_poste_tree_view"/>
        </record>

        <record id="action_changement_poste_tree_view2" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="promotion_form_view"/>
            <field name="act_window_id" ref="action_changement_poste_tree_view"/>
        </record>

        <!-- Top menu item -->

        <!--        <menuitem name="Promotions" action="action_promotion_tree_view" id="menu_promotion"-->
        <!--            parent="hr_base.menu_carriere" sequence="60"/>-->
        <!--        <menuitem name="Dégradations" action="action_degradation_tree_view" id="menu_degradation"-->
        <!--            parent="hr_base.menu_carriere" sequence="70"/>-->
        <menuitem name="Changements de poste" action="action_changement_poste_tree_view" id="menu_changement_poste"
                  parent="hr_base.menu_carriere" sequence="80"/>

    </data>
</openerp>
