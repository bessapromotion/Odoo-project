<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Mission -->
        <record model="ir.ui.view" id="mission_tree_view">
            <field name="name">mission.tree</field>
            <field name="model">hr.mission</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="date"/>
<!--                    <field name="date_depart_prevue"/>-->
<!--                    <field name="date_retour_prevue"/>-->
                    <field name="destination"/>
                    <field name="motif"/>
                    <field name="moyen_id"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="state" decoration-success="state == 'done'"
                           decoration-warning="state == 'planned'"
                           decoration-info="state == 'draft'"
                           decoration-muted="state == 'cancel'" widget="badge"/>
                </tree>
            </field>
        </record>

        <record id="mission_filter" model="ir.ui.view">
            <field name="name">hr.mission.filter</field>
            <field name="model">hr.mission</field>
            <field name="arch" type="xml">
                <search string="Ordre de Mission">
                    <field name="name"/>
                    <field name="employee_ids"/>

                    <filter name="draft" string="Nouveaux" domain="[('state','=','draft')]"/>
                    <filter name="planned" string="Planifiés" domain="[('state','=','planned')]"/>
                    <!--                    <filter name="open" string="En cours" domain="[('state','=','open')]"/>-->
                    <filter name="done" string="Terminés" domain="[('state', '=', 'done')]"/>
                    <filter name="cancel" string="Annulés" domain="[('state', '=', 'cancel')]"/>

                    <group expand="0" string="Grouper par...">
                        <filter string="Etat" name="state" domain="[]" context="{'group_by':'state'}" help="Etat"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="mission_form_view">
            <field name="name">mission.form</field>
            <field name="model">hr.mission</field>
            <field name="arch" type="xml">
                <form string="Ordre de mission global">
                    <header>
                        <button name="action_planned" string="Planifier" states="draft" class="oe_highlight"
                                type="object"/>
                        <button name="action_done" string="Valider et fermer" states="planned" class="oe_highlight"
                                type="object"/>
                        <button name="action_print" states="planned,open,done" string="Imprimer l'ordre de mission"
                                class="btn-success" type="object"/>
                        <button name="action_cancel" string="Annuler" states="draft,planned" type="object"
                                confirm="Voulez-vous annuler cet ordre de mission global ?"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,planned,open,done"/>
                    </header>
                    <sheet>
                        <h1>
                            <label for="name" string="Ordre de mission # "/>
                            <field name="name" class="oe_inline"/>
                        </h1>

                        <group name="main">
                            <group string="Ordre de mission">
                                <field name="date"/>
                                <field name="user_id" options='{"no_open": True, "no_create": True}'/>
                                <field name="chef_mission_id" options='{"no_open": True, "no_create": True}'/>
                                <field name="company_id" groups="base.group_multi_company"
                                       options='{"no_open": True, "no_create": True}'/>
                            </group>
                            <group string="Mission">
                                <field name="destination"/>
                                <field name="motif"/>
                                <field name="moyen_id"/>
                                <field name="type_moyen" invisible="1"/>
                                <field name="avec_chauffeur" attrs="{'invisible': [('type_moyen', '!=', 'Interne')]}"/>
                                <field name="chauffeur_id"
                                       attrs="{'invisible': ['|', ('avec_chauffeur', '=', False), ('type_moyen', '!=', 'Interne')]}"/>
                                <field name="prestataire_id"
                                       attrs="{'invisible': [('type_moyen', '!=', 'Prestataire')]}"/>
                            </group>
                            <group string="Sortie">
                                <field name="date_depart"/>
                            </group>
                            <group string="Retour">
                                <field name="date_retour"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Missionnaires" name="missionnaire_page">
                                <field name="employee_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="matricule"/>
                                        <field name="job_id"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Observation">
                                <field name="observation"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_mission_tree_view">
            <field name="name">Ordre de mission</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.mission</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="mission_filter"/>
            <field name="filter" eval="True"/>
            <field name="view_id" ref="mission_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer un nouvel ordre de mission.
                </p>
                <p>

                </p>
                <p>

                </p>
            </field>
        </record>


        <!-- Top menu item -->


        <menuitem name="Ordres de mission" id="menu_mission" parent="hr_base.menu_mouvements"
                  action="action_mission_tree_view" sequence="10"/>


    </data>
</openerp>
