 <!-- interface Clients -->
		<record id="view_hr_ordre_mission_employee_form" model="ir.ui.view">
            <field name="name">dl.hr.mission2.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="priority">2</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
