<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="report_ordre_mission">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.internal_layout">
                    <div class="page" style="font-size:20px;">
                        <br/>
                        <br/>
                        <br/>
                        <table style="border: 1px solid black;width:50%;">
                            <tr style="border: 1px solid black;">
                                <td style="border: 1px solid black;text-align:center;">
                                    <b>Order de mission</b>
                                </td>
                            </tr>
                            <tr>
                                <td style="text-align:center;">
                                    <b>Ref :</b>
                                    <strong>
                                        <span t-field="o.name"/>
                                    </strong>
                                </td>
                            </tr>
                        </table>
                        <br/>
                        <br/>
                        <b>Nom et Prénom :</b>
                        <span t-field="o.chef_mission_id"/>
                        <br/>
                        <br/>
                        <b>Fonction :</b>
                        <span t-field="o.chef_mission_id.job_id"/>
                        <br/>
                        <br/>
                        <b>Structure :</b>
                        <span t-field="o.chef_mission_id.department_id"/>
                        <br/>
                        <br/>
                        <b>Est autorisé à se rendre, le :</b>
                        <span t-field="o.date_depart_prevue"/>
                        <br/>
                        <br/>
                        <b>A :</b>
                        <span t-field="o.destination"/>
                        <br/>
                        <br/>
                        <b>Pour la mission suivante :</b>
                        <span t-field="o.motif"/>
                        <br/>
                        <br/>
                        <b>Il sera accompagné de :</b>
                        <t t-foreach="o.employee_ids" t-as="e">
                            <span t-field="e.name"/>
                            <br/>
                        </t>
                        <br/>
                        <br/>
                        <b>Il utilisera les moyens de transports suivants:</b>
                        <span t-field="o.moyen_id"/>
                        <span t-if="o.vehicule_id">
                            [<span t-field="o.vehicule_id"/>]
                        </span>
                        <br/>
                        <br/>
                        <div style="text-align:right;">
                            Fait à Alger le :
                            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y')"/>
                        </div>
                        <br/>
                        <br/>
                        <table style="width:100%; border:none;">
                            <tr>
                                <td style="test-align:center">
                                    <b>Le chef de structure :</b>
                                </td>
                                <td style="test-align:center">
                                    <b>Signature :</b>
                                </td>

                            </tr>
                        </table>

                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
