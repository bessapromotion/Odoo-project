<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="action_hr_allocation_button" model="ir.actions.act_window">
            <field name="name">Allocations des congés</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.leave.allocation</field>
            <field name="context">{'search_default_source_id': [active_id], 'default_source_id': active_id}</field>
            <field name="domain">[('source_id','=', active_id)]</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Aucune allocation de congé n'est encore créée.
              </p><p>
              </p>
            </field>
        </record>

        <!-- conge -->
  		<record model="ir.ui.view" id="conge_tree_view">
            <field name="name">conge.tree</field>
            <field name="model">hr.conge</field>
            <field name="arch" type="xml">
				<tree>
                	<field name="name"/>
                    <field name="date_start"/>
				  	<field name="date_end"/>
                    <field name="date"/>
                    <field name="user_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

		<record id="conge_filter" model="ir.ui.view">
            <field name="name">hr.conge.filter</field>
            <field name="model">hr.conge</field>
            <field name="arch" type="xml">
                <search string="conge">
                    <field name="name" />

                    <filter name="draft" string="Nouveau" domain="[('state','=','draft')]"/>
                    <filter name="load" string="Terminé" domain="[('state', '=', 'load')]"/>
                    <filter name="compute" string="Calculé non validé" domain="[('state', '=', 'compute')]"/>
                    <filter name="done" string="Validé" domain="[('state', '=', 'done')]"/>
                    <filter name="cancel" string="Annulé" domain="[('state', '=', 'cancel')]"/>

<!--                    <group expand="0" string="Grouper par...">-->
<!--                        <filter name="employee" string="Employé" domain="[]" context="{'group_by':'employe_id'}" help="Employé"/>-->
<!--                    </group>-->
                </search>
            </field>
        </record>


		<record model="ir.ui.view" id="conge_form_view">
            <field name="name">hr.conge.form</field>
            <field name="model">hr.conge</field>
            <field name="arch" type="xml">
				<form string="Conge">
                    <header>
                        <button name="action_load" string="Charger le personnel" states="draft" class="oe_highlight" type="object"/>
                        <button name="action_load" string="Mise a jour" states="load" class="oe_highlight" type="object"/>
                        <button name="action_compute" string="Calculer les droits de congé" states="load" class="oe_highlight" type="object"/>
                        <button name="action_compute" string="Relancer le calcul des droits de congé" states="compute" class="oe_highlight" type="object"/>
                        <button name="action_validate" string="Valider et créer les allocations" states="compute" class="oe_highlight" type="object"
                        confirm="Voulez-vous valider le calcul des droits de congé ?"/>
<!--                        <button name="action_print" states="valid,inprogress,done" string="Imprimer" class="oe_highlight" type="object"/>-->

                        <button name="action_cancel" string="Annuler" states="draft,load,compute" type="object"
                        confirm="Voulez-vous annuler cette opération ?"/>

                        <field name="state"  widget="statusbar" statusbar_visible="draft,valid,inprogress,done" />
				    </header>
					<sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="action" name="%(action_hr_allocation_button)d" icon="fa-comments-o">
                                <field string="Allocations" name="lattrib_nbr" widget="statinfo" />
                            </button>
                        </div>
                        <h1>
                            <label for="name" string="Droits aux congé # "/>
                            <field name="name" class="oe_inline"/>
                        </h1>

						<group>
                            <group>
                                <field name="date_start"/>
								<field name="date_end" />
						    </group>
							<group>
                                <field name="user_id"  options='{"no_open": True, "no_create": True}'/>
								<field name="date"/>
							</group>
						</group>
                        <notebook>
                            <page string="Personnel">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="employe_id"/>
                                        <field name="matricule"/>
                                        <field name="conge_id" invisible="1"/>
                                        <field name="department_id"/>
                                        <field name="contract_id"/>
                                        <field name="contract_state" widget="badge" decoration-success="contract_state == 'open'"
                                               decoration-warning="contract_state == 'close'" decoration-danger="contract_state == 'cancel'"/>
                                        <field name="date_entree"/>
                                        <field name="date_debut"/>
                                        <field name="nbr_mois"/>
                                        <field name="nbr_jour"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
					</sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
				</form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_conge_tree_view">
            <field name="name">Droits aux congés</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.conge</field>
			<field name="search_view_id" ref="conge_filter"/>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="conge_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer une nouveau calcul des droits de congé.
                </p><p>

                </p><p>

                </p>
            </field>
		</record>

<!--  Top menu item -->
<!--            <menuitem name="Congés" id="menu_conge_menu" parent="hr_holidays.menu_hr_holidays_root" sequence="3"/>-->

            <menuitem name="Calcul droits au congé annuel" action="action_conge_tree_view" id="menu_conge"
            parent="hr_holidays.menu_hr_holidays_root" sequence="3"/>

<!--            <menuitem name="Etat des congés/absences" action="hr_holidays.action_hr_holidays_dashboard" id="menu_vue"-->
<!--            parent="menu_conge_menu" sequence="20"/>-->

<!--            <menuitem name="Titres de congé" action="hr_holidays.hr_leave_action_all" id="menu_titre_conge"-->
<!--            parent="menu_conge_menu" sequence="30"/>-->


    </data>
</openerp>
