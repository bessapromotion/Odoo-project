<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    <record id="hr_leave_allocation_src_view_form" model="ir.ui.view">
        <field name="name">hr.leave.allocation.src.view.form</field>
        <field name="model">hr.leave.allocation</field>
        <field name="priority">2</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_allocation_view_form_manager"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='allocation_type']" position="after">
                    <field name="source_id" readonly="1"/>
                </xpath>
            </data>
        </field>
    </record>

        <record id="view_hr_leave_allocation_inherit_search" model="ir.ui.view">
              <field name="name">hr.leave.allocation.expand2.filter</field>
              <field name="model">hr.leave.allocation</field>
              <field name="inherit_id" ref="hr_holidays.view_hr_leave_allocation_filter"/>
              <field name="arch" type="xml">
                    <xpath expr="//search" position="inside">
                        <field name="source_id"/>
                    </xpath>
              </field>
        </record>

    </data>
</openerp>
