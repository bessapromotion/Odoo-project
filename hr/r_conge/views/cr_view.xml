        <!-- conge -->
  		<record model="ir.ui.view" id="conge_recuperation_tree_view">
            <field name="name">conge.recuperation.tree</field>
            <field name="model">hr.conge.recuperation</field>
            <field name="arch" type="xml">
				<tree>
                	<field name="name"/>
                    <field name="date_start"/>
				  	<field name="date_end"/>
                    <field name="date"/>
                    <field name="site_id"/>
                    <field name="user_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

		<record id="conge_recuperation_filter" model="ir.ui.view">
            <field name="name">hr.conge.recuperation.filter</field>
            <field name="model">hr.conge.recuperation</field>
            <field name="arch" type="xml">
                <search string="conge">
                    <field name="name" />

                    <filter name="draft" string="Nouveau" domain="[('state','=','draft')]"/>
                    <filter name="load" string="Terminé" domain="[('state', '=', 'load')]"/>
                    <filter name="compute" string="Calculé non validé" domain="[('state', '=', 'compute')]"/>
                    <filter name="done" string="Validé" domain="[('state', '=', 'done')]"/>
                    <filter name="cancel" string="Annulé" domain="[('state', '=', 'cancel')]"/>

<!--                    <group expand="0" string="Grouper par...">-->
<!--                        <filter name="employee" string="Employé" domain="[]" context="{'group_by':'employe_id'}" help="Employé"/>-->
<!--                    </group>-->
                </search>
            </field>
        </record>


		<record model="ir.ui.view" id="conge_recuperation_form_view">
            <field name="name">hr.conge.recuperation.form</field>
            <field name="model">hr.conge.recuperation</field>
            <field name="arch" type="xml">
				<form string="Conge">
                    <header>
                        <button name="action_load" string="Charger le personnel" states="draft" class="oe_highlight" type="object"/>
                        <button name="action_load" string="Mise a jour" states="load" class="oe_highlight" type="object"/>
                        <button name="action_compute" string="Calculer les droits de congé" states="load" class="oe_highlight" type="object"/>
                        <button name="action_compute" string="Relancer le calcul des droits de congé" states="compute" class="oe_highlight" type="object"/>
                        <button name="action_validate" string="Valider et créer les allocations" states="compute" class="oe_highlight" type="object"
                        confirm="Voulez-vous valider le calcul des droits de congé ?"/>
<!--                        <button name="action_print" states="valid,inprogress,done" string="Imprimer" class="oe_highlight" type="object"/>-->

                        <button name="action_cancel" string="Annuler" states="draft,load,compute" type="object"
                        confirm="Voulez-vous annuler cette opération ?"/>

                        <field name="state" clickable="True" widget="statusbar" statusbar_visible="draft,valid,inprogress,done" />
				    </header>
					<sheet>
<!--                        <div class="oe_button_box" name="button_box">-->
<!--                            <button class="oe_stat_button" type="action" name="%(action_hr_allocation_button)d" icon="fa-comments-o">-->
<!--                                <field string="Allocations" name="lattrib_nbr" widget="statinfo" />-->
<!--                            </button>-->
<!--                        </div>-->
                        <h1>
                            <label for="name" string="Congé de récupération # "/>
                            <field name="name" class="oe_inline"/>
                        </h1>

						<group>
                            <group>
                                <field name="site_id"/>
                                <field name="region_id"/>
                                <field name="date_start"/>
								<field name="date_end" />
						    </group>
							<group>
                                <field name="user_id"  options='{"no_open": True, "no_create": True}'/>
								<field name="date"/>
							</group>
						</group>
                        <notebook>
                            <page string="Personnel">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="employe_id"/>
                                        <field name="matricule"/>
                                        <field name="conge_id" invisible="1"/>
                                        <field name="regime_id"/>
                                        <field name="date_entree"/>
                                        <field name="date_debut"/>
                                        <field name="nbr_mois"/>
                                        <field name="nbr_jour"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
					</sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
				</form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_conge_recuperation_tree_view">
            <field name="name">Droits aux congés de récupération</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.conge.recuperation</field>
			<field name="search_view_id" ref="conge_recuperation_filter"/>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="conge_recuperation_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer un nouveau calcul des droits de congé de récupération.
                </p><p>

                </p><p>

                </p>
            </field>
		</record>

<!--  Top menu item -->

            <menuitem name="Calcul droits au congé de récupération" action="action_conge_recuperation_tree_view" id="menu_conge_recup"
            parent="menu_conge_menu" sequence="20"/>

    </data>
</openerp>
