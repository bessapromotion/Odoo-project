<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

  		<record model="ir.ui.view" id="occasion_tree_view">
            <field name="name">hr.conge.occasion.tree</field>
            <field name="model">hr.conge.occasion</field>
            <field name="arch" type="xml">
				<tree editable="bottom">
                	<field name="name"/>
                	<field name="date_fixe"/>
                	<field name="type"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_occasion_tree_view">
            <field name="name">Occasions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.conge.occasion</field>
			<field name="view_mode">tree</field>
<!--            <field name="search_view_id" ref="region_filter"/>-->
<!--            <field name="filter" eval="True"/>-->
            <field name="view_id" ref="occasion_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer une nouvelle occasion.
                </p><p>

                </p><p>

                </p>
            </field>
		</record>


	<!-- Top menu item -->

        <menuitem name="Occasions" id="menu_occasion"  parent="hr_holidays.menu_hr_holidays_configuration" action="action_occasion_tree_view" sequence="90" />


 		<record model="ir.ui.view" id="ferie_tree_view">
            <field name="name">hr.conge.ferie.tree</field>
            <field name="model">hr.conge.ferie</field>
            <field name="arch" type="xml">
				<tree>
                	<field name="name"/>
                	<field name="active"/>
                </tree>
            </field>
        </record>

		<record model="ir.ui.view" id="conge_ferie_form_view">
            <field name="name">hr.conge.ferie.form</field>
            <field name="model">hr.conge.ferie</field>
            <field name="arch" type="xml">
				<form string="Jours fériés">
                    <header>
                        <button string="Charger" name="action_load" type="object" attrs="{'invisible':[('loaded','=', True)]}"/>
                    </header>
					<sheet>
<!--                        <div class="oe_button_box" name="button_box">-->
<!--                            <button class="oe_stat_button" type="action" name="%(action_hr_allocation_button)d" icon="fa-comments-o">-->
<!--                                <field string="Allocations" name="lattrib_nbr" widget="statinfo" />-->
<!--                            </button>-->
<!--                        </div>-->
                        <h1>
                            <label for="name" string="Jours fériés de l'année # "/>
                            <field name="name" class="oe_inline"/>
                        </h1>
                        <group>
                            <field name="loaded" invisible="1"/>
                        </group>
                        <notebook>
                            <page string="Jours">
                                <field name="date_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="date"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
					</sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
				</form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_ferie_tree_view">
            <field name="name">Jours fériés</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.conge.ferie</field>
			<field name="view_mode">tree,form</field>
<!--            <field name="search_view_id" ref="region_filter"/>-->
<!--            <field name="filter" eval="True"/>-->
            <field name="view_id" ref="ferie_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer une nouvelle année jours fériés.
                </p><p>

                </p><p>

                </p>
            </field>
		</record>


	<!-- Top menu item -->

        <menuitem name="Jours fériés" id="menu_ferie"  parent="hr_holidays.menu_hr_holidays_configuration" action="action_ferie_tree_view" sequence="80" />

    </data>
</openerp>

