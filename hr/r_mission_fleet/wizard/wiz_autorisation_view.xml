<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="hr_mission_autorisation_wizard_form_view">
            <field name="name">hr.mission.autorisation.wizard.form</field>
            <field name="model">hr.mission.autorisation.wizard</field>
            <field name="arch" type="xml">
                <form string="Autorisation">
                    <group>
                        <group>
                            <field name="mission_id"/>
                            <field name="auto" invisible="1"/>
                        </group>
                        <group/>
                        <group attrs="{'invisible':[('auto','=',False)]}">
                            <field name="employee" />
                        </group>
                        <group attrs="{'invisible':[('auto','=',False)]}">
                            <field name="vehicule_id" />
                            <field name="avec_chauffeur" />
                            <field name="chauffeur_id" attrs="{'invisible':[('avec_chauffeur','=',False)]}"/>
                        </group>
                    </group>
                    <group attrs="{'invisible':[('auto','=',True)]}">
                        <field name="motif_refus"/>
                    </group>

                    <footer>
                        <button name="action_autoriser" type="object" string="Autoriser" class="oe_highlight" attrs="{'invisible':[('auto','=',False)]}"/>
                        <button name="action_refuser" type="object" string="Refuser" class="btn-danger" attrs="{'invisible':[('auto','=',True)]}"/>
                        or
                        <button special="cancel" string="Annuler"/>
                    </footer>
                </form>
            </field>
        </record>


    </data>
</odoo>
