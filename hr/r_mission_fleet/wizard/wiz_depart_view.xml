<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="hr_mission_depart_wizard_form_view">
            <field name="name">hr.mission.depart.wizard.form</field>
            <field name="model">hr.mission.depart.wizard</field>
            <field name="arch" type="xml">
                <form string="Marquer le depart">
                    <group>
                        <group>
                            <field name="mission_id" invisible="0"/>
                            <field name="vehicule_id" invisible="1"/>
                            <field name="date_depart" />
                        </group>
                        <group>
                            <field name="km_depart_actuel" attrs="{'invisible':[('vehicule_id','=', False)]}"/>
                            <field name="km_depart" attrs="{'invisible':[('vehicule_id','=', False)]}" />
                        </group>
                    </group>

                    <footer>
                        <button name="action_validate" type="object" string="Appliquer" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Annuler"/>
                    </footer>
                </form>
            </field>
        </record>


    </data>
</odoo>
