<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <record id="view_dl_contract_readonly_form" model="ir.ui.view">
            <field name="name">hr.contract.dl.readonly.form.inherit</field>
            <field name="model">hr.contract</field>
            <field name="priority">2</field>
            <field name="inherit_id" ref="r_contract.view_dl_contract_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='state']" position="replace">
                        <field name="state" widget="statusbar" />
                    </xpath>

                    <xpath expr="//field[@name='date_etablissement']" position="replace">
                        <field name="date_etablissement" attrs="{'readonly':[('state','!=', 'draft')]}"/>
                    </xpath>
<!--                    <xpath expr="//field[@name='employee_id']" position="replace">-->
<!--                        <field name="employee_id" attrs="{'readonly':[('state','!=', 'draft')]}" options='{"no_create": True}'/>-->
<!--                    </xpath>-->
                    <xpath expr="//field[@name='department_id']" position="replace">
                        <field name="department_id" attrs="{'readonly':[('state','!=', 'draft')]}" options='{"no_create": True, "no_open": True}'/>
                    </xpath>

                    <xpath expr="//field[@name='company_id']" position="replace">
                        <field name="company_id" groups="base.group_multi_company" attrs="{'readonly':[('state','!=', 'draft')]}"/>
                    </xpath>
                    <xpath expr="//field[@name='job_id']" position="replace">
                        <field name="job_id" options='{"no_create": True}' attrs="{'readonly':[('state','!=', 'draft')]}" />
                    </xpath>
                    <!-- Modele -->
                    <xpath expr="//field[@name='modele_id']" position="attributes">
                        <attribute name="attrs">{'readonly':[('state','!=', 'draft')]}</attribute>
                    </xpath>
                    <!--
                    <xpath expr="//field[@name='type_id']" position="attributes">
                        <field name="type_id" options='{"no_create": True}' attrs="{'readonly':[('state','!=', 'draft')]}" />
                    </xpath>
                    -->

                    <xpath expr="//field[@name='preavis']" position="attributes">
                        <attribute name="attrs">{'readonly':[('state','!=', 'draft')]}</attribute>
                    </xpath>
                    <xpath expr="//field[@name='uom_preavis']" position="attributes">
                        <attribute name="attrs">{'readonly':[('state','!=', 'draft')]}</attribute>
                    </xpath>
                    <xpath expr="//field[@name='nbr_mois']" position="attributes">
                        <attribute name="attrs">{'readonly':[('state','!=', 'draft')], 'invisible':[('type_id_code', '=', 'CDI')]}</attribute>
                    </xpath>
                    <xpath expr="//field[@name='trial_date_end']" position="replace">
                        <field name="trial_date_end" attrs="{'readonly':[('state','!=', 'draft')]}"/>
                    </xpath>
                    <xpath expr="//field[@name='trial_nbr_mois']" position="replace">
                        <field name="trial_nbr_mois" attrs="{'readonly':[('state','!=', 'draft')]}"/>
                    </xpath>

                    <xpath expr="//field[@name='categorie']" position="replace">
                        <field name="categorie" attrs="{'readonly':[('state','!=', 'draft')]}"/>
                    </xpath>
                    <xpath expr="//field[@name='section']" position="replace">
                        <field name="section" attrs="{'readonly':[('state','!=', 'draft')]}"/>
                    </xpath>

                    <xpath expr="//field[@name='date_start']" position="replace">
                        <field name="date_start" attrs="{'readonly':[('state','!=', 'draft')]}"/>
                    </xpath>
                    <xpath expr="//field[@name='date_end']" position="attributes">
                        <attribute name="attrs">{'readonly':[('state','!=', 'draft')], 'invisible':[('type_id_code', '=', 'CDI')]}</attribute>
                    </xpath>
                    <xpath expr="//field[@name='wage']" position="replace">
                        <field name="wage" attrs="{'readonly':[('state','!=', 'draft')]}"/>
                    </xpath>
                    <xpath expr="//field[@name='type_salaire']" position="replace">
                        <field name="type_salaire" attrs="{'readonly':[('state','!=', 'draft')]}"/>
                    </xpath>
                    <xpath expr="//field[@name='hr_responsible_id']" position="replace">
                        <field name="hr_responsible_id" attrs="{'readonly':[('state','!=', 'draft')]}" options='{"no_create": True, "no_open": True}'/>
                    </xpath>
                    <xpath expr="//field[@name='rubrique_ids']" position="replace">
                        <field name="rubrique_ids"  invisible="1"><!-- attrs="{'readonly':[('state','!=', 'draft')]}" -->
                                <tree editable="bottom">
                                    <field name="name"/>
                                </tree>
                        </field>
                    </xpath>
                    <xpath expr="//field[@name='resource_calendar_id']" position="replace">
                        <field name="resource_calendar_id" attrs="{'readonly':[('state','!=', 'draft')]}"/>
                    </xpath>


                </data>
            </field>
        </record>

        <record id="view_hr_avenant_readonly_form" model="ir.ui.view">
            <field name="name">hr.avenant.dl.readonly.form.inherit</field>
            <field name="model">hr.contract</field>
            <field name="priority">2</field>
            <field name="inherit_id" ref="r_avenant.view_avenant_contract_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='employee_id']" position="replace">
                        <field name="employee_id" attrs="{'readonly':['|', ('state','!=', 'draft'), ('type_avenant', '=', 'Avenant')]}" options='{"no_create": True}'/>
                    </xpath>

                    <xpath expr="//field[@name='date_entree']" position="replace">
                        <field name="date_entree" attrs="{'readonly':[('state','!=', 'draft')]}"/>
                    </xpath>
                    <xpath expr="//field[@name='article_ids']" position="replace">

                        <field name="article_ids" attrs="{'readonly':[('state','!=', 'draft')]}">
                                <tree create="false" editable="bottom">
                                    <field name="name" readonly="1"/>
                                    <field name="article"/>
                                    <field name="type_changement" readonly="1"/>
                                    <field name="old_val" readonly="1"/>
                                    <field name="revision_val" readonly="1"/>
                                </tree>
                        </field>
                    </xpath>

                </data>
            </field>
        </record>

        <record id="view_dl_contract_kanban_drag" model="ir.ui.view">
            <field name="name">dl.contract.kanban.drag.inherit</field>
            <field name="model">hr.contract</field>
            <field name="priority">2</field>
            <field name="inherit_id" ref="r_contract.view_dl_contract_kanban"/>
            <field name="arch" type="xml">

                    <kanban class="o_kanban_small_column" default_order="date_end" position="replace">
                        <kanban class="o_kanban_small_column" default_order="date_end" disable_drag_drop_record='true'>
                            <field name="employee_id"/>
                            <field name="activity_state"/>
                            <field name="state"/>
                            <progressbar field="activity_state" colors='{"planned": "success", "today": "warning", "overdue": "danger"}'/>
                            <templates>
                            <t t-name="kanban-box">
                                <div class="oe_kanban_card oe_kanban_global_click">
                                    <div class="o_dropdown_kanban dropdown" t-if="!selection_mode" groups="base.group_user">
                                        <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown" data-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                            <span class="fa fa-ellipsis-v"/>
                                        </a>
                                        <div class="dropdown-menu" role="menu">
                                            <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit Contract</a></t>
                                            <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                                        </div>
                                    </div>
                                    <div class="oe_kanban_content">
                                        <div class="o_hr_contract_state">
                                            <field name="kanban_state" widget="state_selection" />
                                            <strong class="o_kanban_record_title">
                                                <field name="type_avenant"/>
                                                <strong><field name="name"/></strong>
                                            </strong>
                                        </div>
                                        <div class="o_kanban_record_subtitle o_hr_contract_job_id">
                                            <span><strong><field name="employee_id"/></strong></span><br></br>
                                            <field name="department_id"/><br></br>
                                            <strong><field name="job_id"/></strong>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <img t-att-src="kanban_image('hr.employee', 'image_128', record.employee_id.raw_value)" t-att-title="record.employee_id.value" t-att-alt="record.employee_id.value" width="24" height="24" class="oe_kanban_avatar float-right"/>
                                        </div>
                                    </div>
                                    <div class="oe_clear"></div>
                                </div>
                            </t>
                            </templates>

                        </kanban>
                    </kanban>


			</field>
        </record>

    </data>
</openerp>
