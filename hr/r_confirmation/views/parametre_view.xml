<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    <!--Type-->
    <record model="ir.ui.view" id="sanction_type_tree_view">
        <field name="name">hr.sanction.type.tree</field>
        <field name="model">hr.sanction.type</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name"/>
                <field name="degre"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_sanction_type_tree_view">
        <field name="name">Type de sanction</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.sanction.type</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="sanction_type_tree_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouveau type de sanction.
            </p><p>

            </p><p>

            </p>
         </field>
    </record>

    <!--Motif-->
    <record model="ir.ui.view" id="faute_pro_tree_view">
        <field name="name">hr.faute.professionnelle.tree</field>
        <field name="model">hr.faute.professionnelle</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name"/>
                <field name="degre"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_faute_pro_tree_view">
        <field name="name">Fautes professionnelles</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.faute.professionnelle</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="faute_pro_tree_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouvelle faute professionnelle.
            </p><p>

            </p><p>

            </p>
         </field>
    </record>

        <menuitem name="Sanctions" id="menu_sanction_root" parent="hr.menu_human_resources_configuration" sequence="80"/>

        <menuitem name="Types de sanction" action="action_sanction_type_tree_view" id="menu_sanction_type"
            parent="menu_sanction_root" sequence="0"/>

        <menuitem name="Fautes professionnelles" action="action_faute_pro_tree_view" id="menu_suspension_faute"
            parent="menu_sanction_root" sequence="0"/>


    </data>
</openerp>
