<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- confirmation -->
        <record model="ir.ui.view" id="confirmation_all_tree_view">
            <field name="name">confirmation.tree</field>
            <field name="model">hr.confirmation</field>
            <field name="arch" type="xml">
                <tree decoration-info="state == 'draft'" decoration-muted="state == 'cancel'">
                    <field name="name"/>
                    <field name="employe_id"/>
                    <field name="s_date"/>
                    <field name="type"/>
                    <field name="user_id"/>
                    <field name="company_id"/>
                    <field name="state"
                           decoration-success="state == 'done'"
                           decoration-muted="state == 'cancel'"
                           decoration-warning="state == 'valid'"
                           decoration-info="state == 'draft'" widget="badge"/>
                </tree>
            </field>
        </record>

        <record id="confirmation_all_filter" model="ir.ui.view">
            <field name="name">hr.confirmation.filter</field>
            <field name="model">hr.confirmation</field>
            <field name="arch" type="xml">
                <search string="confirmation">
                    <field name="employe_id"/>
                    <field name="name"/>
                    <field name="type"/>

                    <filter name="draft" string="Nouveaux" domain="[('state','=','draft')]"/>
                    <filter name="done" string="Terminés" domain="[('state', '=', 'done')]"/>
                    <filter name="cancel" string="Annulés" domain="[('state', '=', 'cancel')]"/>

                    <group expand="0" string="Grouper par...">
                        <filter name="employee" string="Employé" domain="[]" context="{'group_by':'employe_id'}"
                                help="Employé"/>
                        <filter name="company" string="Société" domain="[]" context="{'group_by':'company_id'}"
                                help="Société"/>
                        <filter name="type" string="Type confirmation" domain="[]" context="{'group_by':'type'}"
                                help="Type"/>
                    </group>
                </search>
            </field>
        </record>


        <record model="ir.ui.view" id="confirmation_all_form_view">
            <field name="name">hr.confirmation.form</field>
            <field name="model">hr.confirmation</field>
            <field name="arch" type="xml">
                <form string="Décision de confirmation">
                    <header>
                        <button name="action_validate" string="Valider" states="draft" class="oe_highlight"
                                type="object"
                                confirm="Voulez-vous valider cette confirmation ?"/>
                        <button name="action_prise_effet" string="Entrer en application" states="valid"
                                class="oe_highlight" type="object"
                                confirm="Voulez-vous faire rentrer en vigueur cette confirmation ?"/>
                        <button name="action_cancel" string="Annuler" states="draft,valid" type="object"
                                confirm="Voulez-vous annuler cette confirmation ?"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,valid,done"/>
                    </header>
                    <sheet>
                        <h1>
                            <label for="name" string="Décision de confirmation # "/>
                            <field name="name" class="oe_inline"/>
                        </h1>
                        <field name="image" widget='image' class="oe_avatar"/>
                        <div class="oe_title">
                            <label for="employe_id" class="oe_edit_only"/>
                            <h1>
                                <field name="employe_id" placeholder="Employé  "
                                       options='{"no_open": True, "no_create": True}'/>
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="user_id" options='{"no_open": True, "no_create": True}'/>
                                <field name="company_id" options='{"no_open": True, "no_create": True}'/>
                                <field name="responsable_id" options='{"no_open": True, "no_create": True}'/>
                                <field name="s_date"/>
                                <field name="type"/>
                            </group>
                            <group>
                                <field name="matricule"/>
                                <field name="job_id"/>
                                <field name="contract_id"
                                       domain="[('employee_id','=', employe_id), ('state','not in', ('draft','cancel'))]"
                                       options='{"no_open": True, "no_create": True}'/>
                                <field name="feuille_route" invisible="1"/>
                                <label for="fr_reference" string="Feuille de route"
                                       attrs="{'invisible': [('feuille_route', '!=', True)]}"/>
                                <div attrs="{'invisible': [('feuille_route', '!=', True)]}">
                                    <field name="fr_reference"/>
                                    <span>du</span>
                                    <field name="fr_date" class="oe_inline"/>
                                </div>
                            </group>
                            <group string="Confirmation" attrs="{'invisible': [('type', '!=', 'confirmation')]}">
                                <!--                                <field name="conf_job_id" options='{"no_open": True, "no_create": True}' />-->
                                <field name="conf_indemnite"/>
                                <field name="date_effet"/>
                            </group>
                            <group string="Prolongation période essai"
                                   attrs="{'invisible': [('type', '!=', 'prolongation')]}">
                                <field name="prol_duree"/>
                                <field name="prol_date_fin"/>
                            </group>

                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <!-- confirmation -->
        <record model="ir.ui.view" id="confirmation_tree_view">
            <field name="name">confirmation.tree</field>
            <field name="model">hr.confirmation</field>
            <field name="arch" type="xml">
                <tree decoration-info="state == 'draft'" decoration-muted="state == 'cancel'">
                    <field name="name"/>
                    <field name="employe_id"/>
                    <field name="s_date"/>
                    <field name="date_effet"/>
                    <field name="user_id"/>
                    <field name="company_id"/>
                    <field name="state" decoration-success="state == 'done'"
                           decoration-muted="state == 'cancel'"
                           decoration-warning="state == 'valid'"
                           decoration-info="state == 'draft'" widget="badge"/>
                </tree>
            </field>
        </record>

        <record id="confirmation_filter" model="ir.ui.view">
            <field name="name">hr.confirmation.filter</field>
            <field name="model">hr.confirmation</field>
            <field name="arch" type="xml">
                <search string="confirmation">
                    <field name="employe_id"/>
                    <field name="name"/>

                    <filter name="draft" string="Nouveaux" domain="[('state','=','draft')]"/>
                    <filter name="done" string="Terminés" domain="[('state', '=', 'done')]"/>
                    <filter name="cancel" string="Annulés" domain="[('state', '=', 'cancel')]"/>

                    <group expand="0" string="Grouper par...">
                        <filter name="employee" string="Employé" domain="[]" context="{'group_by':'employe_id'}"
                                help="Employé"/>
                    </group>
                </search>
            </field>
        </record>


        <record model="ir.ui.view" id="confirmation_form_view">
            <field name="name">hr.confirmation.form</field>
            <field name="model">hr.confirmation</field>
            <field name="arch" type="xml">
                <form string="Décision de confirmation">
                    <header>
                        <field name="company_id" invisible="1"/>
                        <button name="action_validate" string="Valider" states="draft" class="oe_highlight"
                                type="object"
                                confirm="Voulez-vous valider cette confirmation ?"/>
                        <button name="action_prise_effet" string="Entrer en application" states="valid"
                                class="oe_highlight" type="object"
                                confirm="Voulez-vous faire rentrer en vigueur cette confirmation ?"/>
                        <!--                        <button name="action_print" states="valid,done" string="Imprimer" class="oe_highlight"-->
                        <!--                                type="object"/>-->

                        <button name="action_cancel" string="Annuler" states="draft,valid" type="object"
                                confirm="Voulez-vous annuler cette confirmation ?"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,valid,done"/>
                    </header>
                    <sheet>
                        <h1>
                            <label for="name" string="Décision de confirmation # "
                                   attrs="{'invisible': [('type','!=','confirmation')]}"/>
                            <label for="name" string="Décision de prolongation # "
                                   attrs="{'invisible': [('type','!=','prolongation')]}"/>
                            <label for="name" string="Décision de rupture # "
                                   attrs="{'invisible': [('type','!=','rupture')]}"/>
                            <field name="name" class="oe_inline"/>
                        </h1>
                        <field name="image" widget='image' class="oe_avatar"/>
                        <div class="oe_title">
                            <label for="employe_id" class="oe_edit_only"/>
                            <h1>
                                <field name="employe_id" placeholder="Employé  "
                                       options='{"no_open": True, "no_create": True}'/>
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="user_id" options='{"no_open": True, "no_create": True}'/>
                                <field name="responsable_id" options='{"no_open": True, "no_create": True}'/>
                                <field name="s_date"/>
                                <field name="type" invisible="1"/>
                            </group>
                            <group>
                                <field name="matricule"/>
                                <field name="job_id"/>
                                <field name="contract_id"
                                       domain="[('employee_id','=', employe_id), ('state','not in', ('draft','cancel'))]"
                                       options='{"no_open": True, "no_create": True}'/>
                                <field name="feuille_route" invisible="1"/>
                                <label for="fr_reference" string="Feuille de route"
                                       attrs="{'invisible': [('feuille_route', '!=', True)]}"/>
                                <div attrs="{'invisible': [('feuille_route', '!=', True)]}">
                                    <field name="fr_reference"/>
                                    <span class="oe_read_only">du</span>
                                    <field name="fr_date" class="oe_inline"/>
                                </div>

                            </group>
                            <group string="Confirmation" attrs="{'invisible': [('type', '!=', 'confirmation')]}">
                                <!--                                <field name="conf_job_id" options='{"no_open": True, "no_create": True}' />-->
                                <field name="conf_indemnite"/>
                                <field name="date_effet"/>
                            </group>
                            <group string="Prolongation période essai"
                                   attrs="{'invisible': [('type', '!=', 'prolongation')]}">
                                <field name="prol_duree"/>
                                <field name="prol_date_fin"/>
                            </group>

                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_confirmation_all_view" model="ir.actions.act_window">
            <field name="name">Décision de confirmation</field>
            <field name="res_model">hr.confirmation</field>

            <field name="view_mode">tree,form</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('confirmation_all_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('confirmation_all_form_view')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Enregistrer une nouvelle décision de confirmation
                </p>
            </field>
        </record>

        <!--        confirmation-->
        <record id="action_confirmation_poste_view" model="ir.actions.act_window">
            <field name="name">Décision de confirmation de poste</field>
            <field name="res_model">hr.confirmation</field>

            <field name="view_mode">tree,form</field>
            <field name="context">{'default_type': 'confirmation'}</field>
            <field name="domain">[('type', '=', 'confirmation')]</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('confirmation_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('confirmation_form_view')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Enregistrer une nouvelle décision de confirmation
                </p>
            </field>
        </record>

        <!--        prolongation-->
        <record id="action_confirmation_prolongation_view" model="ir.actions.act_window">
            <field name="name">Décision de renouvelement période d'essai</field>
            <field name="res_model">hr.confirmation</field>

            <field name="view_mode">tree,form</field>
            <field name="context">{'default_type': 'prolongation'}</field>
            <field name="domain">[('type', '=', 'prolongation')]</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('confirmation_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('confirmation_form_view')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Enregistrer une nouvelle décision de prolongation période d'essai
                </p>
            </field>
        </record>

        <!--        periode essai non concluante-->
        <record id="action_confirmation_rupture_view" model="ir.actions.act_window">
            <field name="name">Décision de rupture de relation de travail</field>
            <field name="res_model">hr.confirmation</field>

            <field name="view_mode">tree,form</field>
            <field name="context">{'default_type': 'rupture'}</field>
            <field name="domain">[('type', '=', 'rupture')]</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('confirmation_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('confirmation_form_view')})]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Enregistrer une nouvelle décision de rupture relation de travail
                </p>
            </field>
        </record>

        <!-- Top menu item -->
        <menuitem name="Confirmations de poste" action="action_confirmation_poste_view" id="menu_confirmation_poste"
                  parent="hr_base.menu_carriere" sequence="40"/>
        <menuitem name="Renouvelement période essai" action="action_confirmation_prolongation_view"
                  id="menu_confirmation_prolongation"
                  parent="hr_base.menu_carriere" sequence="50"/>

    </data>
</odoo>
