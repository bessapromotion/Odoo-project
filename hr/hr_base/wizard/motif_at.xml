<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="motif_attestation_wizard_form_view">
            <field name="name">motif.attestation.wizard.form</field>
            <field name="model">motif.attestation.wizard</field>
            <field name="arch" type="xml">
<!--                <header>-->
<!--                    <field name="state"  widget="statusbar" statusbar_visible="1" />-->
<!--                </header>-->
                <form string="Motif de delivrance attestation de travail">
                    <group states="1">
                        <group>
                            <field name="state" invisible="1"/>
                            <field name="name" />
                            <field name="motif" />
                        </group>
                    </group>
                    <group states="2">
                            <div>
                                Document imprimé en PDF, veuillez fermer cet assistant pour revenir a la fiche employé
                            </div>
                    </group>

                    <footer>
                        <button name="action_validate" type="object" states="1" string="Valider" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Annuler" states="1"/>
                        <button special="cancel" string="Fermer" states="2"/>
                    </footer>
                </form>
            </field>
        </record>


    </data>
</odoo>
