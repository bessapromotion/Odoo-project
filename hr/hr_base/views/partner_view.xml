<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

 <!-- interface Clients -->
		<record id="view_sod_partner_form" model="ir.ui.view">
            <field name="name">sod.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="priority">2</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='vat']" position="after">
                        <field name="code"/>
                        <field name="site"/>
                    </xpath>
                </data>
			</field>
        </record>

        <record id="view_lun_partner_search" model="ir.ui.view">
            <field name="name">lun.partner.filter</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//search" position="inside">
                    <filter string="Sites" name="site" domain="[('site','=',True)]"/>

                </xpath>
            </field>
        </record>

    </data>
</openerp>
