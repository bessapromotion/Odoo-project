<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="hr_applicant_view_form_inherit" model="ir.ui.view">
              <field name="name">hr.applicant.form.inherit</field>
              <field name="model">hr.applicant</field>
              <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
              <field name="arch" type="xml">
                    <xpath expr="//field[@name='description']" position="after">
                        <field name="is_penultimate_stage" invisible="1"/>
                    </xpath>
                    <xpath expr="//button[@name='create_employee_from_applicant']" position="attributes">
                        <attribute name="attrs">{'invisible': ['|','|',('emp_id', '!=', False),('active', '=', False),('is_penultimate_stage', '!=', True)]}</attribute>
                    </xpath>
              </field>
        </record>

    </data>
</openerp>
