<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="paperformat_hr" model="report.paperformat">
            <field name="name">HR paperformat</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">30</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">30</field>
            <field name="dpi">96</field>
        </record>

        <record id="paperformat_hr_basic" model="report.paperformat">
            <field name="name">Paperformat basic</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">10</field>
            <field name="dpi">96</field>
        </record>


        <report
                string="Attestation de travail"
                id="act_report_attestation_travail"
                model="hr.employee"
                report_type="qweb-pdf"
                menu="True"
                name="hr_base.report_attestation_travail"
                file="hr_base.report_attestation_travail"
                paperformat="paperformat_hr"
                attachment="'Attestation_travail_'+ object.num_attestation_req +'.pdf'"
                print_report_name="'Attestation de travail_'+ object.name"
        />

        <report
                string="Certificat de travail"
                id="act_report_certificat_travail"
                model="hr.employee"
                report_type="qweb-pdf"
                menu="False"
                name="hr_base.report_certificat_travail"
                file="hr_base.report_certificat_travail"
                paperformat="paperformat_hr"
                attachment="'Certificat_travail_'+ object.num_certificat_req +'.pdf'"
                print_report_name="'Certificat de travail_'+ object.name"
        />
        <report
                string="Fiche signaletique"
                id="act_report_fiche_signaletique"
                model="hr.employee"
                report_type="qweb-pdf"
                menu="True"
                name="hr_base.report_fiche_signaletique"
                file="hr_base.report_fiche_signaletique"
                paperformat="paperformat_hr"
                attachment="'Fiche_signaletique_'+ object.name +'.pdf'"
                print_report_name="'Fiche signaletique_'+ object.name"
        />
        <report
                string="Fiche de Gestion Personnel"
                id="act_report_fgp"
                model="hr.employee"
                report_type="qweb-pdf"
                menu="False"
                name="hr_base.report_fgp"
                file="hr_base.report_fgp"
                paperformat="paperformat_hr_basic"
                attachment="'Fiche_Gestion_Personnel_'+ object.num_fgp_req +'.pdf'"
                print_report_name="'Fiche_signaletique_'+ object.name"
        />
    </data>
</odoo>
