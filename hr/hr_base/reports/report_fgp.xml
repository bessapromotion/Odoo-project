<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="report_fgp">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.internal_layout">

                    <div class="page">
                        <!-- -->

                        <div style="font-size:32px; font-weight:bold; border: 3px solid #000000; width:50%; margin-left:30%; text-align:center;">
                            Fiche de Gestion Personnel
                        </div>
                        <div style="font-size:24px;">
                            <span t-field="o.contract_id.company_id"/>
                            SARL
                        </div>
                        <div style="float: left;">
                            <u>État Civil :</u>
                            <strong t-field="o.marital"/>
                        </div>
                        <div style="float: left; padding-left:35%;">
                            <u>Date de Recrutement :</u>
                            <strong t-field="o.contract_id.date_start"/>
                        </div>
                        <br></br>
                        <br></br>
                        <table style="width:100%; clear:both; border: 1px solid #000000;">
                            <tr>
                                <td>Nom /Prénom :
                                    <strong t-field="o.name"/>
                                </td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>Date et Lieu de Naissance :<strong t-field="o.birthday"/>,
                                    <strong t-field="o.place_of_birth"/>
                                </td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>Situation Familiale :
                                    <strong t-field="o.marital"/>
                                </td>
                                <td t-if="o.marital != 'single'">Nombre d’enfants :
                                    <strong t-field="o.children"/>
                                </td>
                            </tr>
                            <tr>
                                <td>Adresse :
                                    <strong t-field="o.adresse_simple"/>
                                </td>
                                <td>Tél :
                                    <strong t-field="o.phone"/>
                                </td>
                            </tr>
                            <tr t-if="o.pi_type == 'cin'">
                                <td>Carte nationale d’Identité N° :
                                    <strong t-field="o.pi_num"/>
                                </td>
                                <td>date et lieu de délivrance :<strong t-field="o.pi_date"/>,
                                    <strong t-field="o.pi_par"/>
                                </td>
                            </tr>
                            <tr>
                                <td>Email :
                                    <strong t-field="o.private_email"/>
                                </td>
                                <td></td>
                            </tr>
                            <tr t-if="o.pi_type == 'pc'">
                                <td>Carte nationale d’Identité N° :
                                    <strong t-field="o.pi_num"/>
                                </td>
                                <td>date et lieu de délivrance :<strong t-field="o.pi_date"/>,
                                    <strong t-field="o.pi_par"/>
                                </td>
                            </tr>
                            <tr>
                                <td>Niveau Scolaire / Formation :
                                    <strong t-field="o.certificate"/>
                                </td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>Groupe sanguin :
                                    <strong t-field="o.grp_sanguin"/>
                                </td>
                                <td></td>
                            </tr>
                        </table>
                        <table style="width:100%; 1px solid #000000;">
                            <tr style="text-align:center;">
                                <td style="width:35%; vertical-align: middle; border: 1px solid;">Période</td>
