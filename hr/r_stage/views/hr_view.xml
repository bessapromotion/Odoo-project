<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- interface EmployÃ© -->

        <record id="view_stage_form" model="ir.ui.view">
            <field name="name">hr.stage.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr_base.view_hr_employe_dl_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//page[@name='hr_settings']" position="after">
                        <page name="stages" string="Stages"
                              attrs="{'invisible': [('employee_type','!=', 'trainee')]}" groups="hr.group_hr_user">
                            <field name="stages_ids">
                                <tree editable="bottom">
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                    <field name="duree"/>
                                    <field name="description_stage" placeholder="Description de stage"/>
                                    <button name="action_print_att_stage" string="Imprimer" class="oe_highlight"
                                            type="object"
                                            icon="fa-print"/>
                                </tree>
                            </field>
                        </page>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>
