<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- piece -->
        <record id="view_piece_tree" model="ir.ui.view">
            <field name="name">hr.dossier.piece.form</field>
            <field name="model">hr.dossier.piece</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                    <field name="validite"/>
                </tree>
            </field>
        </record>

        <record id="action_piece_tree_view" model="ir.actions.act_window">
            <field name="name">Pieces dossier</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.dossier.piece</field>
            <!--<field name="context">{'search_default_demande_id': [active_id], 'default_demande_id': active_id}</field>-->
            <!--<field name="domain">[('picking_type_id','=',7)]</field>-->
            <field name="view_mode">tree</field>
            <!--<field name="search_view_id" ref="demande_appro_filter"/>-->
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer une nouvelle pièce.
                </p>
                <p>
                </p>
            </field>
        </record>
        <!-- modele dossier -->
        <record id="view_dossier_model_tree" model="ir.ui.view">
            <field name="name">dossier.model.tree</field>
            <field name="model">hr.dossier.model</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="dossier_model_form_view">
            <field name="name">hr.dossier.model.form</field>
            <field name="model">hr.dossier.model</field>
            <field name="arch" type="xml">
                <form string="Modele de dossier">
                    <sheet>
                        <h1>
                            <field name="name" placeholder="Nom du modeme..."/>
                        </h1>
                        <group>
                            <group>
                                <field name="file"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Pieces du dossier">
                                <field name="piece_ids">
                                    <tree editable="top">
                                        <field name="name"/>
                                        <field name="piece_id"/>
                                        <field name="nbr_copie"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_dossier_model_tree_view">
            <field name="name">Modeles de dossier</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.dossier.model</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_dossier_model_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer un nouveau modele de dossier.
                </p>
                <p>

                </p>
                <p>

                </p>
            </field>
        </record>

        <menuitem name="Dossiers employés" id="menu_dossier_root" parent="hr.menu_human_resources_configuration"
                  sequence="90"/>

        <menuitem name="Pieces" action="action_piece_tree_view" id="menu_piece"
                  parent="menu_dossier_root" sequence="10"/>

        <menuitem name="Modele de dossier" action="action_dossier_model_tree_view" id="menu_model_dossier1"
                  parent="menu_dossier_root" sequence="20"/>

    </data>
</openerp>
