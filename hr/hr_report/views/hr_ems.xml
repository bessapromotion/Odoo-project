<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record model="ir.ui.view" id="hr_ems_filter">
        <field name="name">hr.ems.filter</field>
        <field name="model">hr.ems</field>
        <field name="arch" type="xml">
            <search>
                <field name="employe_id"/>
                <field name="gender"/>
                <field name="type"/>
                <field name="date_entree"/>
                <field name="ss_num"/>
                <field name="compte_num"/>
                <field name="date_sortie"/>
                <field name="company_id"/>
                <filter name="type_frt" string="Type FRT" domain="[('type', '=', 'frt')]"/>
                <filter name="type_contract" string="Type Contrat" domain="[('type', '=', 'contract')]"/>


                <group expand="0" string="Grouper par...">
                    <filter name="employee" string="Employé" domain="[]" context="{'group_by':'employe_id'}"
                            help="Employé"/>
                    <filter name="company" string="Société" domain="[]" context="{'group_by':'company_id'}"
                            help="Société"/>
                    <filter name="type" string="Type de Mouvement" domain="[]" context="{'group_by':'type'}"
                            help="Type"/>
                    <filter name="gender" string="Gender" domain="[]" context="{'group_by':'gender'}"
                            help="Gender"/>
                </group>
            </search>
        </field>
    </record>
    <record model="ir.ui.view" id="hr_ems_tree_view">
        <field name="name">hr.ems.tree</field>
        <field name="model">hr.ems</field>
        <field name="arch" type="xml">
            <tree editable="top" create="false" decoration-success="type == 'contract'"
                  decoration-danger="type == 'frt'">
                <field name="company_id"/>
                <field name="num_cnas"/>
                <field name="employe_id"/>
                <field name="job_id"/>
                <field name="birthday"/>
                <field name="place_of_birth"/>
                <field name="adresse_simple"/>
                <field name="gender"/>
                <field name="marital"/>
                <field name="type"/>
                <field name="date_entree"/>
                <field name="ss_num"/>
                <field name="compte_num"/>
                <field name="date_sortie"/>
            </tree>
        </field>
    </record>

</odoo>