<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="hr_employee_historique_tree_view">
        <field name="name">hr.employee.historique.tree</field>
        <field name="model">hr.employee.historique</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="name"/>
                <field name="employe_id"/>
                <field name="document"/>
                <field name="numero"/>
                <field name="date_doc"/>
                <field name="date_prise_effet"/>
                <field name="user_id"/>
                <field name="company_id"/>
                <field name="num_embauche" optional="hide"/>
                <field name="note"/>
                <button name="open_doc" string="Ouvrir le document" type="object" icon="fa-file-text-o"/>
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_hr_employee_historique_tree_view">
        <field name="name">Historique</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.employee.historique</field>
        <field name="context">{'search_default_grp_user_id': 1}</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="hr_employee_historique_tree_view"/>
    </record>

    <menuitem name="Historique" action="action_hr_employee_historique_tree_view" id="menu_historique"
              parent="hr.hr_menu_hr_reports"/>
</odoo>