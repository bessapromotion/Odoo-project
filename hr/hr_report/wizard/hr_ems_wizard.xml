<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="hr_ems_wizard_form_view" model="ir.ui.view">
            <field name="name">hr.ems.wizard.form</field>
            <field name="model">hr.ems.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="EMS">
                    <group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                    </group>
                    <footer>
                        <button class="oe_highlight" string="Appliquer" name="action_appliquer" type="object"/>
                        or
                        <button class="oe_link" string="Annuler" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_hr_ems_wizard_tree_view">
            <field name="name">Rapport EMS</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.ems.wizard</field>
            <field name="view_id" ref="hr_ems_wizard_form_view"/>
            <field name="target">new</field>
        </record>
        <menuitem name="Rapport EMS" action="action_hr_ems_wizard_tree_view" id="menu_ems"
                  parent="hr.hr_menu_hr_reports"/>
    </data>
</odoo>