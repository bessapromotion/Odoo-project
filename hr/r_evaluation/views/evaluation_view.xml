<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- evaluation -->
        <record model="ir.ui.view" id="evaluation_tree_view">
            <field name="name">hr.evaluation.tree</field>
            <field name="model">hr.evaluation</field>
            <field name="arch" type="xml">
                <tree decoration-info="state == 'draft'" decoration-muted="state == 'cancel'">
                    <field name="name"/>
                    <field name="employe_id"/>
                    <field name="contract_id"/>
                    <field name="s_date"/>
                    <field name="superviseur_id"/>
                    <field name="decision"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="evaluation_filter" model="ir.ui.view">
            <field name="name">hr.evaluation.filter</field>
            <field name="model">hr.evaluation</field>
            <field name="arch" type="xml">
                <search string="Evaluation">
                    <field name="employe_id"/>
                    <field name="name"/>

                    <filter name="draft" string="Nouveaux" domain="[('state','=','draft')]"/>
                    <filter name="done" string="Terminés" domain="[('state', '=', 'done')]"/>
                    <filter name="cancel" string="Annulés" domain="[('state', '=', 'cancel')]"/>
                    <separator/>
                    <filter name="Normale" string="Normale" domain="[('type', '=', 'normale')]"/>
                    <filter name="PE" string="Période d'essai" domain="[('type', '=', 'essai')]"/>


                    <group expand="0" string="Grouper par...">
                        <filter name="employee" string="Employé" domain="[]" context="{'group_by':'employe_id'}"
                                help="Employé"/>
                        <!--                        <filter name="site" string="Site" domain="[]" context="{'group_by':'site_id'}" help="Affectation"/>-->
                    </group>
                </search>
            </field>
        </record>


        <record model="ir.ui.view" id="evaluation_form_view">
            <field name="name">hr.evaluation.form</field>
            <field name="model">hr.evaluation</field>
            <field name="arch" type="xml">
                <form string="Sanction">
                    <header>
                        <button name="action_evaluate" string="Lancer l'évaluation" states="draft" class="oe_highlight"
                                type="object"
                                confirm="Voulez-vous lancer l'évaluation ?"/>
                        <button name="action_print_vide" string="Imprimer document vierge" states="draft"
                                type="object"/>
                        <button name="action_validate" string="Valider l'évaluation pour prise de décision"
                                states="evaluation" class="oe_highlight" type="object"
                                confirm="Voulez-vous valider cette évaluation ?"/>
                        <button name="action_validate_decision" string="Valider la décision" states="valid"
                                class="oe_highlight" type="object"
                                confirm="Voulez-vous valider cette décision ?"/>
                        <button name="action_print" states="valid,done" string="Imprimer" class="oe_highlight"
                                type="object"/>

                        <!--                        <button name="create_frt" string="Créer une FRT" attrs="{'invisible' : ['|',('state', '!=', 'done'), ('decision','!=','non')]}" class="oe_highlight" type="object"/>-->
                        <!--                        <button name="create_avenant" string="Créer un avenant"  attrs="{'invisible' : ['|',('state', '!=', 'done'), ('decision','!=','oui')]}" class="oe_highlight" type="object"/>-->

                        <button name="action_cancel" string="Annuler" states="draft,evaluation" type="object"
                                confirm="Voulez-vous annuler cette évaluation ?"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,evaluation,valid,done"/>
                    </header>
                    <sheet>
                        <h1>
                            <label for="name" string="Evaluation individuelle # "/>
                            <field name="name" class="oe_inline"/>
                        </h1>
                        <field name="image" widget='image' class="oe_avatar"/>
                        <div class="oe_title">
                            <label for="employe_id" class="oe_edit_only"/>
                            <h1>
                                <field name="employe_id" placeholder="Employé  "
                                       options='{"no_open": True, "no_create": True}'/>
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="company_id" options='{"no_open": True, "no_create": True}'/>
                                <field name="user_id" options='{"no_open": True, "no_create": True}'/>
                                <field name="s_date"/>
                                <field name="type"/>
                                <separator string="Periode"/>
                                <separator/>
                                <div class="o_row">
                                    <field name="date_start_pe" widget="daterange" nolabel="1" class="oe_inline"
                                           options="{'related_end_date': 'date_end_pe'}"/>
                                    <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                                    <field name="date_end_pe" widget="daterange" nolabel="1" class="oe_inline"
                                           options="{'related_start_date': 'date_start_pe'}"/>
                                </div>
                            </group>
                            <group>
                                <label for="contract_id" string="Contrat"/>
                                <div class="o_row">
                                    <field name="contract_id" options='{"no_create": True}'
                                           domain="[('employee_id', '=', employe_id), ('state', 'in', ('open', 'close'))]"/>

                                </div>
                                <div>
                                    <field name="date_start" widget="daterange" nolabel="1" class="oe_inline"
                                           options="{'related_end_date': 'date_end'}"/>
                                    <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                                    <field name="date_end" widget="daterange" nolabel="1" class="oe_inline"
                                           options="{'related_start_date': 'date_start'}"/>

                                </div>
                                <separator attrs="{'invisible': [('warning_contract_state', '=', '')]}"/>
                                <field name="warning_contract_state" style="color:Red;" nolabel="1"
                                       attrs="{'invisible': [('warning_contract_state', '=', '')]}"/>
                                <field name="contract_type_id"/>
                                <field name="matricule" readonly="1"/>
                                <field name="job_id" readonly="1"/>
                            </group>
                            <group string="Appréciation" states="valid,done">
                                <field name="superviseur_id" options='{"no_create": True}'/>
                                <field name="decision_id" options='{"no_create": True}'/>
                                <field name="decision" invisible="1"/>
                                <field name="new_date_frt" attrs="{'invisible' : [('decision','!=','FRT')]}"/>
                            </group>
                            <group string="Visa" states="valid,done">
                                <field name="responsable_id"/>
                            </group>
                            <group string="Propositions Du Responsable Direct" states="valid,done">
                                <field name="commentaire_sup"/>
                                <field name="period_ess_juge" attrs="{'invisible' : [('type','!=','essai')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Evalutation" states="evaluation,valid,done">
                                <field name="evaluation_line_ids">
                                    <tree editable="bottom">
                                        <field name="criter_id"/>
                                        <field name="description"/>
                                        <field name="type" widget="many2many_tags"/>
                                        <field name="evaluation_initial"/>
                                        <field name="evaluation_final"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Informations nouvel avenant"
                                  attrs="{'invisible' : ['|',('state', 'not in', ('valid', 'done')), ('decision','!=','AVENANT')]}">
                                <group>
                                    <group>
                                        <field name="new_duree"/>
                                        <field name="new_date_debut"/>
                                        <field name="new_date_fin"/>
                                        <field name="new_job_id"/>
                                        <field name="new_salaire"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_evaluation_tree_view">
            <field name="name">Evaluation individuelle</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.evaluation</field>
            <field name="search_view_id" ref="evaluation_filter"/>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="evaluation_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer une nouvelle évaluation individuelle.
                </p>
                <p>

                </p>
                <p>

                </p>
            </field>
        </record>

        <!-- Top menu item -->


        <menuitem name="Gestion des évaluations" id="menu_evaluation_root"
                  parent="hr.menu_hr_root" sequence="40"/>

        <menuitem name="Evaluations" action="action_evaluation_tree_view" id="menu_evaluation"
                  parent="menu_evaluation_root" sequence="10"/>

    </data>
</openerp>
