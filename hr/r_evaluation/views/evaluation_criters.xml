<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="evaluation_decision_tree_view">
        <field name="name">hr.evaluation.decision.tree</field>
        <field name="model">hr.evaluation.decision</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
                <field name="decision"/>
                <field name="description"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="evaluation_criters_tree_view">
        <field name="name">hr.evaluation.criters.tree</field>
        <field name="model">hr.evaluation.criters</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
                <field name="description"/>
                <field name="type" widget="many2many_tags" options="{'no_create': True}"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="evaluation_criters_type_tree_view">
        <field name="name">hr.evaluation.criters.type.tree</field>
        <field name="model">hr.evaluation.criters.type</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_evaluation_criters_tree_view">
        <field name="name">Criters d'evaluation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.evaluation.criters</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="evaluation_criters_tree_view"/>
    </record>
    <record model="ir.actions.act_window" id="action_evaluation_criters_type_tree_view">
        <field name="name">Criters d'evaluation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.evaluation.criters.type</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="evaluation_criters_type_tree_view"/>
    </record>
    <record model="ir.actions.act_window" id="action_evaluation_decision_tree_view">
        <field name="name">Décision d'evaluation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.evaluation.decision</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="evaluation_decision_tree_view"/>
    </record>
    <menuitem name="Evaluations"
              id="menu_evaluation_configuration"
              parent="hr.menu_human_resources_configuration"/>
    <menuitem name="Criters d'Evaluations"
              action="action_evaluation_criters_tree_view"
              id="menu_evaluation_criters"
              parent="r_evaluation.menu_evaluation_configuration"
              sequence="10"/>
    <menuitem name="Type de criters d'Evaluations"
              action="action_evaluation_criters_type_tree_view"
              id="menu_evaluation_criters_type"
              parent="r_evaluation.menu_evaluation_configuration"
              sequence="12"/>
    <menuitem name="Décision d'Evaluations"
              action="action_evaluation_decision_tree_view"
              id="menu_evaluation_criters_type"
              parent="r_evaluation.menu_evaluation_configuration"
              sequence="14"/>
</odoo>