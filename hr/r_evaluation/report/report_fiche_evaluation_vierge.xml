<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="report_fiche_evaluation_vierge">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.internal_layout">

                    <div class="page-style">


                        <div class="titre-style" style="margin-top:30px">Fiche d'Evaluation Individuelle</div>

                        <table width="800"
                               style="margin-left:10px; margin-top:30px; border-collapse: separate;  border-spacing: 0px 0px;">
                            <tr>
                                <td style="width:20%; border :none; text-align:right;">Nom et Prénom :</td>
                                <td style="width:50%;">
                                    <span t-field="o.employe_id" style="font-weight: bold;"/>
                                </td>
                                <td style="width:15%;">Matricule :</td>
                                <td style="width:15%;">
                                    <span t-field="o.matricule" style="font-weight: bold;"/>
                                </td>
                            </tr>
                        </table>
                        <table width="800"
                               style="margin-left:10px; border-collapse: separate;  border-spacing: 0px 0px;">
                            <tr>
                                <td style="width:15%; text-align:right;">Fonction :</td>
                                <td style="width:45%;">
                                    <span t-field="o.job_id" style="font-weight: bold;"/>
                                </td>
                                <td style="width:20%;">Cycle de Travail :</td>
                                <td style="width:20%;">
                                    <span t-field="o.contract_type_id.code" style="font-weight: bold;"/>
                                </td>
                            </tr>
                        </table>
                        <table width="800"
                               style="margin-left:10px; border-collapse: separate;  border-spacing: 0px 0px;">
                            <tr>
                                <td style="width:20%; text-align:right;">Affectation :</td>
                                <!--                                <td style="width:47%;"><span t-field="o.site_id" style="font-weight: bold;"/></td>-->
                                <td style="width:15%; text-align:right;">Période du :</td>
                                <td style="width:7%;">
                                    <span t-field="o.date_start_pe" style="font-weight: bold;"/>
                                </td>
                                <td style="width:7%; text-align:right;">Au :</td>
                                <td style="width:7%;">
                                    <span t-field="o.date_end_pe" style="font-weight: bold;"/>
                                </td>
                            </tr>
                        </table>

                        <div t-if="o.type=='essai'">
                            <div class="titre-style" style="margin-top:20px">Evaluation Période d'Essai</div>
                        </div>
                        <div t-if="o.type=='normale'">
                            <div class="titre-style" style="margin-top:20px">Evaluation Normale</div>
                        </div>

                        <table width="800"
                               style="margin-left:60px; margin-top:20px; border-collapse: separate;  border-spacing: 0px 0px;">
                            <tr>
                                <td style="width:15%; font-weight:bold;">
                                    <u>Critères d'Evaluation</u>
                                </td>
                                <td style="width:10%; font-weight:bold;">
                                    <u>Résultat</u>
                                </td>
                            </tr>
                            <tr>
                                <td style="width:15%;">Application au Travail:</td>
                                <td style="width:10%;">/20</td>
                            </tr>
                            <tr>
                                <td style="width:15%;">Comportement:</td>
                                <td style="width:10%;">/20</td>
                            </tr>
                            <tr>
                                <td style="width:15%;">Esprit d'Initiative:</td>
                                <td style="width:10%;">/20</td>
                            </tr>
                            <tr>
                                <td style="width:15%;">Ordre-Méthode-Précision:</td>
                                <td style="width:10%;">/20</td>
                            </tr>
                            <tr>
                                <td style="width:15%;">Discipline:</td>
                                <td style="width:10%;">/20</td>
                            </tr>
                            <tr>
                                <td style="width:15%;">Rendement (Productivité):</td>
                                <td style="width:10%;">/20</td>
                            </tr>
                            <tr>
                                <td style="width:15%; font-weight:bold;  text-align:right;">Moyenne totale:</td>
                                <td style="width:10%; font-weight:bold;">/20</td>
                            </tr>
                        </table>

                        <p style="padding-top:10px; margin-left:60px; font-weight: bold; font-size: 18px;">
                            <u>Appréciation du Superviseur de Chantier :</u>
                        </p>


                        <table width="800"
                               style="margin-left:60px; margin-top:0px; border-collapse: separate;  border-spacing: 0px 0px;">
                            <tr>
                                <td style="width:290px;">1. Contrat à ne pas renouveler →</td>
                                <td>Fin de Relation de Travail (FRT)</td>
                            </tr>
                            <tr>
                                <td style="text-align:right;">Date de Mise en FRT :</td>
                                <td style=""></td>
                            </tr>
                        </table>


                        <table width="800"
                               style="margin-left:60px; margin-top:0px; border-collapse: separate;  border-spacing: 0px 0px;">
                            <tr>
                                <td style="width:250px;">2. Contrat à enouveler →</td>
                                <td>Prière de procéder au renouvellement de la durée du contrat du travailleur</td>
                            </tr>
                        </table>
                        <table width="800"
                               style="margin-top:0px; margin-left:20px; border-collapse: separate;  border-spacing: 0px 0px;">
                            <tr>
                                <td style="width:50px; text-align:right;">Durée :</td>
                                <td style="width:70px;"></td>
                                <td style="width:50px; text-align:right;">Du :</td>
                                <td style="width:70px;"></td>
                                <td style="width:50px; text-align:right;">Au :</td>
                                <td style="width:70px;"></td>
                            </tr>
                        </table>
                        <div width="800" style="margin-left:60px; margin-top:0px; ">
                            <div style="margin-top:0px;">Prière de promouvoir le Travailleur :</div>
                            <div style="">PDe la fonction de :</div>
                            <div style="">A la fonction de :</div>
                            <div style="">Salaire :</div>
                        </div>


                        <!-- SIGNATURE -->
                        <p style="padding-top:10px; margin-left:580px; font-weight: bold; font-size: 18px;">
                            <u>Visa du responsable hiérarchique</u>
                        </p>

                        <div style="text-align:center; padding-top:110px;">NB: L'évaluateur s'engage à respecter la
                            durée de la prolongation qu'il aura éstimée.
                        </div>

                    </div>


                </t>
            </t>
        </t>
    </template>

</odoo>
