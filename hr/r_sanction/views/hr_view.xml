<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="action_sanction_button" model="ir.actions.act_window">
            <field name="name">Decisions disciplinaires</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.sanction</field>
            <field name="context">{'search_default_employe_id': [active_id], 'default_employe_id': active_id}</field>
            <!--<field name="domain"></field>-->
            <field name="view_mode">tree,form</field>
            <!--            <field name="search_view_id" ref="mission_filter"/>-->
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer une nouvelle décision disciplinaire.
                </p>
                <p>
                </p>
            </field>
        </record>

        <record id="view_hr_employe_dl_form_sanction" model="ir.ui.view">
            <field name="name">hr.employee.dl.form.inherit.sanction</field>
            <field name="model">hr.employee</field>
            <field name="priority">1</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//div[@name='button_box']" position="inside">
                        <button class="oe_stat_button" type="action" name="%(action_sanction_button)d" icon="fa-legal">
                            <field string="Dossier disciplinaire" name="sanctions_count" widget="statinfo"/>
                        </button>
                    </xpath>
                </data>


            </field>
        </record>
    </data>
</openerp>