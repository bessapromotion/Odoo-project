<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Modele Form -->
        <record model="ir.ui.view" id="report_reportmodele_form_view">
            <field name="name">hr.report.modele</field>
            <field name="model">hr.report.modele</field>
            <field name="arch" type="xml">
                <form string="Modèle">
                    <sheet>
                        <strong>Nom</strong>
                        <h1>
                            <field name="name" class="oe_inline" placeholder="Nom"/>
                        </h1>
                        <group>
                            <group>
                                <field name="type_id"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Articles">
                                <field name="article_lines">
                                    <tree>
                                        <field name="sequence" widget="handle"/>
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="partie"/>
                                        <field name="contenu"/>
                                    </tree>
                                    <form>
                                        <strong>Nom</strong>
                                        <h1>
                                            <field name="name" class="oe_inline" placeholder="Nom"/>
                                        </h1>
                                        <group>
                                            <group>
                                                <field name="code"/>
                                                <field name="partie"/>
                                                <field name="sequence"/>
                                                <field name="company_id" groups="base.group_multi_company"/>
                                            </group>
                                        </group>
                                        <div>
                                            <separator string="Contenu"/>
                                            <div class="oe_edit_only">
                                                <p>Vous pouvez utiliser les <i>mots-clés</i> suivants dans le contenu de
                                                    l'article:
                                                    <br/>
                                                    <br/>
                                                    <code style="color: inherit;">
                                                        <b>Sanction :</b>
                                                        <br/>
                                                        [[civilité]] [[employé]]
                                                        [[fonction]] [[type_contrat]] [[date_debut_contrat]]
                                                        [[date_fin_contrat]] [[société]] [[date_effet]]
                                                        [[numero_contrat]] [[date_faute]] [[date_questionnaire]]
                                                        [[sanction]] [[faute_degre]] [[motif]]
                                                    </code>
                                                    <br/>
                                                    <code style="color: inherit;">
                                                        Affectation :
                                                        <br/>[[civilité]] [[employé]]
                                                        [[poste_travail]] [[type_contrat]] [[date_debut_contrat]]
                                                        [[date_fin_contrat]] [[société]] [[date_effet]]
                                                        [[nouvelle_affectation]]
                                                    </code>
                                                    <br/>
                                                    <code style="color: inherit;">
                                                        Promotion :
                                                        <br/>
                                                        [[civilité]] [[employé]]
                                                        [[poste_travail]] [[date]] [[date_debut_contrat]]
                                                        [[date_fin_contrat]] [[société]]
                                                        [[nouvelle_fonction]]
                                                    </code>
                                                    <br/>
                                                    <code style="color: inherit;">
                                                        FRT :
                                                        <br/>
                                                        [[civilité]] [[employé]]
                                                        [[poste_travail]] [[date]] [[date_debut_contrat]]
                                                        [[date_fin_contrat]] [[société]]
                                                        [[type_contrat]] [[date_effet]] [[motif]]
                                                        [[date_de_la_première_mise_en_demeure]]
                                                        [[référence_de_la_première_mise_en_demeure]]
                                                        [[date_de_la_deuxième_mise_en_demeure]]
                                                        [[référence_de_la_première_mise_en_demeure ]]
                                                    </code>
                                                    <br/>
                                                    <code style="color: inherit;">
                                                        AVENANT:
                                                        <br/>
                                                        [[civilité]] [[employé]]
                                                        [[poste_travail]] [[affectation]] [[date_debut_contrat]]
                                                        [[date_fin_contrat]] [[société]]
                                                        [[type_contrat]] [[salaire_base]]
                                                    </code>
                                                </p>
                                            </div>
                                            <field name="contenu" nolabel="1"/>
                                        </div>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Modele Tree -->
        <record model="ir.ui.view" id="report_modele_tree_view">
            <field name="name">report.modele.tree</field>
            <field name="model">hr.report.modele</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="type_id"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </tree>
            </field>
        </record>

        <!-- Modele Filter -->
        <record id="report_modele_filter" model="ir.ui.view">
            <field name="name">report.modele.filter</field>
            <field name="model">hr.report.modele</field>
            <field name="arch" type="xml">
                <search string="Modele">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <!-- Modele Tree View Action -->
        <record model="ir.actions.act_window" id="action_report_modele_tree_view">
            <field name="name">Modèles de rapport RH</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.report.modele</field>
            <field name="search_view_id" ref="report_modele_filter"/>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="report_modele_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer un nouveau modèle de rapport RH.
                </p>
                <p>

                </p>
                <p>

                </p>
            </field>
        </record>

        <!-- Modlele Menu -->
        <menuitem name="Modèle de rapport" action="action_report_modele_tree_view" id="menu_modele_report"
                  parent="hr.menu_human_resources_configuration" sequence="90"/>

    </data>
</openerp>
