<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- PV Installation -->
        <record model="ir.ui.view" id="installation_tree_view">
            <field name="name">installation.tree</field>
            <field name="model">hr.installation</field>
            <field name="arch" type="xml">
                <tree decoration-info="state == 'draft'" decoration-muted="state == 'cancel'">
                    <field name="name"/>
                    <field name="employe_id"/>
                    <field name="contract_id"/>
                    <field name="job_id"/>
                    <field name="department_id"/>
                    <field name="s_date"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="state" decoration-success="state == 'done'"
                           decoration-muted="state == 'cancel'"
                           decoration-warning="state == 'valid'"
                           decoration-info="state == 'draft'" widget="badge"/>

                </tree>
            </field>
        </record>

        <record id="installation_filter" model="ir.ui.view">
            <field name="name">hr.installation.filter</field>
            <field name="model">hr.installation</field>
            <field name="arch" type="xml">
                <search string="PV Installation">
                    <field name="employe_id"/>
                    <field name="department_id"/>
                    <field name="name"/>

                    <filter name="draft" string="Nouveaux" domain="[('state','=','draft')]"/>
                    <filter name="done" string="Terminés" domain="[('state', '=', 'done')]"/>
                    <filter name="cancel" string="Annulés" domain="[('state', '=', 'cancel')]"/>

                    <group expand="0" string="Grouper par...">
                        <filter name="employee" string="Employé" domain="[]" context="{'group_by':'employe_id'}"
                                help="Employé"/>
                        <filter string="Departement" name="department_id" domain="[]"
                                context="{'group_by':'department_id'}" help="Department"/>
                    </group>
                </search>
            </field>
        </record>


        <record model="ir.ui.view" id="installation_form_view">
            <field name="name">hr.installation.form</field>
            <field name="model">hr.installation</field>
            <field name="arch" type="xml">
                <form string="PV Installation">
                    <header>
                        <button name="action_validate" string="Valider" states="draft" class="oe_highlight"
                                type="object"
                                confirm="Voulez-vous valider le PV d'installation ?"/>
                        <button name="action_print" string="Imprimer" states="valid,done" class="oe_highlight"
                                type="object"/>
                        <button name="action_cancel" string="Annuler" states="draft,valid" type="object"
                                confirm="Voulez-vous annuler ce PV d'installation ?"/>

                        <field name="state" clickable="True" widget="statusbar" statusbar_visible="draft,valid,done"/>
                    </header>
                    <sheet>
                        <h1>
                            <label for="name" string="PV d'installation # "/>
                            <field name="name" class="oe_inline"/>
                        </h1>
                        <field name="image" widget='image' class="oe_avatar"/>
                        <div class="oe_title">
                            <label for="employe_id" class="oe_edit_only"/>
                            <h1>
                                <field name="employe_id" placeholder="Employé  "
                                       options='{"no_open": True, "no_create": True}'/>
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="user_id" options='{"no_open": True, "no_create": True}'/>
                                <field name="s_date"/>
                                <field name="installation_date"/>
                            </group>
                            <group>

                                <field name="matricule" readonly="1"/>
                                <field name="contract_id"
                                       domain="[('employee_id', '=', employe_id), ('state', 'in', ('open', 'close'))]"
                                       options='{"no_create": True}'/>
                                <separator attrs="{'invisible': [('warning_contract_state', '=', '')]}"/>
                                <field name="warning_contract_state" style="color:Red;" nolabel="1"
                                       attrs="{'invisible': [('warning_contract_state', '=', '')]}"/>
                                <field name="job_id"/>
                                <field name="department_id"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_installation_tree_view">
            <field name="name">PV Installation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.installation</field>
            <field name="search_view_id" ref="installation_filter"/>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="installation_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer un nouveau PV d'installation.
                </p>
                <p>

                </p>
                <p>

                </p>
            </field>
        </record>

        <!-- Top menu item -->

        <menuitem name="PV d'installation" action="action_installation_tree_view" id="menu_pv_installation"
                  parent="hr_base.menu_carriere" sequence="20"/>

    </data>
</openerp>
