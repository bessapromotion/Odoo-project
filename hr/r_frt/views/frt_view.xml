<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- fin relation de travail -->
        <record model="ir.ui.view" id="frt_tree_view">
            <field name="name">frt.tree</field>
            <field name="model">hr.frt</field>
            <field name="arch" type="xml">
                <tree decoration-info="state == 'draft'" decoration-muted="state == 'cancel'">
                    <field name="name"/>
                    <field name="employe_id"/>
                    <field name="contract_id"/>
                    <field name="s_date"/>
                    <field name="reference"/>
                    <field name="motif_id"/>
                    <field name="user_id"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="state" decoration-success="state == 'done'"
                           decoration-muted="state == 'cancel'"
                           decoration-warning="state == 'valid'"
                           decoration-info="state == 'draft'" widget="badge"/>
                </tree>
            </field>
        </record>

        <record id="frt_filter" model="ir.ui.view">
            <field name="name">hr.frt.filter</field>
            <field name="model">hr.frt</field>
            <field name="arch" type="xml">
                <search string="Fin relation de travail">
                    <field name="employe_id"/>
                    <field name="name"/>
                    <field name="contract_id"/>
                    <field name="motif_id"/>

                    <filter name="draft" string="Nouveaux" domain="[('state','=','draft')]"/>
                    <filter name="valid" string="Validés" domain="[('state','=','valid')]"/>
                    <filter name="done" string="Entrés en application" domain="[('state', '=', 'done')]"/>
                    <filter name="cancel" string="Annulés" domain="[('state', '=', 'cancel')]"/>

                    <group expand="0" string="Grouper par...">
                        <filter name="employee" string="Employé" domain="[]" context="{'group_by':'employe_id'}"
                                help="Employé"/>
                        <filter string="Motif" name="motif" domain="[]" context="{'group_by':'motif_id'}"
                                help="Motif de frt"/>
                        <filter string="Société" name="comapny" domain="[]" context="{'group_by':'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="frt_form_view">
            <field name="name">hr.frt.form</field>
            <field name="model">hr.frt</field>
            <field name="arch" type="xml">
                <form string="Arret relation de travail">
                    <header>
                        <button name="action_validate" string="Valider" states="draft" class="oe_highlight"
                                type="object"
                                confirm="Voulez-vous valider cette décision ?"/>
                        <button name="action_prise_effet" string="Entrer en application" states="valid"
                                class="oe_highlight" type="object"
                                confirm="Voulez-vous faire rentrer en vigueur cette décision ?"/>
                        <button name="action_print" states="valid,done" string="Imprimer" class="oe_highlight"
                                type="object"/>
                        <button name="action_cancel" string="Annuler" states="draft,valid" type="object"
                                confirm="Voulez-vous annuler cette décision ?"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,valid,done"/>
                    </header>
                    <sheet>
                        <h1>
                            <label for="name" string="Décision FRT # "/>
                            <field name="name" class="oe_inline"/>
                        </h1>
                        <field name="image" widget='image' class="oe_avatar"/>
                        <div class="oe_title">
                            <label for="employe_id" class="oe_edit_only"/>
                            <h1>
                                <field name="employe_id" placeholder="Employé  "
                                       options='{"no_open": True, "no_create": True}'/>
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="s_date"/>
                                <field name="user_id" options='{"no_open": True, "no_create": True}'/>
                                <field name="contract_id" options='{"no_open": True, "no_create": True}'
                                       domain="[('employee_id', '=', employe_id), ('state', 'in', ('open', 'close'))]"/>
                                <separator attrs="{'invisible': [('warning_contract_state', '=', '')]}"/>
                                <field name="warning_contract_state" style="color:Red;" nolabel="1"
                                       attrs="{'invisible': [('warning_contract_state', '=', '')]}"/>
                                <label for="date_start" string="Date"/>
                                <div class="o_row">
                                    <field name="date_start" widget="daterange" nolabel="1" class="oe_inline"
                                           options="{'related_end_date': 'date_end'}"/>
                                    <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                                    <field name="date_end" widget="daterange" nolabel="1" class="oe_inline"
                                           options="{'related_start_date': 'date_start'}"/>
                                </div>
                            </group>
                            <group>
                                <field name="matricule"/>
                                <field name="job_id"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                            <group>
                                <field name="motif_id" options='{"no_create": True}'/>
                                <field name="code_motif" invisible="1"/>
                                <field name="date_effet"/>
                            </group>
                            <group attrs="{'invisible' : [('code_motif', '!=', 'FDC')]}">
                                <field name="type_fdc"/>
                                <field name="preavis_id" domain="[('employe_id', '=', employe_id)]"
                                       options='{"no_open": True, "no_create": True}'
                                       attrs="{'invisible' : [('type_fdc', '!=', 'preavis')]}"
                                />
                                <field name="dem_renouv" attrs="{'invisible' : [('type_fdc', '!=', 'nonrenouv')]}"/>
                            </group>
                            <group attrs="{'invisible' : [('code_motif', '!=', 'ADP')]}">
                                <field name="med_1_id"
                                       domain="[('employe_id', '=', employe_id), ('numero', '=', '1'), ('state', '=', 'done')]"
                                       options='{"no_open": True, "no_create": True}'/>
                                <field name="med_2_id"
                                       domain="[('employe_id', '=', employe_id), ('numero', '=', '2'), ('state', '=', 'done')]"
                                       options='{"no_open": True, "no_create": True}'/>
                                <field name="date_debut_abs"/>
                            </group>
                            <group attrs="{'invisible' : [('code_motif', '!=', 'DMS')]}">
                                <field name="demission_id" domain="[('employe_id', '=', employe_id)]"/>
                                <field name="date_demission"/>
                                <field name="date_reception"/>

                            </group>
                            <group attrs="{'invisible' : [('code_motif', '!=', 'ENC')]}">
                                <field name="evaluation_id" domain="[('employe_id', '=', employe_id)]"
                                       options='{"no_open": True}'/>
                            </group>
                        </group>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" modifiers="{}"/>
                        <field name="message_ids" widget="mail_thread" modifiers="{}"/>
                    </div>
                </form>
            </field>
        </record>

