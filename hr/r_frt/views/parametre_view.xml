<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--Type-->
        <record model="ir.ui.view" id="frt_motif_tree_view">
            <field name="name">hr.frt.motif.tree</field>
            <field name="model">hr.frt.motif</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="cntrl_date"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="frt_motif_form_view">
            <field name="name">hr.frt.motif.form</field>
            <field name="model">hr.frt.motif</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <group>
                                <field name="code"/>
                            </group>
                            <group>
                                <field name="cntrl_date"/>
                            </group>
                            <field name="description"/>
                        </group>
                    </sheet>


                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_frt_motif_tree_view">
            <field name="name">Motifs de fin de relation de travail</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.frt.motif</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="frt_motif_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Cr√©er un nouveau motif de fin de relation de travail.
                </p>
                <p>

                </p>
                <p>

                </p>
            </field>
        </record>


    </data>
</odoo>
