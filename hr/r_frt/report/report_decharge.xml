<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="report_decharge">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.internal_layout">
                    <div class="page" style="font-size:25px;">
                        <h1>
                            <p style="text-align:center;margin-top:30%;font-size:50px;">
                                <b>DECHARGE</b>
                            </p>
                        </h1>

                        <div style="margin-top:30%;">
                            <p>Je soussigné (e) M. Mme
                                <b>
                                    <span t-field="o.decharge_id.employe_id"/>
                                </b>
                            </p>
                            <p>Ayant pour fonction
                                <b>
                                    <span t-field="o.decharge_id.employe_id.job_id"/>
                                </b>
                                , au sein de
                                <b>
                                    <span t-field="o.decharge_id.company_id"/>
                                </b>
                                , déclare avoir reçu
                                ce jour le :
                                <b>
                                    <span t-field="o.recu_le"/>
                                </b>
                                :
                                <span t-field="o.description"/>
                            </p>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>