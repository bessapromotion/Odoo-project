<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_recruitment.action_hr_job" model="ir.actions.act_window">
            <field name="view_mode">kanban,graph,tree,form</field>
        </record>

        <record id="view_hr_applicant_contract_form" model="ir.ui.view">
            <field name="name">hr.applicant.contract.form</field>
            <field name="model">hr.applicant</field>
            <field name="inherit_id" ref="hr_recruitment.hr_applicant_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[1]" position="inside">
                    <group string="Promesse dâ€™embauche">
                        <label for="date_promesse"/>
                        <div class="o_row">
                            <field name="date_promesse"/>
                        </div>
                        <label for="salary_validate"/>
                        <div class="o_row">
                            <field name="salary_validate"/>
                        </div>
                        <label for="contract_type_id"/>
                        <div class="o_row">
                            <field name="contract_type_id" options="{'no_create': True}"/>
                        </div>
                        <label for="project_id"/>
                        <div class="o_row">
                            <field name="project_id"/>
                        </div>
                        <label for="duree_contract"/>
                        <div class="o_row">
                            <field name="code_contract" invisible="1"/>
                            <field name="duree_contract"
                                   attrs="{'invisible': [('code_contract', 'not in', [ 'CDD'])]}"/>
                        </div>
                        <label for="date_prise_fonction"/>
                        <div class="o_row">
                            <field name="date_prise_fonction"/>
                        </div>
                    </group>
                    <group string="Dossier administrative ">
                        <label for="dossier_id"/>
                        <div class="o_row">
                            <field name="dossier_id"/>
                        </div>
                        <label for="file" attrs="{'invisible': [('file', '==', False)]}"/>
                        <div class="o_row" attrs="{'invisible': [('file', '==', False)]}">
                            <field name="file"/>
                        </div>
                    </group>
                </xpath>
            </field>
        </record>


    </data>
</odoo>
