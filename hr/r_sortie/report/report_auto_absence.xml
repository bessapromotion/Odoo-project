<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_auto_absence">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.internal_layout">
                    <div class="page" style="font-size:20px;">
                        <strong>
                            <p style="text-align: center;font-size:25px;">AUTORISATION D'ABSENCE</p>
                        </strong>
                        <div style="padding-top:80px;">
                            Nom / Prénom :
                            <strong t-field="o.employe_id"/>
                            <br/>
                            <br/>
                            Fonction :
                            <strong t-field="o.job_id"/>
                            <br/>
                            <br/>
                            Service :
                            <strong t-field="o.department_id"/>
                            <br/>
                            <br/>
                            Date de sortie:
                            <strong t-field="o.date_debut" t-options="{'widget': 'datetime', 'format': 'HH : mm'}"/>
                            <br/>
                            <br/>
                            Date de retour:
                            <strong t-field="o.date_fin" t-options="{'widget': 'datetime', 'format': 'HH : mm'}"/>
                            <br/>
                            <br/>
                            Motif:
                            <strong t-field="o.motif"/>
                            <br/>
                            <br/>
                            Nom du Responsable Hiérarchique :
                            <b>
                                <span t-field="o.parent_id"/>
                            </b>
                            <br/>
                            <br/>
                            <table style="width:50%;">
                                <tr>
                                    <td style="text-align:left;">
                                        <input type="checkbox" style="text-align:center;"/>
                                        Favorable
                                    </td>
                                    <td style="text-align:right;">
                                        <input type="checkbox" style="text-align:center;"/>
                                        Défavorable
                                    </td>
                                </tr>
                            </table>

                            <br/>
                            <br/>
                            <br/>
                            <table style="width:100%">
                                <tr>
                                    <td style="text-align:center;">Avis du responsable Hiérarchique</td>
                                </tr>
                            </table>
                            <br/>
                            <br/>
                            <table style="width:100%;border:1px solid black;">
                                <tr style="border:1px solid;">
                                    <td style="text-align:center;">A défalquer
                                        <br/>
                                        <br/>
                                        <br/>
                                        <br/>
                                    </td>
                                    <td style="text-align:center;">
                                        A ne pas défalquer
                                        <br/>
                                        <br/>
                                        <br/>
                                        <br/>
                                    </td>
                                </tr>
                            </table>
                            <br/>
                            <br/>
                            <table style="width:80%;float:left;">
                                <tr>
                                    <td style="text-align:center;">Visa du Responsable</td>
                                    <td style="text-align:right;margin-right:70%;">L’intéressé (é)</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>