<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="report_bon_recup">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.internal_layout">
                    <div class="page" style="font-size:20px;">
                        <strong><p style="text-align: center;font-size:25px;">Demande de récupération</p></strong>
                        <br/>
                        Nom / Prénom :
                        <strong t-field="o.employe_id"/>
                        <br/>
                        <br/>
                        Service :
                        <strong t-field="o.department_id"/>
                        <br/>
                        <br/>
                        Fonction :
                        <strong t-field="o.job_id"/>
                        <br/>
                        <br/>
                        Nom et Prénom du remplaçant :
                        <strong t-field="o.remplacant_id"/>
                        <br/>
                        <br/>
                        <br/>
                        <table style="width:100%; clear:both;">
                            <tr style="height: 70px;">
                                <td style="text-align: left;height: 90px;border:None">Nom du chef de service :
                                    <strong t-field="o.employe_id.parent_id"/>
                                </td>
                                <td style="text-align: center;height: 90px;border: 1px solid #000000;">
                                    <b>Favorable</b>
                                </td>
                                <td style="text-align: center;border: 1px solid #000000;">
                                    <b>Défavorable</b>
                                </td>
                            </tr>
                        </table>
                        <br/>
                        <br/>
                        <div>
                            ● Date souhaitée pour le début de la récupération :
                            <strong t-field="o.date_debut"/>.
                            <br/>
                            <br/>
                            ● Date souhaitée pour la fin de la récupération :
                            <strong t-field="o.date_fin"/>.
                            <br/>
                            <br/>
                            ● Nombre de jours :
                            <strong t-field="o.duree"/>
                            jours.
                            <br/>
                            <br/>
                            <br/>

                        </div>
                        <div style="text-align: right;">Ouled Fayet le :
                            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y')"/>
                        </div>
                        <br/>
                        <br/>
                        <br/>
                        <table style="width:100%;height: 200px;">
                            <tr>
                                <td style="text-align: center;border: 1px solid #000000;">Le collaborateur</td>
                                <td style="text-align: center;border: 1px solid #000000;">Le chef de service</td>
                            </tr>
                        </table>

                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>