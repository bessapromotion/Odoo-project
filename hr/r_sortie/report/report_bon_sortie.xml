<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_bon_sortie">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.internal_layout">
                    <div class="page" style="font-size:20px;">
                        <strong>
                            <p style="text-align:center;font-size:25px;">BON DE SORTIE</p>
                        </strong>
                        <div style="padding-top:80px;">
                            Nom et Prénom:
                            <b>
                                <span t-field="o.employe_id"/>
                            </b>
                            <br/>
                            <br/>
                            Date :
                            <b>
                                <span t-field="o.date"/>
                            </b>
                            <br/>
                            <br/>
                            Fonction :
                            <b>
                                <span t-field="o.job_id"/>
                            </b>
                            <br/>
                            <br/>
                            Service :
                            <b>
                                <span t-field="o.department_id"/>
                            </b>
                            <br/>
                            <br/>
                            Nom et Prénom du remplaçant :
                            <b t-if="o.remplacant_id">
                                <span t-field="o.remplacant_id"/>
                            </b>
                            <b t-else="">
                                /
                            </b>
                            <br/>
                            <br/>
                            <table style="width:100%;">
                                <tr>
                                    <td style="text-align:left;">Heure de sortie :
                                        <b>
                                            <span t-field="o.date_sortie"
                                                  t-options="{'widget': 'datetime', 'format': 'HH : mm'}"/>
                                        </b>
                                    </td>
                                    <td style="text-align:right;">
                                        Heure de retour :
                                        <b t-if="o.date_retour">
                                            <span t-field="o.date_retour"
                                                  t-options="{'widget': 'datetime', 'format': 'HH : mm'}"/>
                                        </b>
                                        <b t-else="">
                                            Néant
                                        </b>
                                    </td>
                                </tr>
                            </table>
                            <br/>
                            Motif :
                            <b>
                                <span t-field="o.motif"/>
                            </b>
                            <br/>
                            <br/>
                            Nom du Responsable Hiérarchique :
                            <b>
                                <span t-field="o.parent_id"/>
                            </b>
                            <br/>
                            <br/>
                            <table style="width:50%;">
                                <tr>
                                    <td style="text-align:left;">
                                        <input type="checkbox" style="text-align:center;"/>
                                        Favorable
                                    </td>
                                    <td style="text-align:right;">
                                        <input type="checkbox" style="text-align:center;"/>
                                        Défavorable
                                    </td>
                                </tr>
                            </table>

                            <br/>
                            <br/>

                            <div style="text-align:center;">Avis du responsable Hiérarchique</div>
                            <br/>
                            <br/>
                            <table style="width:100%;border:1px solid black;">
                                <tr style="border:1px solid;">
                                    <td style="text-align:center;">A défalquer
                                        <br/>
                                        <br/>
                                        <br/>
                                        <br/>
                                    </td>
                                    <td style="text-align:center;">
                                        A ne pas défalquer
                                        <br/>
                                        <br/>
                                        <br/>
                                        <br/>
                                    </td>
                                </tr>
                            </table>
                            <br/>
                            <br/>
                            <table style="width:80%;float:left;">
                                <tr>
                                    <td style="text-align:center;">Visa du Responsable</td>
                                    <td style="text-align:right;margin-right:70%;">L’intéressé (é)</td>
                                </tr>
                            </table>

                        </div>


                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>