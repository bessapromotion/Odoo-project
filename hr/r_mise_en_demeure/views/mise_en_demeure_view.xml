<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Sanction -->
        <record model="ir.ui.view" id="demeure_kanban_view">
            <field name="name">demeure.kanban</field>
            <field name="model">hr.demeure</field>
            <field name="arch" type="xml">
                <activity string="Mise en demeure">
                    <field name="name"/>
                    <templates>
                        <div t-name="activity-box">
                            <div class="row">
                                <div class="col-6">
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                </div>
                            </div>

                        </div>
                    </templates>
                </activity>
            </field>
        </record>
        <record model="ir.ui.view" id="demeure_kanban_view">
            <field name="name">demeure.kanban</field>
            <field name="model">hr.demeure</field>
            <field name="arch" type="xml">
                <kanban string="Mise en demeure">
                    <field name="name"/>
                    <field name="note"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="row">
                                    <div class="col-6">
                                        <strong>
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="col-6 text-right">
                                        <span class="badge badge-pill">
                                            <field name="note"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record model="ir.ui.view" id="demeure_tree_view">
            <field name="name">demeure.tree</field>
            <field name="model">hr.demeure</field>
            <field name="arch" type="xml">
                <tree decoration-info="state == 'draft'" decoration-muted="state == 'cancel'">
                    <field name="name"/>
                    <field name="employe_id"/>
                    <field name="contract_id"/>
                    <field name="s_date"/>
                    <field name="numero"/>
                    <field name="date_debut_abscence"/>
                    <field name="motif_id"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="state" decoration-success="state == 'done'"
                           decoration-muted="state == 'cancel'"
                           decoration-info="state == 'draft'" widget="badge"/>
                </tree>
            </field>
        </record>

        <record id="demeure_filter" model="ir.ui.view">
            <field name="name">hr.demeure.filter</field>
            <field name="model">hr.demeure</field>
            <field name="arch" type="xml">
                <search string="Mise en demeure">
                    <field name="employe_id"/>
                    <field name="motif_id"/>

                    <filter name="draft" string="Nouveaux" domain="[('state','=','draft')]"/>
                    <filter name="done" string="Terminés" domain="[('state', '=', 'done')]"/>
                    <filter name="cancel" string="Annulés" domain="[('state', '=', 'cancel')]"/>

                    <group expand="0" string="Grouper par...">
                        <filter name="employee" string="Employé" domain="[]" context="{'group_by':'employe_id'}"
                                help="Employé"/>
                        <filter string="Motif" name="motif" domain="[]" context="{'group_by':'motif_id'}"
                                help="Motif de mise en demeure"/>
                    </group>
                </search>
            </field>
        </record>


        <record model="ir.ui.view" id="demeure_form_view">
            <field name="name">hr.demeure.form</field>
            <field name="model">hr.demeure</field>
            <field name="arch" type="xml">
                <form string="Mise en demeure">
                    <header>
                        <button name="action_validate" string="Valider" states="draft" class="oe_highlight"
                                type="object"
                                confirm="Voulez-vous valider cette mise en demeure ?"/>
                        <button name="action_cancel" string="Annuler" states="draft" type="object"
                                confirm="Voulez-vous annuler cette mise en demeure ?"/>
                        <button name="action_archive" string="Archiver" states="done" type="object"
                                confirm="Voulez-vous archiver cette mise en demeure ?"/>

                        <button name="action_print" states="done" string="Imprimer" class="oe_highlight" type="object"/>
                        <button name="action_print_ar" states="done" string="Imprimer AR" class="oe_highlight"
                                type="object"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,done,archived"/>
                    </header>
                    <sheet>
                        <h1>
                            <label for="name" string="Mise en demeure # "/>
                            <field name="name" class="oe_inline"/>
                        </h1>
                        <field name="image" widget='image' class="oe_avatar"/>
                        <div class="oe_title">
                            <label for="employe_id" class="oe_edit_only"/>
                            <h1>
                                <field name="employe_id" placeholder="Employé  "
                                       options='{"no_open": True, "no_create": True}'/>
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="user_id" options='{"no_open": True, "no_create": True}'/>
                                <field name="contract_id"
                                       domain="[('employee_id', '=', employe_id), ('state', 'in', ('open','close'))]"
                                       options='{"no_create": True}'/>
                                <separator attrs="{'invisible': [('warning_contract_state', '=', '')]}"/>
                                <field name="warning_contract_state" style="color:Red;" nolabel="1"
                                       attrs="{'invisible': [('warning_contract_state', '=', '')]}"/>
                                <field name="s_date"/>
                                <!--								<field name="name"/>-->
                                <separator/>
                                <separator/>
                                <field name="numero"/>
                                <field name="first_med" attrs="{'invisible':[('numero','=', '1')]}"/>
                                <field name="first_med_date" attrs="{'invisible':[('numero','=', '1')]}"/>
                            </group>
                            <group>
                                <field name="matricule" readonly="1"/>
                                <field name="job_id"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                            <group>
                                <field name="motif_id" force_save="1" attrs="{'readonly': [('numero', '=', '2')]}"/>
                                <field name="date_debut_abscence" force_save="1"
                                       attrs="{'readonly': [('numero', '=', '2')]}"/>
                                <field name="description_motif"/>
                                <field name="note" attrs="{'invisible': [('note', '=', False)]}"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_follower_ids" widget="mail_followers" modifiers="{}"/>
                        <field name="message_ids" widget="mail_thread" modifiers="{}"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_demeure_tree_view">
            <field name="name">Décisions de mise en demeure</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.demeure</field>
            <field name="search_view_id" ref="demeure_filter"/>
            <field name="view_mode">tree,form,kanban</field>
            <field name="view_id" ref="demeure_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer une nouvelle mise en demeure.
                </p>
                <p>

                </p>
                <p>

                </p>
            </field>
        </record>

        <!-- Top menu item -->


        <menuitem name="Mises en demeure" action="action_demeure_tree_view" id="menu_demeure"
                  parent="hr_base.menu_carriere" sequence="50"/>

    </data>
</openerp>
