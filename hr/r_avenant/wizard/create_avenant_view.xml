<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="creer_avenant_wizard_form_view">
            <field name="name">create.avenant.wizard.form</field>
            <field name="model">create.avenant.wizard</field>
            <field name="arch" type="xml">
                <form string="Créer un avenant">
                    <group>
                        <group>
                            <field name="employee_id" />
                            <field name="contract_id" />
                        </group>
                        <group>
                            <field name="date_etablissement" />

                        </group>
                    </group>
                    <notebook>
                        <page string="Révisions">
                            <group>
                                <group string="Prolongation">
                                    <field name="prolongation_ok" string="Prolongation"/>
                                    <field name="date_start" string="Du" attrs="{'invisible': [('prolongation_ok', '=', False)]}"/>
                                    <field name="date_end" string="Au" attrs="{'invisible': [('prolongation_ok', '=', False)]}"/>
                                </group>
                                <group string="Révisions">
                                    <field name="date_prise_effet"/>
                                    <field name="fonction_ok" class="oe_inline"/>
                                    <field name="job_id" attrs="{'invisible': [('fonction_ok', '=', False)]}"/>
                                    <field name="department_id" attrs="{'invisible': [('fonction_ok', '=', False)]}"/>

                                    <field name="remuneration_ok" string="Changement de salaire" class="oe_title"/>
                                    <field name="wage" attrs="{'invisible': [('remuneration_ok', '=', False)]}"/>
                                    <field name="categorie" attrs="{'invisible': [('remuneration_ok', '=', False)]}"/>
                                    <field name="section" attrs="{'invisible': [('remuneration_ok', '=', False)]}"/>
                                </group>
                            </group>
                            <!-- Rubriques -->
                            <separator string="Rubriques" invisible="1" /><!-- attrs="{'invisible': [('remuneration_ok', '=', False)]}" -->
                            <field name="rubrique_ids" invisible="1"><!-- attrs="{'invisible': [('remuneration_ok', '=', False)]}" -->
                                <tree editable="bottom">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Articles">
                            <field name="article_ids">
                                <tree editable="bottom" create="false">
                                    <field name="name"/>
                                    <field name="article"/>
                                    <field name="type_changement"/>
                                    <field name="old_val"/>
                                    <field name="revision_val"/>
                                </tree>
                            </field>
                        </page>

                    </notebook>

                    <footer>
                        <button name="action_create" type="object" string="Créer" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Annuler"/>
                    </footer>
                </form>
            </field>
        </record>


    </data>
</odoo>
