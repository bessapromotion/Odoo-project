<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="creer_rnv_wizard_form_view">
            <field name="name">rnv.contract.wizard.form</field>
            <field name="model">rnv.contract.wizard</field>
            <field name="arch" type="xml">
                <form string="Créer un avenant">
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="contract_id"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="nbr_mois"/>
                            <field name="date_end"/>
                        </group>
                        <group>
                            <field name="job_id"/>
                            <field name="wage"/>
                            <field name="categorie"/>
                            <field name="section"/>
                        </group>
                        <group>
                            <field name="trial_nbr_mois"/>
                        </group>
                    </group>

                    <footer>
                        <button name="action_create" type="object" string="Créer" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Annuler"/>
                    </footer>
                </form>
            </field>
        </record>


    </data>
</odoo>
