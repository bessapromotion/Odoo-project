<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_dl_hr_contract_inherit_search" model="ir.ui.view">
            <field name="name">hr.dl.contract.expand2.filter</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_search"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='current_employee']" position="after">
                    <separator/>
                    <filter string="Contrats" name="Contracts" domain="[('type_avenant', '=', 'Contrat')]"/>
                    <filter string="Avenants" name="Avenants" domain="[('type_avenant', '=', 'Avenant')]"/>
                </xpath>

            </field>
        </record>

        <record id="view_avenant_contract_form" model="ir.ui.view">
            <field name="name">avenant.contract.form.inherit</field>
            <field name="model">hr.contract</field>
            <field name="priority">2</field>
            <field name="inherit_id" ref="r_contract.view_dl_contract_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//button[@name='action_print']" position="after">
                        <button name="open_wizard" string="Créer un avenant" type="object" states="open,close"/>
                    </xpath>
                    <xpath expr="//field[@name='name']" position="before">
                        <field name="type_avenant" readonly="1"/>
                    </xpath>
                    <xpath expr="//field[@name='date_start']" position="before">
                        <field name="date_entree" readonly="0"/>
                        <!--                        <field name="date_entree" readonly="1" attrs="{'invisible': [('type_avenant','=', 'Contrat')]}"/>-->
                    </xpath>
                    <xpath expr="//field[@name='employee_id']" position="before">
                        <field name="parent_id" readonly="1" attrs="{'invisible': [('type_avenant','=', 'Contrat')]}"/>
                    </xpath>

                    <xpath expr="//group[@name='grp_essai']" position="replace"/>
                    <xpath expr="//group[@name='duration_group']" position="after">
                        <group string="Période d'essai" name="grp_essai"
                               attrs="{'invisible': [('type_avenant','=', 'Avenant')]}">
                            <field name="trial_date_start"/>
                            <field name="trial_date_end"/>
                            <field name="trial_nbr_mois"/>
                        </group>
                    </xpath>

                    <!-- Contract articles -->
                    <xpath expr="//page[@name='articles']" position="attributes">
                        <attribute name="attrs">{'invisible': [('type_avenant', '!=', 'Contrat')]}</attribute>
                    </xpath>

                    <notebook position="inside">
                        <page string="Révisions avenant" attrs="{'invisible': [('type_avenant', '=', 'Contrat')]}">
                            <field name="article_ids">
                                <tree create="false" editable="bottom">
                                    <field name="name" readonly="1"/>
                                    <field name="article"/>
                                    <field name="type_changement" readonly="1"/>
                                    <field name="old_val" readonly="1"/>
                                    <field name="revision_val" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                </data>
            </field>
        </record>

        <record id="view_avenant_contract_tree" model="ir.ui.view">
            <field name="name">avenant.contract.tree.inherit</field>
            <field name="model">hr.contract</field>
            <field name="priority">2</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_tree"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='job_id']" position="before">
                        <field name="type_avenant"/>
                        <field name="parent_id"/>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>
