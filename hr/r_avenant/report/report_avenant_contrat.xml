<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="report_avenant_contrat">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.internal_layout">
                    <div class="page">

                        <div align="center">
                            <div class="titre-style"
                                 style="width:600pt; height:100pt;margin:10pt;margin-top:30px;border: 6pt solid black;border-style: double;">
                                <h1 style="text-align: center;padding-top: 10px;">
                                    <strong>AVENANT N°
                                        <span t-field="o.name"/>
                                    </strong>
                                </h1>
                                <h1 style="text-align: center;padding-top: 5px;">
                                    <strong>AU
                                        <span t-field="o.contract_type_id"/>
                                    </strong>
                                </h1>
                            </div>
                        </div>
                        <br/>
                        <br/>

                        <div>
                            <strong>Réf
                                <span t-field="o.name"/>
                            </strong>
                        </div>
                        <br/>
                        <br/>
                        <div>
                            <strong>Entre,</strong>
                        </div>
                        <br/>
                        <div>L’entreprise unipersonnelle à responsabilité limitée<span
                                t-field="o.company_id.name"/>,
                            dont son siège social est sis à
                            <span t-field="o.company_id.street"/>
                            <span t-field="o.company_id.city"/>
                            <span t-field="o.company_id.state_id.name"/>
                            agissant par son Président Directeur Général, Désignée dans les présentes par, « l’Employeur
                            »,
                        </div>
                        <br/>
                        <br/>
                        <div style="font-weight: bold;">D’une part,</div>
                        <br/>
                        <br/>
                        <div style="font-weight: bold;">Et</div>
                        <br/>
                        <br/>
                        <div>
                            <table>
                                <tr>
                                    <td>
                                        <strong t-field="o.employee_id.civilite_id"/>
                                        <strong t-field="o.employee_id.name"/>
                                    </td>
                                    <td/>
                                </tr>
                                <tr>
                                    <td>Né (e) le :
                                        <strong t-field="o.employee_id.birthday"/>
                                        à :
                                        <strong t-field="o.employee_id.place_of_birth"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Demeurant à :
                                        <strong><span t-field="o.employee_id.adresse_simple"/>,<span
                                                t-field="o.employee_id.residence_commune"/>,
                                            <span t-field="o.employee_id.residence_wilaya_id"/>
                                        </strong>
                                    </td>

                                </tr>
                                <tr>
                                    <td>Ci-après désigné « Salarié (e) »</td>
                                </tr>
                            </table>
                        </div>
                        <br/>
                        <br/>
                        <div style="font-weight: bold;">d’autre part</div>
                        <br/>
                        <br/>
                        <div>Il a été arrêté et convenu ce qui suit :</div>
                        <br/>
                        <t t-if="o.code_changement == 'prolongagtion'">
                            <t t-set="variables" t-value="o.get_variables()"/>
                            <t t-set="nb_article" t-value="1"/>
                            <p>
                                <t t-foreach="o.article_prolongation_lines" t-as="a">
                                    <p t-if="a and a.article_id">
                                        <t t-raw="a.article_id.set_values(variables)"/>
                                    </p>
                                </t>
                            </p>
                            <br/>
                        </t>
                        <t t-if="o.code_changement == 'fonction'">
                            <t t-set="variables" t-value="o.get_variables()"/>
                            <t t-set="nb_article" t-value="1"/>
                            <p>
                                <t t-foreach="o.article_fonction_lines" t-as="a">
                                    <p t-if="a and a.article_id">
                                        <t t-raw="a.article_id.set_values(variables)"/>
                                    </p>
                                </t>
                            </p>
                            <br/>
                        </t>
                        <t t-if="o.code_changement == 'remuneration'">
                            <t t-set="variables" t-value="o.get_variables()"/>
                            <t t-set="nb_article" t-value="1"/>
                            <p>
                                <t t-foreach="o.article_remmuneration_lines" t-as="a">
                                    <p t-if="a and a.article_id">
                                        <t t-raw="a.article_id.set_values(variables)"/>
                                    </p>
                                </t>
                            </p>
                            <br/>
                        </t>

                    </div>
                    <!-- Signature -->
                    <div>
                        <div style="margin-top:0px;text-align:right;">Fait à Alger le :
                            <span t-field="o.date_start"/>
                        </div>
                        <br/>
                        <br/>
                        <div style="padding-top: 10px; width:100%;">
                            <div style="float: left;width:50%;">
                                <div style="">
                                    Le salarié(e)
                                    <span t-field="o.employee_id.civilite_id"/>
                                    <span t-field="o.employee_id.name"/>
                                </div>
                                <div style="">Lu et approuvé</div>
                            </div>
                            <div style="float: right;width:50%;text-align:center">
                                <div style="">Pour la société</div>
                                <span t-field="o.company_id"/>
                            </div>

                        </div>


                    </div>

                </t>
            </t>
        </t>
    </template>

</odoo>
