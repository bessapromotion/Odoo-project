<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- decharge -->
    <record model="ir.ui.view" id="view_decharge_filter">
        <field name="name">hr.frt.decharge.filter</field>
        <field name="model">hr.frt.decharge</field>
        <field name="arch" type="xml">
            <search string="Décharge">
                <field name="name"/>
                <field name="employe_id"/>
                <field name="contract_id"/>
                <field name="type"/>
                <field name="user_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <filter name="name"/>
                <filter name="employe_id"/>
                <filter name="contract_id"/>
                <filter name="type"/>
                <filter name="user_id"/>
                <filter name="company_id" groups="base.group_multi_company"/>
                <group expand="0" string="Grouper par...">
                    <filter name="type" string="Type" domain="[]" context="{'group_by':'type'}"/>
                    <filter name="employe_id" string="Employé" domain="[]" context="{'group_by':'employe_id'}"/>
                    <filter name="user_id" string="Etabli par" domain="[]" context="{'group_by':'user_id'}"/>
                    <filter name="company" string="Société" domain="[]" context="{'group_by':'company_id'}"/>
                </group>
            </search>
        </field>
    </record>
    <record model="ir.ui.view" id="decharge_tree_view">
        <field name="name">hr.frt.decharge.tree</field>
        <field name="model">hr.frt.decharge</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="employe_id"/>
                <field name="contract_id"/>
                <field name="type"/>
                <field name="user_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="decharge_form_view">
        <field name="name">hr.frt.decharge.form</field>
        <field name="model">hr.frt.decharge</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <label for="name" string="Décharge # "/>
                        <field name="name" class="oe_inline"/>
                    </h1>
                    <group>
                        <group>
                            <field name="employe_id"/>
                        </group>
                        <group>
                            <field name="contract_id"
                                   domain="[('employee_id','=', employe_id), ('state','not in', ('draft','cancel'))]"
                                   options='{"no_open": True, "no_create": True}'/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="type"/>
                        </group>

                    </group>
                    <notebook>
                        <page string="Decharges">
                            <field name="decharge_ids">
                                <tree editable="bottom">
                                    <field name="date"/>
                                    <field name="lieu"/>
                                    <field name="description"/>
                                    <field name="file"/>
                                    <button name="action_print" string="Imprimer" type="object" class="oe_highlight"/>

                                </tree>
                            </field>
                        </page>
                    </notebook>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" modifiers="{}"/>
                    <field name="message_ids" widget="mail_thread" modifiers="{}"/>
                </div>

            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_frt_decharge_rest">
        <field name="name">Décharges Restitution</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.frt.decharge</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('type','=','restitution')]</field>
<!--        <field name="context"/>-->
        <field name="context">{"default_type": 'restitution'}</field>
        <field name="search_view_id" ref="view_decharge_filter"/>
        <field name="view_id" ref="decharge_tree_view"/>
    </record>
    <record model="ir.actions.act_window" id="action_frt_decharge_reception">
        <field name="name">Décharges reception</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.frt.decharge</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('type','=','reception')]</field>
<!--        <field name="context"/>-->
        <field name="context">{'default_type': 'reception'}</field>
        <field name="search_view_id" ref="view_decharge_filter"/>
        <field name="view_id" ref="decharge_tree_view"/>
    </record>
    <record model="ir.actions.act_window" id="action_frt_decharge">
        <field name="name">Décharges</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.frt.decharge</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_decharge_filter"/>
        <field name="view_id" ref="decharge_tree_view"/>
    </record>

    <menuitem name="Décharge" id="menu_frt_decharge" parent="hr_base.menu_mouvements"
              sequence="10"/>
    <menuitem name="Toutes le decharges" id="menu_frt_decharge_all" parent="r_decharge.menu_frt_decharge"
              action="r_decharge.action_frt_decharge"
              sequence="10"/>
    <menuitem name="Restitution" id="menu_frt_decharge_rest" parent="r_decharge.menu_frt_decharge"
              action="r_decharge.action_frt_decharge_rest"
              sequence="20"/>
    <menuitem name="Reception" id="menu_frt_decharge_reception" parent="r_decharge.menu_frt_decharge"
              action="r_decharge.action_frt_decharge_reception"
              sequence="30"/>

</odoo>