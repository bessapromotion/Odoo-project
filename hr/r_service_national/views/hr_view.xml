<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <record id="view_hr_sn_form" model="ir.ui.view">
            <field name="name">lun.sn.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="priority">2</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//group[@name='has_work_permit']" position="before">
                        <group string="Service National" attrs="{'invisible': [('gender', '!=', 'male')]}">
                            <field name="sn_situation"/>
                            <field name="sn_motif_surcis" attrs="{'invisible': [('sn_situation','not in', ('sircis', 'disponse'))]}"/>
                            <field name="sn_date_fin_surcis" attrs="{'invisible': [('sn_situation','!=', 'sircis')]}"/>
                            <field name="sn_date_entree" attrs="{'invisible': [('sn_situation','not in', ('encours', 'done'))]}"/>
                            <field name="sn_date_sortie"  attrs="{'invisible': [('sn_situation','!=', 'done')]}"/>
                            <field name="sn_grade_id"  attrs="{'invisible': [('sn_situation','!=', 'done')]}"/>
                        </group>
                    </xpath>
                </data>
			</field>
        </record>

    </data>
</openerp>
