<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="hr_direction_tree_view">
        <field name="name">hr.direction.tree</field>
        <field name="model">hr.direction</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="nb_emp"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="hr_direction_form_view">
        <field name="name">hr.direction.form</field>
        <field name="model">hr.direction</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="company_id"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="DÃ©partement">
                            <field name="department_ids" editable="bottom"/>
                        </page>
                    </notebook>
                </sheet>

            </form>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_hr_direction_tree_view">
        <field name="name">Direction</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.direction</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="hr_direction_tree_view"/>
    </record>
    <menuitem name="Direction" action="action_hr_direction_tree_view" id="menu_hr_direction"
              parent="hr.menu_human_resources_configuration" sequence="2"/>
</odoo>