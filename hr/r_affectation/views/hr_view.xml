<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_direction_hr_employee_inherit_search" model="ir.ui.view">
            <field name="name">hr.employee.direction.filter</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='group_department']" position="before">
                    <filter name="group_direction" string="Direction" domain="[]"
                            context="{'group_by': 'direction_id'}"/>
                </xpath>
            </field>
        </record>

        <record id="view_hr_cont_affectation_form" model="ir.ui.view">
            <field name="name">lun.hr.affectation2.cont.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="priority">2</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='department_id']" position="before">
                        <field name="company_id"/>
                        <field name="direction_id" options='{"no_open": True, "no_create": True}'/>
                    </xpath>
                    <xpath expr="//field[@name='department_id']" position="after">
                        <field name="company_id"/>
                        <field name="project_id" options='{"no_open": True, "no_create": True}'/>
                    </xpath>
                </data>
            </field>
        </record>

        <record id="view_hr_employe_affectation_dl_tree" model="ir.ui.view">
            <field name="name">hr.employee.affectation.dl.tree.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_tree"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='department_id']" position="before">
                        <!-- <field name="company_id"/> -->
                        <field name="direction_id"/>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>
