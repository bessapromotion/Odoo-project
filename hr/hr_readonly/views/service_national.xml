<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <record id="view_hr_sn_readonly_form" model="ir.ui.view">
            <field name="name">lun.sn.ro.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="priority">2</field>
            <field name="inherit_id" ref="r_service_national.view_hr_sn_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='sn_situation']" position="replace">
                        <field name="sn_situation" attrs="{'readonly':[('active','=', False)]}"/>
                    </xpath>
                    <xpath expr="//field[@name='sn_motif_surcis']" position="replace">
                        <field name="sn_motif_surcis" attrs="{'readonly':[('active','=', False)], 'invisible': [('sn_situation','not in', ('sircis', 'disponse'))]}"/>
                    </xpath>
                    <xpath expr="//field[@name='sn_date_fin_surcis']" position="replace">
                        <field name="sn_date_fin_surcis" attrs="{'readonly':[('active','=', False)], 'invisible': [('sn_situation','!=', 'sircis')]}"/>
                    </xpath>
                    <xpath expr="//field[@name='sn_date_entree']" position="replace">
                        <field name="sn_date_entree" attrs="{'readonly':[('active','=', False)], 'invisible': [('sn_situation','not in', ('encours', 'done'))]}"/>
                    </xpath>
                    <xpath expr="//field[@name='sn_date_sortie']" position="replace">
                        <field name="sn_date_sortie"  attrs="{'readonly':[('active','=', False)], 'invisible': [('sn_situation','!=', 'done')]}"/>
                    </xpath>
                    <xpath expr="//field[@name='sn_grade_id']" position="replace">
                        <field name="sn_grade_id"  attrs="{'readonly':[('active','=', False)], 'invisible': [('sn_situation','!=', 'done')]}"/>
                    </xpath>
                </data>
			</field>
        </record>

    </data>
</openerp>
