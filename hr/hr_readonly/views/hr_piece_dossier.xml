<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

<!--piece dossier-->
        <record id="view_hr_employe_dossier_readonly_form" model="ir.ui.view">
            <field name="name">hr.employee.dossier.readonly.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="priority">2</field>
            <field name="inherit_id" ref="r_piece_dossier.view_hr_dossier_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='model_dossier_id']" position="replace">
                        <field name="model_dossier_id" options='{"no_create": True}' attrs="{'readonly':[('active','=', False)]}"/>
                    </xpath>
                    <xpath expr="//field[@name='date_depot_dossier']" position="replace">
                        <field name="date_depot_dossier" attrs="{'readonly':[('active','=', False)]}"/>
                    </xpath>
                    <xpath expr="//button[@name='button_get_piece_liste']" position="replace">
                        <button name="button_get_piece_liste" attrs="{'invisible':[('active','=', False)]}" string="Liste des pieces du dossier" type="object" class="oe_highlight"/>
                    </xpath>
                    <xpath expr="//field[@name='piece_ids']" position="replace">
                            <field name="piece_ids" attrs="{'readonly':[('active','=', False)]}">
                                <tree create="0" delete="0" editable="Bottom" colors="gray:state in ('NonDemand',);green:state in ('Remis',);red:state in ('NonRemis',)">
                                    <field name="name" readonly="1"/>
                                    <field name="nbr_copie" readonly="1"/>
                                    <field name="validite" readonly="1"/>
                                    <field name="date"/>
                                    <field name="date_expiration"/>
                                    <field name="state"/>
                                    <button name="action_recue" string="Piece recue" type="object" icon="fa-check text-success" states="NonRemis"/>
                                    <button name="action_nondemande" string="Piece non demandÃ©e" type="object" icon="fa-close text-danger" states="NonRemis"/>
                                </tree>
                            </field>
                    </xpath>
                </data>
            </field>
        </record>

    </data>
</openerp>
