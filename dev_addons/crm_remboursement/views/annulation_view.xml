<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- visite -->
        <record model="ir.ui.view" id="crm_desistement_tree_view">
            <field name="name">crm.desistement.tree</field>
            <field name="model">crm.desistement</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Desistement" decoration-info="state == 'draft'" decoration-muted="state == 'cancel'">
                    <field name="name"/>
                    <field name="reservation_id"/>
                    <field name="partner_id"/>
                    <field name="date"/>
                    <field name="project_id"/>
                    <field name="type_annulation"
                           decoration-info="type_annulation == 'desistement'"
                           decoration-muted="type_annulation == 'annulation'"
                           widget="badge"/>
                    <field name="commercial_id"/>
                    <field name="state"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="crm_desistement_form_view">
            <field name="name">Desistement</field>
            <field name="model">crm.desistement</field>
            <field name="arch" type="xml">
                <form string="Desistement">
                    <header>
                        <button name="create_dossier" string="Créer le dossier" states="desistement" type="object"/>

                        <button name="action_create_annulation" string="Créer document d'annulation"
                                class="oe_highlight" states="dossier" type="object"/>
                        <button name="action_scvalidation" string="Envoi au superviseur commercial pour validation"
                                class="oe_highlight" states="annulation" type="object"/>
                        <button name="action_comptabilite" string="Valider et envoyer à la comptabilité pour controle"
                                class="oe_highlight" states="scvalidation" type="object"
                                confirm="En cofirmant, le document d'annulation va etre aussi validé et le bien liberé, Voulez-vous valider l'opération ?"/>
                        <button name="action_validation" string="Valider et créer le document Remboursements"
                                class="oe_highlight" states="comptable" type="object"/>
                        <button name="action_print" string="Imprimer l'annulation" type="object" states="comptable,done"
                                class="oe_highlight"/>

                        <button name="action_cancel" string="Annuler le document" states="desistement" type="object"/>

                        <field name="state" nolabel="1" widget="statusbar"
                               statusbar_visible="desistement,dossier,annulation,scvalidation,comptable"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="action_open_reservation"
                                    icon="fa-star" attrs="{'invisible':[ ('state','=', 'desistement')]}">
                                <span>Document<br/>Réservation
                                </span>
                            </button>
                            <button class="oe_stat_button" type="object" name="action_open_annulation"
                                    icon="fa-times"
                                    attrs="{'invisible':[ ('state', 'in', ('desistement', 'dossier'))]}">
                                <span>Document<br/>Annulation
                                </span>
                            </button>
                            <button class="oe_stat_button" type="object" name="action_open_remboursement"
                                    icon="fa-money" attrs="{'invisible':[('state', '!=', 'done')]}">
                                <span>Document<br/>Remboursement
                                </span>
                            </button>
                        </div>
                        <field name="photo" widget='image' class="oe_avatar"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <group>
                                <field name="reservation_id" domain="[('state', '=', 'valid')]"
                                       options='{"no_create": True}'/>
                                <field name="partner_id"/>
                                <field name="date_reservation"/>
                                <field name="project_id"/>
                                <field name="type_annulation"/>
                                <field name="company_id"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="commercial_id"/>
                                <field name="charge_rembours_id"/>
                                <field name="annulation_id" invisible="1"/>
                                <field name="total_paiement"/>
                                <!--                            <field name="mode_paiement_id" />-->

                            </group>

                        </group>
                        <notebook>
                            <page string="Information">
                                <field name="product_ids">
                                    <tree editable="Top">
                                        <field name="name"/>
                                        <field name="type_id"/>
                                        <field name="bloc"/>
                                        <field name="etage"/>
                                        <field name="format_id"/>
                                        <field name="orientation"/>
                                        <field name="superficie"/>
                                        <field name="prix_m2"/>
                                        <field name="price_2"/>
                                        <field name="note"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Dossier">
                                <field name="dossier_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="dossier_id"/>
                                        <field name="date_depot"/>
                                        <field name="recu"/>
                                        <field name="file"/>
                                        <button string="Attacher un document" name="action_recu" type="object"
                                                icon="fa-paperclip"/>
                                        <button string="Recu" name="action_recu" type="object"
                                                icon="fa-check-square-o"/>
                                    </tree>
                                </field>
                                <group>
                                    <group>
                                        <button name="print_accuse" string="Imprimer l'accusé de reception"
                                                states="dossier" type="object"/>
                                        <separator/>
                                    </group>
                                </group>
                            </page>
                            <page string="Motif">

                                <field name="motif"/>

                            </page>
                            <page string="Echéances payées">
                                <field name="echeancier_ids">
                                    <tree readonly="1">
                                        <field name="name"/>
                                        <field name="label"/>
                                        <field name="project_id"/>
                                        <field name="date_creation"/>
                                        <field name="date_prevue"/>
                                        <field name="date_paiement"/>
                                        <field name="montant_prevu" sum="Prevu"/>
                                        <field name="montant" sum="Payed"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_crm_desistement_tree_view">
            <field name="name">Annualtions et remboursements</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.desistement</field>
            <!--        <field name="view_type">form</field>-->
            <field name="view_mode">tree,form,pivot</field>
            <field name="view_id" ref="crm_desistement_tree_view"/>
            <field name="domain">[('company_id','=',allowed_company_ids[0])]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Cliquez ici pour lancer une nouvelle procedure d'annulation.
                </p>
                <p>

                </p>
                <p>

                </p>
            </field>
        </record>


        <record id="view_crm_desistement_filter" model="ir.ui.view">
            <field name="name">crm.desistement.search.view</field>
            <field name="model">crm.desistement</field>
            <field name="arch" type="xml">
                <search string="desistement Search">
                    <!-- permet une recherche "directe" -->
                    <group col="10" colspan="4">
                        <field name="name"/>
                        <field name="reservation_id"/>
                        <field name="partner_id"/>
                        <field name="commercial_id"/>
                        <field name="project_id"/>
                        <!--<field name="product_id"/>-->
                        <field name="motif"/>
                    </group>
                    <filter name="draft" string="Nouvelle" domain="[('state', '=', 'draft')]"/>
                    <filter name="cancel" string="Annulée" domain="[('state', '=', 'cancel')]"/>
                    <!-- Permet le regroupement -->
                    <separator/>
                    <group expand="0" string="Grouper par">
                        <filter string="Commercial" name="commercial_id" context="{'group_by':'commercial_id'}"/>
                        <filter string="Projet" name="project_id" context="{'group_by':'project_id'}"/>

                    </group>
                    <separator/>
                    <!-- permet un filtrage -->
                </search>
            </field>
        </record>
        <record model="ir.ui.view" id="crm_desistement_pivot_view">
            <field name="name">crm.desistement.pivot</field>
            <field name="model">crm.desistement</field>
            <field name="type">pivot</field>
            <field name="arch" type="xml">
                <pivot string="Desistement">
                    <field name="name"/>
                    <field name="reservation_id"/>
                    <field name="partner_id"/>
                    <field name="date"/>
                    <field name="project_id" type="col"/>
                    <field name="commercial_id"/>
                    <field name="state"/>
                </pivot>
            </field>
        </record>


    </data>
</openerp>
