<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

     <record id="crm_suivi_commande_tree_view" model="ir.ui.view">
            <field name="name">crm.suivi.order.tree</field>
            <field name="model">sale.order</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree create="false">
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="partner_id" groups="base.group_user" string="Client"/>
                    <field name="mode_achat" />
                    <field name="date_order" string="Date"/>

                    <field name="user_id"  string="Commercial"/>
                    <field name="charge_recouv_id"/>
                    <field name="amount_untaxed" string="Montant HT" sum="Total"/>
                    <field name="amount_tax"  string="TVA" sum="Total"/>
                    <field name="amount_total" string="Total TTC" sum="Total"/>
<!--                    <field name="total_paiement" string="Versement" sum="Amount Ver"/>-->
<!--                    <field name="residual" string="Montant Du" sum="Amount Due"/>-->
                    <field name="currency_id" invisible="1"/>
                    <field name="state"/>
                    <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                </tree>
            </field>
        </record>

    <record id="crm_suivi_commande_filter" model="ir.ui.view">
        <field name="name">crm.suivi.commande.select</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <search string="Recherche Commandes">
                <field name="name" string="Commande" filter_domain="['|', ('name','ilike',self), ('partner_id', 'child_of', self)]"/>
                <filter domain="[('user_id','=',uid)]" name="Mes commandes" help="Mes commandes"/>
                <separator/>
<!--                    <filter name="draft" string="Brouillon" domain="[('state','=','draft')]"/>-->
<!--                    <filter name="unpaid" string="Impayée" domain="[('state', '=', 'open')]"/>-->
                <!--<filter name="in_payment" string="In Payment" domain="[('state', '=', 'in_payment')]"/>-->
<!--                    <filter name="paid" string="Payée" domain="[('residual', '=', 0)]"/>-->
<!--                    <filter name="late" string="En retard" domain="['&amp;', ('date_due', '&lt;', time.strftime('%%Y-%%m-%%d')), ('state', '=', 'open')]" help="Overdue invoices, maturity date passed"/>-->
                <separator/>

                <field name="partner_id" operator="child_of" filter_domain="['|', '|',  ('partner_id.name', 'ilike', self), ('partner_id.code_client', 'ilike', self), ('partner_id.num_pi', 'ilike', self)]"/>
                <field name="user_id" string="Commercial" domain="[('share','=', False)]"/>
<!--                    <field name="date" string="Period"/>-->

                <group expand="0" string="Group By">
                    <filter name="group_by_partner_id" string="Client" context="{'group_by':'partner_id'}"/>
                    <filter string="Commercial" name="salesperson" context="{'group_by':'user_id'}"/>
                    <filter string="Chargé de Recouvrement" name="charge_recouv_id" context="{'group_by':'charge_recouv_id'}"/>
                    <filter name="status" string="Etat" context="{'group_by':'state'}"/>
                    <separator/>
                    <filter string="Date commande" name="invoicedate" context="{'group_by':'date_order'}"/>
<!--                        <filter string="Date paiement" name="duedate" context="{'group_by':'date_due'}"/>-->
                </group>
            </search>
        </field>
    </record>

    <record id="action_crm_suivi_commande_tree_view" model="ir.actions.act_window">
            <field name="name">Commandes</field>
            <field name="res_model">sale.order</field>
<!--            <field name="view_type">form</field>-->

            <field name="view_mode">tree,form,calendar,graph,pivot</field>
            <field eval="False" name="view_id"/>
            <field name="domain">[('state','in',('sale', 'done',)),('company_id','=',allowed_company_ids[0])]</field>
<!--            <field name="context">{'type':'out_invoice', 'journal_type': 'sale'}</field>-->
            <field name="search_view_id" ref="crm_suivi_commande_filter"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Aucune commande a traiter.
              </p><p>

              </p>
            </field>
    </record>

    <record id="action_crm_suivi_commande_tree_view1" model="ir.actions.act_window.view">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="crm_suivi_commande_tree_view"/>
        <field name="act_window_id" ref="action_crm_suivi_commande_tree_view"/>
    </record>

    <record id="action_crm_suivi_facture_tree_view2" model="ir.actions.act_window.view">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sale.view_order_form"/>
        <field name="act_window_id" ref="action_crm_suivi_commande_tree_view"/>
    </record>

    </data>
</openerp>
