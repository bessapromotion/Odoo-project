<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="crm_annulation_tree_view">
            <field name="name">crm.annulation.tree</field>
            <field name="model">crm.annulation</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree create="false" string="Annulation" decoration-info="state == 'draft'"
                      decoration-muted="state == 'cancel'">
                    <field name="name"/>
                    <field name="reservation_id"/>
                    <field name="partner_id"/>
                    <field name="date"/>
                    <field name="project_id"/>
                    <field name="type_id" invisible="1"/>
                    <field name="source"/>
                    <field name="type_annulation"
                           decoration-info="type_annulation == 'desistement'"
                           decoration-muted="type_annulation == 'annulation'"
                           widget="badge"/>
                    <field name="commercial_id"/>
                    <field name="state"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="crm_annulation_form_view">
            <field name="name">Annulation</field>
            <field name="model">crm.annulation</field>
            <field name="arch" type="xml">
                <form string="Annulation" create="false">
                    <header>
                        <button name="action_validate" string="Valider l'Annulation" class="oe_highlight" states="draft"
                                type="object"
                                confirm="Voulez-vous Valider l'annulation de la réservation ?"/>
                        <button name="action_print" string="Imprimer" type="object" states="valid"
                                class="oe_highlight"/>

                        <button name="action_cancel" string="Annuler le document" states="draft" type="object"/>
                        <field name="state" nolabel="1" widget="statusbar" statusbar_visible="draft,valid"/>
                    </header>
                    <sheet>
                        <field name="photo" widget='image' class="oe_avatar"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <group>
                                <field name="reservation_id" domain="[('state', '=', 'valid')]"
                                       options='{"no_create": True}'/>
                                <field name="partner_id"/>
                                <field name="date_reservation"/>
                                <field name="project_id"/>
                                <field name="type_annulation" attrs="{'invisible':[('type_annulation','=', False)]}"
                                       decoration-info="type_annulation == 'desistement'"
                                       decoration-muted="type_annulation == 'annulation'"
                                       widget="badge"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="commercial_id"/>
                                <field name="type_id" invisible="1" options='{"no_create": True, "no_open": True}'/>
                                <field name="source"/>
                                <field name="company_id"/>
                            </group>

                        </group>
                        <notebook>
                            <page string="Annulation">
                                <field name="product_ids">
                                    <tree editable="Top">
                                        <field name="name"/>
                                        <field name="type_id" invisible="1"/>
                                        <field name="bloc"/>
                                        <field name="etage"/>
                                        <field name="format_id"/>
                                        <field name="orientation"/>
                                        <field name="superficie"/>
                                        <field name="prix_m2"/>
                                        <field name="price_2"/>
                                        <field name="note"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Motif">
                                <field name="motif"/>
                            </page>
                        </notebook>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_crm_annulation_tree_view">
            <field name="name">Annulations</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.annulation</field>
            <field name="view_mode">tree,form,pivot</field>
            <field name="view_id" ref="crm_annulation_tree_view"/>
            <field name="domain">[('company_id','=',allowed_company_ids[0])]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Cliquez ici pour créer un nouvelle annulation.
                </p>
                <p>

                </p>
                <p>

                </p>
            </field>
        </record>


        <record id="view_crm_annulation_filter" model="ir.ui.view">
            <field name="name">crm.annulation.search.view</field>
            <field name="model">crm.annulation</field>
            <field name="arch" type="xml">
                <search string="annulation Search">
                    <group col="10" colspan="4">
                        <field name="name"/>
                        <field name="reservation_id"/>
                        <field name="partner_id"
                               filter_domain="['|', '|',  ('partner_id.name', 'ilike', self), ('partner_id.code_client', 'ilike', self), ('partner_id.num_pi', 'ilike', self)]"/>
                        <field name="commercial_id"/>
                        <field name="project_id"/>
                        <field name="motif"/>
                    </group>
                    <filter name="draft" string="Nouvelle" domain="[('state', '=', 'draft')]"/>
                    <filter name="valid" string="Validée" domain="[('state', '=', 'valid')]"/>
                    <filter name="cancel" string="Annulée" domain="[('state', '=', 'cancel')]"/>
                    <separator/>
                    <group expand="0" string="Grouper par">
                        <filter string="Commercial" name="commercial_id" context="{'group_by':'commercial_id'}"/>
                        <filter string="Projet" name="project_id" context="{'group_by':'project_id'}"/>
                    </group>
                    <separator/>
                </search>
            </field>
        </record>
        <record model="ir.ui.view" id="crm_annulation_pivot_view">
            <field name="name">crm.annulation.pivot</field>
            <field name="model">crm.annulation</field>
            <field name="type">pivot</field>
            <field name="arch" type="xml">
                <pivot string="Annulation">
                    <field name="name"/>
                    <field name="reservation_id"/>
                    <field name="partner_id"/>
                    <field name="date"/>
                    <field name="project_id" type="col"/>
                    <field name="commercial_id"/>
                    <field name="state"/>
                </pivot>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_crm_annulation_des_tree_view">
            <field name="name">Desistement</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.annulation</field>
            <field name="view_mode">tree,form,pivot</field>
            <field name="view_id" ref="crm_annulation_tree_view"/>
            <field name="domain">[('company_id','=',allowed_company_ids[0]),('type_annulation','=','desistement')]
            </field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Cliquez ici pour créer un nouvelle annulation.
                </p>
                <p>

                </p>
                <p>

                </p>
            </field>
        </record>


    </data>
</openerp>
