<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

<template id="report_annulation">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.external_layout">
                <div class="page">
                    <p  align="left">Réf: <span t-field="o.name"/></p>
                    <p  style="margin-top : -40px;" align="right">Alger le : <span t-field="o.date"/></p>
                    <h2 class="text-center" ><strong>Décision d'<span t-field="o.type_id.name"/></strong></h2>
                    <!--<h3 class="text-center" style="">N° <span t-field="o.name"/></h3>-->
                    <table class="table table-condensed" style="margin-top:50px;border:1px solid black;">
                       <tr>
                           <td class="text-left" style="border:1px solid black;vertical-align:middle;padding-left:10px;"><strong>Réservation</strong></td>
                           <td class="text-left" style="border:1px solid black;vertical-align:middle;padding-left:10px;"><strong>Client</strong></td>
                           <td class="text-left" style="border:1px solid black;vertical-align:middle;padding-left:10px;"><strong>Projet</strong></td>
                           <td class="text-left" style="border:1px solid black;vertical-align:middle;padding-left:10px;"><strong>Suivi par</strong></td>
                       </tr>
                       <tr>
                            <td class="text-left" style="border:1px solid black;vertical-align:middle;padding-left:10px;">
                                Numéro : <strong><span t-esc="o.reservation_id.name"/></strong><br/>
                                Date   : <span t-esc="o.reservation_id.date.strftime('%d/%m/%Y')"/><br/>
                                <span t-if="o.reservation_id.mode_achat=='1'">Mode achat : Auto</span>
                                <span t-if="o.reservation_id.mode_achat=='2'">Mode achat : Crédit</span>
                            </td>
                           <td class="text-left" style="border:1px solid black;vertical-align:middle;padding-left:10px;">
                                <strong><span t-esc="o.partner_id.name"/></strong><br/>
                                <span t-esc="o.partner_id.phone"/><br/>
                                <span t-esc="o.partner_id.birthday.strftime('%d/%m/%Y')" />
                            </td>
                           <td class="text-left" style="border:1px solid black;vertical-align:middle;padding-left:10px;">
                               <span t-esc="o.project_id.name"/></td>
                           <td class="text-left" style="border:1px solid black;vertical-align:middle;padding-left:10px;">
                               Commerical   : <strong><span t-esc="o.commercial_id.name"/></strong><br/>
                               Recouvrement : <strong><span t-esc="o.reservation_id.charge_recouv_id.name"/></strong>
                           </td>
                       </tr>
                    </table>

                    <table  class="table table-condensed"  style="margin-top:50px;border: 1px solid black;float: right;">
                        <!--<head>-->
                            <tr>
                                <td class="text-left" style="border:1px solid black;vertical-align:middle;padding-left:10px;"><strong>Bien</strong></td>
                                <td class="text-left" style="border:1px solid black;vertical-align:middle;padding-left:10px;"><strong>Type</strong></td>
                                <td class="text-left" style="border:1px solid black;vertical-align:middle;padding-left:10px;"><strong>Superficie</strong></td>
                                <td class="text-left" style="border:1px solid black;vertical-align:middle;padding-left:10px;"><strong>Prix de vente</strong></td>
                            </tr>
                        <!--</head>-->
                        <tr t-foreach="o.product_ids" t-as="l">
                            <td class="text-left" style="border:1px solid black;vertical-align:middle;padding-left:10px;">
                            <span t-field="l.name" /><br/>
                            Bloc : <span t-field="l.bloc" /><br/>
                            Etage : <span t-field="l.etage" /><br/>
                            Orientation : <span t-field="l.orientation" /><br/>
                            Total versement : <span t-field="o.reservation_id.total_paiement" /><br/>
                            </td>
                            <td class="text-left" style="border:1px solid black;vertical-align:middle;padding-left:10px;"><span t-field="l.type_id" /></td>
                            <td class="text-left" style="border:1px solid black;vertical-align:middle;padding-left:10px;"><span t-field="l.superficie" t-options = '{"widget" : "float", "precision":2}'/> m2</td>
                            <td class="text-left" style="border:1px solid black;vertical-align:middle;padding-left:10px;"><span t-field="l.price_2"  t-options = '{"widget" : "float", "precision":2}'/> DZD</td>
                        </tr>

                    </table>

                    <br/><br/><br/><br/>
                    <p><span>Motif d'Annulation : </span> <strong t-esc="o.motif"/></p>

                    <!--<table class="table table-condensed" style="margin-top:50px;border:1px solid;">-->
                        <!--<tr style="background-color:#000000;color:#FFFFFF;">-->
                            <!--<td class="text-center"><strong>Motif d'Annulation</strong></td>-->
                        <!--</tr>-->
                        <!--<tr>-->
                            <!--<td class="text-center"><span t-esc="o.motif"/></td>-->
                        <!--</tr>-->
                    <!--</table>-->

                   <table class="table table-condensed" style="border:1px solid;position:absolute;top:750px;">
                       <tr>
                           <td  class="text-center"  style="width:25%;border:1px solid black;vertical-align:middle;padding-left:10px;">
                               <strong><u>VISA Responsable commercial</u></strong>
                           </td>

                           <td  class="text-center" style="width:25%;border:1px solid black;vertical-align:middle;padding-left:10px;">
                               <strong><u>VISA ADV</u></strong>

                           </td>

                           <td class="text-center" style="width:25%;border:1px solid black;vertical-align:middle;padding-left:10px;">
                               <strong><u>VISA DFC</u></strong>
                           </td>

                           <td class="text-center" style="width:25%;border:1px solid black;vertical-align:middle;padding-left:10px;">
                               <strong><u>VISA DG</u></strong>
                           </td>
                       </tr>
                       <tr>
                           <td  class="text-center"  style="width:25%;border:1px solid black;">
                               <br/><br/><br/><br/><br/>
                           </td>

                           <td  class="text-center" style="width:25%;border:1px solid black;">

                           </td>

                           <td class="text-center" style="width:25%;border:1px solid black;">

                           </td>

                           <td class="text-center" style="width:25%;border:1px solid black;">

                           </td>
                       </tr>
                   </table>
                </div>
            </t>
        </t>
    </t>
</template>

</odoo>