<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="report_invoice_document" inherit_id="account.report_invoice_document">
            <xpath expr="//t[@t-set='address']" position="replace">
			</xpath>
            <xpath expr="//div[@id='informations']" position="replace">
            <div>
                <p style="text-align:right; margin-top:-30px;"  >Alger, le : <span t-field="o.date_due"/></p>
                <div style="margin-left:450px;">
                    <br/>
                    <p align="left"><strong t-field="o.partner_id"/></p>
                    <p align="left"><strong t-field="o.partner_id.street"/></p>
                    <br/><br/><br/>
                </div>
            </div>
			</xpath>
            <xpath expr="//div[@class='clearfix']" position="after">
                    <p>Arrêtée la présente facture à la somme de :
                    <strong t-field="o.montant_lettre"/>
                    </p>
			</xpath>
    </template>

</odoo>