<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="action_superficie_button" model="ir.actions.act_window">
            <field name="name">Changements de superficie</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.superficie.line</field>
            <field name="context">{'search_default_name': [active_id], 'default_name': active_id}</field>
            <!--<field name="domain"></field>-->
            <field name="view_mode">tree,form</field>
<!--            <field name="search_view_id" ref="view_crm_echeancier_filter"/>-->
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Aucun changement de superficie n'a été appliqué
              </p><p>
              </p>
            </field>
        </record>

        <record id="view_crm_product_template_superficie_form" model="ir.ui.view">
            <field name="name">crm.product.template.superficie.form.inherit</field>
            <field name="model">product.template</field>
            <field name="priority">2</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//div[@name='button_box']" position="inside">
                        <button
                                class="oe_stat_button"
                                type="action"
                                name="%(action_superficie_button)d"
                                attrs="{'invisible':[('nbr_superficie','=', 0)]}"
                                icon="fa-superscript"
                                groups="crm_superficie.group_superficie_manager,crm_superficie.group_superficie_user"
                        >

                            <field string="Superficie" name="nbr_superficie" widget="statinfo" groups="crm_superficie.group_superficie_manager,crm_superficie.group_superficie_user"/>
                        </button>
                    </xpath>

                </data>
            </field>
        </record>

     </data>
</openerp>
