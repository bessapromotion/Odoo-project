        <record model="ir.ui.view" id="crm_superficie_line_button_tree_view">
            <field name="name">crm.superficie.line.button.tree</field>
            <field name="model">crm.superficie.line</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree editable="bottom" create="true" string="superficie"
                      decoration-success="superficie_new &gt; superficie"
                      decoration-danger="superficie_new &lt; superficie">
                    <field name="superficie_id"/>
                    <field name="date"/>
                    <field name="name"/>
                    <field name="num_lot" attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>
                    <field name="bloc" attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>
                    <field name="numero" attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>
                    <field name="etage" attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>
                    <field name="type_id" attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>
                    <field name="format_id" attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>
                    <field name="orientation" attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>
                    <field name="order_id"/>
                    <field name="partner_id"/>
                    <field name="num_dossier"/>
                    <field name="superficie"/>
                    <field name="prix_m2"/>
                    <field name="price_2"/>

                    <field name="superficie_new" attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>
                    <field name="prix_m2_new" attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>
                    <field name="vente_new"/>
                    <field name="amount"/>
                    <field name="state_grp" invisible="1"/>
                    <field name="bloc_grp" invisible="1"/>
                    <field name="etage_grp" invisible="1"/>
                    <field name="state" invisible="1"/>
                    <field name="etat"/>
                    <field name="action" attrs="{'readonly': [('state', 'in', ('done', 'cancel'))]}"/>
                </tree>
            </field>
        </record>

        <record id="action_product_button" model="ir.actions.act_window">
            <field name="name">Biens</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.superficie.line</field>
            <field name="context">{'search_default_superficie_id': [active_id], 'default_superficie': active_id}</field>
            <field name="domain">[('superficie_id', '=', active_id),('company_id','=',allowed_company_ids[0])]</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="crm_superficie.crm_superficie_line_button_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Aucun bien n'est encore sélectionné
                </p>
                <p>
                </p>
            </field>
        </record>


        <!-- superficie -->
        <record model="ir.ui.view" id="crm_superficie_tree_view">
            <field name="name">crm.superficie.tree</field>
            <field name="model">crm.superficie</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="superficie" decoration-info="state == 'draft'" decoration-muted="state == 'cancel'">
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="date"/>
                    <field name="state" decoration-success="state == 'done'"
                           decoration-muted="state == 'progress'"
                           decoration-warning="state == 'cancel'"
                           decoration-info="state == 'draft'" widget="badge"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="crm_superficie_form_view">
            <field name="name">superficie</field>
            <field name="model">crm.superficie</field>
            <field name="arch" type="xml">
                <form string="Changement de superficie">
                    <header>
                        <button name="action_load" string="Charger les biens" class="oe_highlight" states="draft"
                                type="object" groups="crm_superficie.group_superficie_manager"/>
                        <!--                    <button name="action_test" string="test" type="object"/>-->
                        <!--                    <button name="action_delete_noaction" string="Supprimer les biens non touchés par l'opération" states="done" type="object" groups="crm_superficie.group_superficie_manager"/>-->
                        <button name="action_validate" string="Valider le changement de superficie" class="oe_highlight"
                                states="progress" type="object"
                                confirm="Voulez-vous valider cette opération ?"
                                groups="crm_superficie.group_superficie_manager"/>
                        <!--                    <button name="action_print" string="Imprimer" type="object" states="done" class="oe_highlight"/>-->

                        <button name="action_cancel" string="Annuler" states="draft,progress" type="object"
                                confirm="Voulez-vous annuler l'opération ?"
                                groups="crm_superficie.group_superficie_manager"/>
                        <button name="action_draft" string="Remettre dans l'état brouillon" states="cancel"
                                type="object" groups="crm_superficie.group_superficie_manager"/>
                        <field name="state" nolabel="1" widget="statusbar" statusbar_visible="draft,progress,done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="action" name="%(action_product_button)d"
                                    icon="fa-building-o" attrs="{'invisible':[ ('state','in', ('draft', 'cancel'))]}">

                                <field name="nbr_biens"/>
                                <span>Biens</span>
                            </button>
                            <button class="oe_stat_button" type="action" name="%(action_order_button)d"
                                    icon="fa-star" attrs="{'invisible':[ ('state','!=', 'done')]}"
                                    groups="crm_superficie.group_superficie_manager">
                                <span>Commandes</span>
                            </button>
                            <button class="oe_stat_button" type="action" name="%(action_echeance_button)d"
                                    icon="fa-calendar-o" attrs="{'invisible':[ ('state','!=', 'done')]}"
                                    groups="crm_superficie.group_superficie_manager">
                                <span>Echéances</span>
                            </button>
                            <button class="oe_stat_button" type="action" name="%(action_remboursement_button)d"
                                    icon="fa-money" attrs="{'invisible':[ ('state','!=', 'done')]}"
                                    groups="crm_superficie.group_superficie_manager">
                                <span>Remboursements</span>
                            </button>
                        </div>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <group>
                                <field name="project_id" options='{"no_create": True}'/>
                                <field name="date"/>
                                <field name="company_id"/>
                                <!--                            <field name="type_bien_ids" widget="many2many_tags" options="{'no_create': True}"/>-->
                            </group>
                            <group>
                                <field name="moins_percu" decoration-success="1"/>
                                <field name="trop_percu" decoration-danger="1"/>
                                <field name="difference"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Notes">
                                <field name="notes"/>

                            </page>
                        </notebook>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_crm_superficie_tree_view">
            <field name="name">Changement de superficie</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.superficie</field>
            <field name="view_mode">tree,form,pivot</field>
            <field name="view_id" ref="crm_superficie_tree_view"/>
            <field name="domain">[('company_id','=',allowed_company_ids[0])]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Cliquez ici pour créer un nouveau changement de superficie.
                </p>
                <p>

                </p>
                <p>

                </p>
            </field>
        </record>


        <record id="view_crm_superficie_filter" model="ir.ui.view">
            <field name="name">crm.superficie.search.view</field>
            <field name="model">crm.superficie</field>
            <field name="arch" type="xml">
                <search string="superficie Search">
                    <group col="10" colspan="4">
                        <field name="name"/>
                        <field name="project_id"/>
                        <field name="notes"/>
                    </group>
                    <filter name="draft" string="Nouveaux" domain="[('state', '=', 'draft')]"/>
                    <filter name="progress" string="En cours" domain="[('state', '=', 'progress')]"/>
                    <filter name="valid" string="Validés" domain="[('state', '=', 'done')]"/>
                    <filter name="cancel" string="Annulés" domain="[('state', '=', 'cancel')]"/>
                    <separator/>
                    <group expand="0" string="Grouper par">
                        <filter string="Etat" name="state" context="{'group_by':'state'}"/>
                        <filter string="Projet" name="project_id"
                                context="{'group_by':'project_id'}"/>
                    </group>
                    <separator/>
                </search>
            </field>
        </record>


