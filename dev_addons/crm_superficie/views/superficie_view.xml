        <record model="ir.ui.view" id="crm_superficie_line_form_view">
            <field name="name">Superficie</field>
            <field name="model">crm.superficie.line</field>
            <field name="arch" type="xml">
                <form string="Changement de superficie">
                    <header>
                        <field name="state" nolabel="1" widget="statusbar" statusbar_visible="draft,progress,done"/>
                    </header>
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <group>
                                <field name="superficie_id" readonly="1"/>
                                <field name="date" readonly="1"/>
                            </group>
                            <group/>
                            <group>
                                <field name="order_id" readonly="1"/>
                                <field name="num_dossier" readonly="1"/>
                                <field name="num_lot" readonly="1"/>
                                <field name="prix_m2" readonly="1"/>
                                <field name="price_2" readonly="1"/>
                            </group>
                            <group>
                                <field name="superficie" readonly="1"/>
                                <field name="superficie_new" readonly="1"/>
                                <field name="amount" readonly="1"/>
                                <field name="action" readonly="1"/>
                            </group>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_crm_superficie_line_tree_view">
            <field name="name">Changements de superficie</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.superficie.line</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="crm_superficie_line_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Aucun changement de superficie.
                </p>
                <p>

                </p>
                <p>

                </p>
            </field>
        </record>


        <record id="view_crm_superficie_line_filter" model="ir.ui.view">
            <field name="name">crm.superficie.line.search.view</field>
            <field name="model">crm.superficie.line</field>
            <field name="arch" type="xml">
                <search string="superficie line Search">
                    <!-- permet une recherche "directe" -->
                    <group col="10" colspan="4">
                        <field name="name"/>
                        <field name="superficie_id"/>
                        <field name="date"/>
                        <field name="etat"/>
                        <field name="type_id"/>
                        <field name="format_id"/>
                        <field name="orientation"/>
                        <field name="bloc_grp"/>
                        <field name="etage_grp"/>
                        <field name="num_lot"/>
                        <field name="num_dossier"/>
                    </group>
                    <!-- Permet le regroupement -->
                    <separator/>
                    <group expand="0" string="Grouper par">
                        <filter string="Changement surfacique" name="operation" context="{'group_by':'superficie_id'}"/>
                        <filter string="Actions a faire" name="action" context="{'group_by':'action'}"/>

                        <!--<filter string="Commercial" name="commercial_id" context="{'group_by':'commercial_id'}" />-->
                        <!--                        <filter string="Projet" name="project_id" context="{'group_by':'project_id'}" />-->
                        <filter string="Lot" name="etat" context="{'group_by':'num_lot'}"/>
                        <filter string="Etat" name="etat" context="{'group_by':'state_grp'}"/>
                        <filter string="Type" name="type_id" context="{'group_by':'type_id'}"/>
                        <filter string="Typologie" name="format_id" context="{'group_by':'format_id'}"/>
                        <filter string="Orientation" name="orientation" context="{'group_by':'orientation'}"/>
                        <filter string="Etage" name="etage" context="{'group_by':'etage_grp'}"/>
                        <filter string="Bloc" name="bloc" context="{'group_by':'bloc_grp'}"/>

                    </group>
                    <separator/>
                    <!-- permet un filtrage -->
                </search>
            </field>
        </record>


    </data>
</openerp>
