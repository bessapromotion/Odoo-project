<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="report_recu_paiement_inherit" inherit_id="account.report_payment_receipt">
			<xpath expr="//div[1]" position="replace">
				<div class="page">

                    <h2 class="text-center" ><strong>Reçu de paiement</strong></h2>
                    <h3 class="text-center" style="">N° <span t-field="o.name"/></h3>
                    <p class="text-right">Ouled Fayet le : <span t-field="o.date"/></p>


                    <table style="margin-top:50px;">
                       <tr>
                           <td class="text-left" style="vertical-align:top;padding-left:10px;">Mode de paiement</td>
                           <td class="text-left" style="vertical-align:top;padding-left:10px;"> : </td>
                           <td class="text-left" style="vertical-align:top;padding-left:10px;">
                               <strong><span t-esc="o.mode_paiement_id.name"/></strong>
                               <br/><br/><br/>
                           </td>
                       </tr>
                        <tr>
                           <td class="text-left" style="vertical-align:top;padding-left:10px;">Nom et prénom du client</td>
                           <td class="text-left" style="vertical-align:top;padding-left:10px;"> : </td>
                           <td class="text-left" style="vertical-align:top;padding-left:10px;">
                               <strong><span t-esc="o.partner_id.name"/></strong>
                               <br/><br/><br/>
                           </td>
                       </tr>
                        <tr>
                           <td class="text-left" style="vertical-align:top;padding-left:10px;">Référence client</td>
                           <td class="text-left" style="vertical-align:top;padding-left:10px;"> : </td>
                           <td class="text-left" style="vertical-align:top;padding-left:10px;">
                               <strong><span t-esc="o.partner_reference"/></strong>
                               <br/><br/><br/>
                           </td>
                       </tr>
                       <tr>
                           <td class="text-left" style="vertical-align:top;padding-left:10px;">Nom du projet</td>
                           <td class="text-left" style="vertical-align:top;padding-left:10px;"> : </td>
                           <td class="text-left" style="vertical-align:top;padding-left:10px;">
                               <strong><span t-field="o.project_id.name"/></strong>
                               <br/><br/><br/>
                           </td>
                       </tr>
                        <tr>
                           <td class="text-left" style="vertical-align:top;padding-left:10px;">Montant en chiffre</td>
                           <td class="text-left" style="vertical-align:top;padding-left:10px;"> : </td>
                           <td class="text-left" style="vertical-align:top;padding-left:10px;">
                               <strong><span t-field="o.amount"/></strong>
                               <br/><br/><br/>
                           </td>
                       </tr>
                        <tr>
                           <td class="text-left" style="vertical-align:top;padding-left:10px;">Montant en lettre</td>
                           <td class="text-left" style="vertical-align:top;padding-left:10px;"> : </td>
                           <td class="text-left" style="vertical-align:top;padding-left:10px;">
                               <strong><span t-field="o.amount_lettre"/></strong>
                               <br/><br/><br/>
                           </td>
                       </tr>
                        <tr>
                           <td class="text-left" style="vertical-align:top;padding-left:10px;">Objet du paiement</td>
                           <td class="text-left" style="vertical-align:top;padding-left:10px;"> : </td>
                           <td class="text-left" style="vertical-align:top;padding-left:10px;">
                               <strong><span t-field="o.objet"/></strong>
                               <br/><br/><br/>
                           </td>
                       </tr>
                        <tr>
                           <td class="text-left" style="vertical-align:top;padding-left:10px;">Numéro du chèque</td>
                           <td class="text-left" style="vertical-align:top;padding-left:10px;"> : </td>
                           <td class="text-left" style="vertical-align:top;padding-left:10px;">
                               <strong><span t-field="o.doc_payment_id.name"/></strong>
                               <br/><br/><br/>
                           </td>
                       </tr>
                        <tr>
                           <td class="text-left" style="vertical-align:top;padding-left:10px;">Domiciliation</td>
                           <td class="text-left" style="vertical-align:top;padding-left:10px;"> : </td>
                           <td class="text-left" style="vertical-align:top;padding-left:10px;">
                               <strong><span t-field="o.cheque_domiciliation"/></strong>
                               <br/><br/><br/>
                           </td>
                       </tr>
                        <tr>
                           <td class="text-left" style="vertical-align:top;padding-left:10px;">Chèque établi le </td>
                           <td class="text-left" style="vertical-align:top;padding-left:10px;"> : </td>
                           <td class="text-left" style="vertical-align:top;padding-left:10px;">
                               <strong><span t-field="o.cheque_date"/></strong>
                               <br/><br/><br/>
                           </td>
                       </tr>
                        <tr>
                           <td class="text-left" style="vertical-align:top;padding-left:10px;">Observation</td>
                           <td class="text-left" style="vertical-align:top;padding-left:10px;"> : </td>
                           <td class="text-left" style="vertical-align:top;padding-left:10px;">
                               <strong><span t-field="o.observation"/></strong>
                               <br/><br/><br/>
                           </td>
                       </tr>
                    </table>

                    <p class="text-center"><strong>Signature du caissier</strong></p>
<!--                    <p class="text-center"><strong><span t-field="o.commercial_id.name"/></strong></p>-->
                </div>
			</xpath>
		</template>
	</data>
</openerp>