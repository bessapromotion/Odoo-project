<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="order_view_tree_3" model="ir.ui.view">
            <field name="name">sale.order.tree.3</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="before">
                    <field name="total_paiement" string="Versement"/>
                    <field name="residual" string="Montant Dû"/>
                </xpath>
            </field>
        </record>

        <record id="action_creer_echeancier_wizard" model="ir.actions.act_window">
            <field name="name">Nouvel echeancier</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">creer.echeancier.wizard</field>
            <!--            <field name="view_type">form</field>-->
            <field name="view_mode">form</field>
            <!--<field name="context">{'default_number': 1}</field>-->
            <field name="target">new</field>
        </record>

        <record id="action_echeances_button" model="ir.actions.act_window">
            <field name="name">Echeances</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.echeancier</field>
            <field name="context">{'search_default_order_id': [active_id], 'default_order_id': active_id}</field>
            <field name="domain">[('state', '!=', 'cancel')]</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_crm_echeancier_filter"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer une nouvelle écheance.
                </p>
                <p>
                </p>
            </field>
        </record>

        <record id="view_order_echeancier_form" model="ir.ui.view">
            <field name="name">sale.order.echeancier.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <!--<field name="user_id" position="after">-->
                <!--<field name="nbr_echeances" invisible="1"/>-->
                <!--</field>-->
                <!--                <xpath expr="//field[@name='user_id']" position="after">-->
                <!--                    <field name="nbr_echeances" invisible="1"/>-->
                <!--                </xpath>-->
                <!--                <xpath expr="//field[@name='amount_total']" position="after">-->
                <!--                    <field name="total_paiement"  attrs="{'invisible': [('nbr_echeances', '=', 0)]}" widget='monetary' options="{'currency_field': 'currency_id'}"/>-->
                <!--                    <field name="residual"  attrs="{'invisible': [('nbr_echeances', '=', 0)]}" widget='monetary' options="{'currency_field': 'currency_id'}"/>-->
                <!--                </xpath>-->
                <!--                <xpath expr="//button[@name='action_invoice_sent']" position="after">-->
                <!--                        <button string="Imprimer Ordre de paiement" name="action_print_ordre_paiement" type="object"-->
                <!--                        attrs="{'invisible': ['|', ('type','=','in_invoice'), ('state', 'not in', ('open', 'in_payment',))]}"/>-->
                <!--                </xpath>-->
                <xpath expr="//button[1]" position="after">
                    <field name="nbr_echeances" invisible="1"/>
                    <button string="Créer l'echeancier" name="%(action_creer_echeancier_wizard)d" type="action"
                            class="oe_highlight"
                            attrs="{'invisible': ['|', ('nbr_echeances', '!=', 0), ('state', 'not in', ('sale', 'done',))]}"/>
                </xpath>

                <xpath expr="//div[@name='button_box']" position="inside">
                    <button
                            class="oe_stat_button"
                            type="action"
                            name="%(action_echeances_button)d"
                            attrs="{'invisible':[('nbr_echeances','=', 0)]}"
                            icon="fa-money"> <!--icon="fa-briefcase"-->
                        <field string="Echeances" name="nbr_echeances_bt" widget="statinfo"/>
                    </button>
                </xpath>

                <notebook position="inside">
                    <page string="Echéances" attrs="{'invisible': [('nbr_echeances', '=', 0)]}">
                        <field name="echeancier_ids">
                            <tree readonly="1">
                                <field name="name"/>
                                <field name="label"/>
                                <field name="project_id"/>
                                <field name="date_creation"/>
                                <field name="date_prevue"/>
                                <field name="date_paiement"/>
                                <field name="montant_prevu" sum="Prevu"/>
                                <field name="montant" sum="Payed"/>
                                <field name="state"/>
                                <field name="company_id"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </field>
        </record>

        <!--        tree du menu suividossier-> commnde-->
        <record id="view_suivi_commande_2_tree" model="ir.ui.view">
            <field name="name">crm.suivi.order.2.tree</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="crm_operation.crm_suivi_commande_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_total']" position="after">
                    <field name="total_paiement" string="Versement" sum="Amount Ver"/>
                    <field name="residual" string="Montant Du" sum="Amount Due"/>
                </xpath>
            </field>
        </record>

        <!--        hide create invoice button-->
        <record id="view_order_hide_invoice_form" model="ir.ui.view">
            <field name="name">sale.order.hideinvoice.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="nbr_echeances" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='tax_totals_json']" position="after">
                    <field name="total_paiement" attrs="{'invisible': [('nbr_echeances', '=', 0)]}" widget='monetary'
                           options="{'currency_field': 'currency_id'}"/>
                    <field name="affiche_facture" invisible="1"/>
                    <field name="residual" attrs="{'invisible': [('nbr_echeances', '=', 0)]}" widget='monetary'
                           options="{'currency_field': 'currency_id'}"/>
                </xpath>


                <!--                <xpath expr="//field[@name='partner_id']" position="after">-->
                <!--                    <field name="total_paiement" invisible="0"/>-->
                <!--                </xpath>-->
                <xpath expr="//button[3]" position="replace">
                    <button name="257" string="Créer la Facture" type="action" class="btn-primary" data-hotkey="q"
                            attrs="{'invisible': [('invoice_status', '!=', 'to invoice')]}"/>

                </xpath>
                <xpath expr="//button[4]" position="replace">
                    <button name="257" string="Créer la Facture" type="action"
                            context="{'default_advance_payment_method': 'percentage'}" data-hotkey="q"
                            attrs="{'invisible': ['|',('invoice_status', '!=', 'no'), ('state', 'not in', ('sale','done'))]}"/>

                </xpath>
            </field>
        </record>

    </data>
</openerp>
