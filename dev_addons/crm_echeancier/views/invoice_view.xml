<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="action_creer_echeancier_tva_wizard" model="ir.actions.act_window">
            <field name="name">Echeances TVA et Notaire</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">creer.echeancier.tva.wizard</field>
            <!--            <field name="view_type">form</field>-->
            <field name="view_mode">form</field>
            <!--<field name="context">{'default_number': 1}</field>-->
            <field name="target">new</field>
        </record>

        <record id="view_move_echeancier_form" model="ir.ui.view">
            <field name="name">account.move.echeancier.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="echeance_ok" invisible="1"/>
                </xpath>

                <xpath expr="//button[@name='action_invoice_sent']" position="after">
                    <button string="Créer écheances tva et notaire" name="%(action_creer_echeancier_tva_wizard)d"
                            type="action" class="oe_highlight"
                            attrs="{'invisible': ['|', ('echeance_ok', '=', True), ('state', 'in', ('draft', 'cancel',))]}"/>
                </xpath></field>
        </record>

    </data>
</openerp>
