<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="ordre_paiement_tree_view">
            <field name="name">ordre.paiement.tree</field>
            <field name="model">ordre.paiement</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree create="false" string="Ordres de paiement" decoration-success="state == 'done'"
                      decoration-info="state == 'open'" decoration-muted="state == 'cancel'">
                    <field name="name"/>
                    <field name="order_id"/>
                    <field name="echeance_id"/>
                    <field name="date"/>
                    <field name="partner_id"/>
                    <field name="project_id"/>
                    <field name="commercial_id"/>
                    <field name="amount" sum="total"/>
                    <field name="mode_paiement_id"/>
                    <field name="objet"/>
                    <field name="state"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="ordre_paiement_form_view">
            <field name="name">Ordre de paiement</field>
            <field name="model">ordre.paiement</field>
            <field name="arch" type="xml">
                <form string="Ordre de paiement">
                    <header>
                        <button string="Enregistrer le paiement" name="action_print_recu_paiement" type="object"
                                class="oe_highlight" states="open" groups="crm_echeancier.group_caisse_manager"/>
                        # group rajout�e par OMARI 28/04/2022
                        <button name="action_cancel" string="Annuler l'ordre" states="open" type="object"/>
                        <button name="action_cancel" string="Annuler l'ordre et le paiement" class="btn-danger"
                                states="done" type="object"/>
                        <field name="state" nolabel="1" widget="statusbar" statusbar_visible="open,done"/>
                    </header>
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <group>
                                <field name="order_id"/>
                                <field name="echeance_id"/>
                                <field name="partner_id"/>
                                <field name="partner_reference"/>
                                <field name="project_id"/>
                                <field name="commercial_id"/>
                                <field name="company_id"/>
                            </group>
                            <group>
                                <field name="mode_paiement_id" options="{'no_create': True, 'no_open': True}"/>
                                <field name="doc_payment_id"
                                       attrs="{'invisible':[('mode_paiement_id','not in', (1,3))]}"/>
                                <field name="cheque_ordonateur"
                                       attrs="{'invisible':[('mode_paiement_id','not in', (1,3))]}"/>
                                <field name="cheque_domiciliation"
                                       attrs="{'invisible':[('mode_paiement_id','not in', (1,3))]}"/>
                                <field name="cheque_date" attrs="{'invisible':[('mode_paiement_id','not in', (1,3))]}"/>
                                <field name="cheque_objet"
                                       attrs="{'invisible':[('mode_paiement_id','not in', (1,3))]}"/>
                                <field name="cheque_type" attrs="{'invisible':[('mode_paiement_id','not in', (1,3))]}"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="objet"/>
                                <field name="amount"/>
                                <field name="amount_lettre" invisible="1"/>
                                <field name="payment_id" attrs="{'invisible':[('payment_id','=', False)]}"/>
                            </group>
                            <group/>


                        </group>

                        <notebook>
                            <page string="Observation">
                                <field name="observation"/>
                            </page>
                            <page string="Annulation" attrs="{'invisible':[('state','not in', ('cancel'))]}">
                                <group>
                                    <field name="motif_annulation_id"/>
                                    <field name="annuler_user_id"/>
                                    <field name="date_annulation"/>
                                </group>
                            </page>
                        </notebook>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_ordre_paiement_filter" model="ir.ui.view">
            <field name="name">ordre.paiement.search.view</field>
            <field name="model">ordre.paiement</field>
            <field name="arch" type="xml">
                <search string="ordre de paiement Search">
                    <!-- permet une recherche "directe" -->
                    <group col="10" colspan="4">
                        <field name="name"/>
                        <field name="order_id"/>
                        <field name="partner_id"
                               filter_domain="['|', '|',  ('partner_id.name', 'ilike', self), ('partner_id.code_client', 'ilike', self), ('partner_id.num_pi', 'ilike', self)]"/>
                        <field name="project_id"/>
                        <field name="observation"/>
                        <separator/>
                        <filter name="open" string="En instance de paiement" domain="[('state', '=', 'open')]"/>
                        <filter name="paid" string="Payés" domain="[('state', '=', 'done')]"/>
                        <filter name="cancel" string="Annulés" domain="[('state', '=', 'cancel')]"/>

                        <filter name="late" string="En retard"
                                domain="['&amp;', ('date', '&lt;', time.strftime('%%Y-%%m-%%d')), ('state', '=', 'open')]"/>
                        <separator/>

                    </group>
                    <!-- Permet le regroupement -->
                    <separator/>
                    <group expand="0" string="Grouper par">
                        <filter string="Commercial" name="commercial_id" context="{'group_by':'commercial_id'}"/>
                        <filter string="Projet" name="project_id" context="{'group_by':'project_id'}"/>
                    </group>
                    <separator/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_ordre_paiement_tree_view_all">
            <field name="name">Ordre de paiement</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ordre.paiement</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="ordre_paiement_tree_view"/>
            <field name="domain"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Cliquez ici pour créer un nouvel ordre de paiement.
                </p>
                <p>

                </p>
                <p>

                </p>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_ordre_paiement_tree_view">
            <field name="name">Ordre de paiement</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ordre.paiement</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state', '=', 'open')]</field>
            <field name="view_id" ref="ordre_paiement_tree_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Cliquez ici pour créer un nouvel ordre de paiement.
                </p>
                <p>

                </p>
                <p>

                </p>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_ordre_paiement_payment_tree_view">
            <field name="name">Ordre de paiement en cours</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ordre.paiement</field>
            <field name="view_mode">tree,form</field>
            <field eval="False" name="view_id"/>
            <field name="search_view_id" ref="view_ordre_paiement_filter"/>
            <field name="domain">[('state', '=', 'open')]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Aucun ordre de paiement a traiter.
                </p>
                <p>

                </p>
                <p>

                </p>
            </field>
        </record>

        <record id="action_ordre_paiement_payment_tree_view1" model="ir.actions.act_window.view">
            <field eval="1" name="sequence"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="ordre_paiement_tree_view"/>
            <field name="act_window_id" ref="action_ordre_paiement_payment_tree_view"/>
        </record>

        <record id="action_ordre_paiement_payment_tree_view2" model="ir.actions.act_window.view">
            <field eval="2" name="sequence"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="ordre_paiement_form_view"/>
            <field name="act_window_id" ref="action_ordre_paiement_payment_tree_view"/>
        </record>

    </data>
</openerp>
