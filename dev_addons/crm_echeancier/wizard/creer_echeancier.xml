<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="creer_echeancier_wizard_form_view" model="ir.ui.view">
            <field name="name">creer.echeancier.wizard.form</field>
            <field name="model">creer.echeancier.wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Nouvel echeancier">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="step1"/>
                    </header>
                    <sheet>
                    <group>
                        <group string="Informations">
                            <field name="name"/>
                            <field name="project_id"/>
                            <label for="avancement"/>
                                    <div name="avancement" class="o_row">
                                        <field name="avancement" /> %%
<!--                                        <label string=" %% " />-->
                                    </div>
                            <field name="amount_total"/>
                            <field name="amount_tva"/>
                            <field name="method"/>
                        </group>
                        <group></group>
                        <group string="Premier paiement" states="method1">
                            <label for="first_payment"/>
                                <div name="amount_div" class="o_row">
                                    <field name="first_payment"/>
                                    <field name="currency_id" options="{'no_create': True, 'no_open': True}"/>
                                </div>
                            <field name="date_first_payment"/>
                        </group>
                        <group string="Echeances" states="method1">
                            <field name="date"/>
                            <field name="number"/>
                            <field name="periode"/>
                        </group>
                        <group string="Autres paramÃ©tres" states="method1,method2" invisible="1">
                            <field name="tva"/>
                            <label for="montant_tva" attrs="{'invisible':[('tva','=',False)]}"/>
                                <div name="amount_div" class="o_row"  attrs="{'invisible':[('tva','=',False)]}">
                                    <field name="montant_tva"/>
                                    <field name="currency_id" options="{'no_create': True, 'no_open': True}"/>
                                </div>
                            <separator/><separator/>

                            <field name="notaire"/>
                            <label for="montant_notaire"  attrs="{'invisible':[('notaire','=',False)]}"/>
                                <div name="amount_div" class="o_row"   attrs="{'invisible':[('notaire','=',False)]}">
                                    <field name="montant_notaire"/>
                                    <field name="currency_id" options="{'no_create': True, 'no_open': True}"/>
                                </div>
                        </group>

                    </group>
                        <field name="echeancier_ids" states="method2">
                            <tree editable="top">
                                <field name="name"/>
                                <field name="taux_av"/>
                                <field name="taux_py"/>
                                <field name="date"/>
                                <field name="amount"/>
                            </tree>
                        </field>

                    <footer>
                         <button class="oe_highlight" string="Appliquer" name="action_appliquer" type="object"/> or
                         <button class="oe_link" string="Annuler" special="cancel"/>
                    </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
