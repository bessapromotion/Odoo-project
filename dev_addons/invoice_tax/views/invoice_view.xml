<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="change_tax_wizard_form_view" model="ir.actions.act_window">
            <field name="name">Changement TVA</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">change.tax.wizard</field>
<!--            <field name="view_type">form</field>-->
            <field name="view_mode">form</field>
            <!--<field name="context">{'default_number': 1}</field>-->
            <field name="target">new</field>
        </record>

        <record id="view_invoice_change_tax_form" model="ir.ui.view">
            <field name="name">account.move.change.tax.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[1]" position="after">
                    <button string="Changement TVA" name="%(change_tax_wizard_form_view)d" type="action"
                        attrs="{'invisible': [('state', 'not in', ('open', 'in_payment',))]}"/>
                </xpath>

                <xpath expr="//field[@name='tax_totals_json']" position="after">
                    <field name="amount_declared" readonly="1"/>
                </xpath>

            </field>
        </record>

    </data>
</openerp>
